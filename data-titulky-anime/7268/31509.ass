Dialogue: 0,0:00:59.28,0:01:05.69,OPKara,,0000,0000,0000,,Ó květina, vyprahlá ve světle úsvitu,{\be1\fad(200,200)}
Dialogue: 0,0:01:05.92,0:01:09.37,OPKara,,0000,0000,0000,,natahujíc se po nespadlém dešti,{\be1\fad(200,200)}
Dialogue: 0,0:01:09.37,0:01:16.42,OPKara,,0000,0000,0000,,upadajíc v neprocitnutelný spánek.{\be1\fad(200,200)}
Dialogue: 0,0:01:26.97,0:01:30.33,OPKara,,0000,0000,0000,,Zlehka někdo volá pro ráj temnoty.{\be1\fad(200,200)}
Dialogue: 0,0:01:30.33,0:01:31.98,OPKara,,0000,0000,0000,,Je to lež, anebo sen?{\be1\fad(200,200)}
Dialogue: 0,0:01:31.98,0:01:34.07,OPKara,,0000,0000,0000,,Tak či tak, už je to ztraceno.{\be1\fad(200,200)}
Dialogue: 0,0:01:34.07,0:01:40.13,OPKara,,0000,0000,0000,,Co získáš přednesením svého srdce?{\be1\fad(200,200)}
Dialogue: 0,0:01:40.48,0:01:44.20,OPKara,,0000,0000,0000,,Pohleď skrze ty oči.{\be1\fad(200,200)}
Dialogue: 0,0:01:44.20,0:01:47.42,OPKara,,0000,0000,0000,,Život je dost směšný a prchavý na to, aby byl ukraden.{\be1\fad(200,200)}
Dialogue: 0,0:01:47.42,0:01:50.83,OPKara,,0000,0000,0000,,Bude dnešek dnem, kdy dosáhneš konce,{\be1\fad(200,200)}
Dialogue: 0,0:01:50.83,0:01:54.04,OPKara,,0000,0000,0000,,který čeká nás všechny?{\be1\fad(200,200)}
Dialogue: 0,0:01:54.04,0:01:57.59,OPKara,,0000,0000,0000,,Ten měsíček, který zpívá o propasti{\be1\fad(200,200)}
Dialogue: 0,0:01:57.59,0:02:01.30,OPKara,,0000,0000,0000,,tiše rozkvete.{\be1\fad(200,200)}
Dialogue: 0,0:02:01.30,0:02:04.47,OPKara,,0000,0000,0000,,Nenávist a smutek{\be1\fad(200,200)}
Dialogue: 0,0:02:04.47,0:02:08.18,OPKara,,0000,0000,0000,,jsou spolu spojeny v těch očích.{\be1\fad(200,200)}
Dialogue: 0,0:02:08.18,0:02:11.32,OPKara,,0000,0000,0000,,Ten měsíček, který zpívá o zániku,{\be1\fad(200,200)}
Dialogue: 0,0:02:11.32,0:02:14.93,OPKara,,0000,0000,0000,,je zaléván osaměním,{\be1\fad(200,200)}
Dialogue: 0,0:02:14.93,0:02:18.17,OPKara,,0000,0000,0000,,natahujíc se po nespadlém dešti,{\be1\fad(200,200)}
Dialogue: 0,0:02:18.17,0:02:24.60,OPKara,,0000,0000,0000,,upadajíc v neprocitnutelný spánek.{\be1\fad(200,1000)}
