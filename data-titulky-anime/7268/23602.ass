Dialogue: 0,0:01:12.30,0:01:18.71,OPKara,,0000,0000,0000,,O květino, usychající ve světle svítání{\be1\fad(200,200)}
Dialogue: 0,0:01:18.94,0:01:22.39,OPKara,,0000,0000,0000,,a toužící po nespadlém dešti,{\be1\fad(200,200)}
Dialogue: 0,0:01:22.39,0:01:29.44,OPKara,,0000,0000,0000,,upadni do věčného spánku.{\be1\fad(200,200)}
Dialogue: 0,0:01:39.99,0:01:43.35,OPKara,,0000,0000,0000,,Někdo se lehce dožaduje ráje temnoty.{\be1\fad(200,200)}
Dialogue: 0,0:01:43.35,0:01:45.00,OPKara,,0000,0000,0000,,Je to snad lež či sen?{\be1\fad(200,200)}
Dialogue: 0,0:01:45.00,0:01:47.09,OPKara,,0000,0000,0000,,Ani jedno, je to už pryč.{\be1\fad(200,200)}
Dialogue: 0,0:01:47.09,0:01:53.15,OPKara,,0000,0000,0000,,Co získáš tím, že se zbavíš svého srdce?{\be1\fad(200,200)}
Dialogue: 0,0:01:53.50,0:01:57.22,OPKara,,0000,0000,0000,,Prohlížím skrz ty oči,{\be1\fad(200,200)}
Dialogue: 0,0:01:57.22,0:02:00.32,OPKara,,0000,0000,0000,,život je dost hloupý a pomíjivý na to, aby byl ukraden.{\be1\fad(200,200)}
Dialogue: 0,0:02:00.32,0:02:03.85,OPKara,,0000,0000,0000,,Bude dnešek dnem, kdy budeš truchlit kvůli konci,{\be1\fad(200,200)}
Dialogue: 0,0:02:03.85,0:02:07.06,OPKara,,0000,0000,0000,,který čeká nás všechny?{\be1\fad(200,200)}
Dialogue: 0,0:02:07.06,0:02:10.66,OPKara,,0000,0000,0000,,Měsíčku, co zpíváš o propasti,{\be1\fad(200,200)}
Dialogue: 0,0:02:10.66,0:02:14.32,OPKara,,0000,0000,0000,,tiše vzkvétáš.{\be1\fad(200,200)}
Dialogue: 0,0:02:14.32,0:02:17.49,OPKara,,0000,0000,0000,,Nenávist a zármutek{\be1\fad(200,200)}
Dialogue: 0,0:02:17.49,0:02:21.20,OPKara,,0000,0000,0000,,se spolu pojí v těch očích.{\be1\fad(200,200)}
Dialogue: 0,0:02:21.20,0:02:24.34,OPKara,,0000,0000,0000,,Měsíčku, co zpíváš o zániku,{\be1\fad(200,200)}
Dialogue: 0,0:02:24.34,0:02:27.95,OPKara,,0000,0000,0000,,jsi zalit samotou{\be1\fad(200,200)}
Dialogue: 0,0:02:27.95,0:02:31.19,OPKara,,0000,0000,0000,,a toužíš po nespadlém dešti,{\be1\fad(200,200)}
Dialogue: 0,0:02:31.19,0:02:37.62,OPKara,,0000,0000,0000,,upadni do věčného spánku.{\be1\fad(200,1000)}
