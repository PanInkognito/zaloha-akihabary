Dialogue: 0,0:00:16.28,0:00:22.69,OPKara,,0000,0000,0000,,O květino, usychající ve světle svítání{\be1\fad(200,200)}
Dialogue: 0,0:00:22.92,0:00:26.37,OPKara,,0000,0000,0000,,a toužící po nespadlém dešti,{\be1\fad(200,200)}
Dialogue: 0,0:00:26.37,0:00:33.42,OPKara,,0000,0000,0000,,upadni do věčného spánku.{\be1\fad(200,200)}
Dialogue: 0,0:00:43.97,0:00:47.33,OPKara,,0000,0000,0000,,Někdo se lehce dožaduje ráje temnoty.{\be1\fad(200,200)}
Dialogue: 0,0:00:47.33,0:00:48.98,OPKara,,0000,0000,0000,,Je to snad lež či sen?{\be1\fad(200,200)}
Dialogue: 0,0:00:48.98,0:00:54.06,OPKara,,0000,0000,0000,,Když se vzdáš svého těla a duše,{\be1\fad(200,200)}
Dialogue: 0,0:00:54.06,0:00:57.13,OPKara,,0000,0000,0000,,čeho tím dosáhneš?{\be1\fad(200,200)}
Dialogue: 0,0:00:57.48,0:01:01.20,OPKara,,0000,0000,0000,,Žvot je dost křehký a pomíjivý,{\be1\fad(200,200)}
Dialogue: 0,0:01:01.20,0:01:04.30,OPKara,,0000,0000,0000,,aby mě zbavil slz.{\be1\fad(200,200)}
Dialogue: 0,0:01:04.30,0:01:07.83,OPKara,,0000,0000,0000,,Křičím zděšením{\be1\fad(200,200)}
Dialogue: 0,0:01:07.83,0:01:11.04,OPKara,,0000,0000,0000,,ze smrti, která čeká nás všechny?{\be1\fad(200,200)}
Dialogue: 0,0:01:11.04,0:01:14.64,OPKara,,0000,0000,0000,,Měsíčku, co zpíváš o propasti,{\be1\fad(200,200)}
Dialogue: 0,0:01:14.64,0:01:18.30,OPKara,,0000,0000,0000,,tiše vzkvétáš.{\be1\fad(200,200)}
Dialogue: 0,0:01:18.30,0:01:21.47,OPKara,,0000,0000,0000,,Nenávist a zármutek{\be1\fad(200,200)}
Dialogue: 0,0:01:21.47,0:01:25.18,OPKara,,0000,0000,0000,,jsou vzájemně srostlé kořeny.{\be1\fad(200,200)}
Dialogue: 0,0:01:25.18,0:01:28.32,OPKara,,0000,0000,0000,,Měsíčku, co zpíváš o zániku,{\be1\fad(200,200)}
Dialogue: 0,0:01:28.32,0:01:31.93,OPKara,,0000,0000,0000,,jsi zalit samotou.{\be1\fad(200,200)}
Dialogue: 0,0:01:31.93,0:01:35.17,OPKara,,0000,0000,0000,,Toužíš po nespadlém dešti{\be1\fad(200,200)}
Dialogue: 0,0:01:35.17,0:01:41.60,OPKara,,0000,0000,0000,,a upadáš do věčného spánku.{\be1\fad(200,1000)}
