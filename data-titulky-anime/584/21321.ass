Dialogue: 0,0:01:31.65,0:01:35.03,def2,(null),0000,0000,0000,,Markíz Lohengramm, toto je pomsta za môjho pána!
Dialogue: 0,0:01:54.86,0:01:56.26,def2,(null),0000,0000,0000,,Čo si to urobil?!
Dialogue: 0,0:01:56.26,0:01:57.36,def2,(null),0000,0000,0000,,Ty bastard!
Dialogue: 0,0:02:11.37,0:02:12.87,def2,(null),0000,0000,0000,,Kircheis...!
Dialogue: 0,0:02:13.92,0:02:16.12,def2,(null),0000,0000,0000,,Admirál, tu máte...
Dialogue: 0,0:02:17.02,0:02:18.02,def2,(null),0000,0000,0000,,Rozdeľte ich!
Dialogue: 0,0:02:18.02,0:02:19.31,def2,(null),0000,0000,0000,,Admirál Kircheis...
Dialogue: 0,0:02:19.31,0:02:20.92,def2,(null),0000,0000,0000,,Vydržte!
Dialogue: 0,0:02:20.92,0:02:22.12,def2,(null),0000,0000,0000,,Admirál...
Dialogue: 0,0:02:22.12,0:02:24.02,def2,(null),0000,0000,0000,,Lekár!\NZavolajte lekára!
Dialogue: 0,0:02:24.02,0:02:25.62,def2,(null),0000,0000,0000,,Už je neskoro...
Dialogue: 0,0:02:42.48,0:02:45.48,def2,(null),0000,0000,0000,,Odpusťte mi, princ Braunschweig.
Dialogue: 0,0:02:45.48,0:02:49.79,def2,(null),0000,0000,0000,,Ja, Ansbach, som nedokázal splniť svoj sľub.
Dialogue: 0,0:02:49.79,0:02:55.19,def2,(null),0000,0000,0000,,Koľko rokov budete musieť čakať, kým sa ten bloďatý sopliak prepadne do pekla?
Dialogue: 0,0:02:55.19,0:02:56.29,def2,(null),0000,0000,0000,,Ako sa opovažuješ!
Dialogue: 0,0:02:56.29,0:02:58.39,def2,(null),0000,0000,0000,,Ty bastard!
Dialogue: 0,0:02:58.39,0:03:03.69,def2,(null),0000,0000,0000,,Aspoň som tomu sopliakovi zobral jeho druhú polovicu.
Dialogue: 0,0:03:03.69,0:03:05.88,def2,(null),0000,0000,0000,,Počkajte na mňa vo Valhale!
Dialogue: 0,0:03:06.88,0:03:08.41,def2,(null),0000,0000,0000,,Nerob to!
Dialogue: 0,0:03:08.41,0:03:09.11,def2,(null),0000,0000,0000,,Jed?
Dialogue: 0,0:03:09.11,0:03:11.41,def2,(null),0000,0000,0000,,Nedovoľte mu prehltnúť!
Dialogue: 0,0:03:14.36,0:03:16.96,def2,(null),0000,0000,0000,,Taká podlosť...
Dialogue: 0,0:03:16.96,0:03:18.86,def2,(null),0000,0000,0000,,Môže tu byť ešte ďalšia zbraň!
Dialogue: 0,0:03:18.86,0:03:20.46,def2,(null),0000,0000,0000,,Ihneď odstráňte rakvu!
Dialogue: 0,0:03:20.46,0:03:21.75,def2,(null),0000,0000,0000,,Do práce!
Dialogue: 0,0:03:21.75,0:03:23.36,def2,(null),0000,0000,0000,,Musíme odniesť Ansbachove telo!
Dialogue: 0,0:03:23.36,0:03:24.56,def2,(null),0000,0000,0000,,Rozkaz!
Dialogue: 0,0:04:00.48,0:04:02.58,def2,(null),0000,0000,0000,,Kircheis...
Dialogue: 0,0:04:03.98,0:04:06.38,def2,(null),0000,0000,0000,,Lord Reinhard...
Dialogue: 0,0:04:06.38,0:04:09.69,def2,(null),0000,0000,0000,,...ste...v poriadku?
Dialogue: 0,0:04:09.69,0:04:11.19,def2,(null),0000,0000,0000,,Kircheis...
Dialogue: 0,0:04:11.19,0:04:12.69,def2,(null),0000,0000,0000,,Som vďaka tebe.
Dialogue: 0,0:04:12.69,0:04:14.18,def2,(null),0000,0000,0000,,Vidíš ma?
Dialogue: 0,0:04:14.99,0:04:21.19,def2,(null),0000,0000,0000,,Už... vám nebudem môcť viac slúžiť, lord Reinhard.
Dialogue: 0,0:04:21.19,0:04:22.39,def2,(null),0000,0000,0000,,Odpusťte mi.
Dialogue: 0,0:04:22.39,0:04:24.29,def2,(null),0000,0000,0000,,Hlupák! O čom to hovoríš?
Dialogue: 0,0:04:24.29,0:04:25.59,def2,(null),0000,0000,0000,,Lekár tu bude každú chvíľu.
Dialogue: 0,0:04:25.59,0:04:27.20,def2,(null),0000,0000,0000,,Uzdravíš sa.
Dialogue: 0,0:04:27.20,0:04:30.40,def2,(null),0000,0000,0000,,A keď ti bude lepšie, navštívime sestru a povieme jej o našom víťazstve.
Dialogue: 0,0:04:30.40,0:04:32.80,def2,(null),0000,0000,0000,,Súhlasíš?
Dialogue: 0,0:04:34.20,0:04:36.40,def2,(null),0000,0000,0000,,Lord Reinhard...
Dialogue: 0,0:04:36.40,0:04:38.80,def2,(null),0000,0000,0000,,Už nehovor, kým nepríde lekár.
Dialogue: 0,0:04:38.80,0:04:43.20,def2,(null),0000,0000,0000,,Prosím... dobyte vesmír...
Dialogue: 0,0:04:43.20,0:04:46.30,def2,(null),0000,0000,0000,,Áno, samozrejme.
Dialogue: 0,0:04:46.30,0:04:48.01,def2,(null),0000,0000,0000,,Spolu s tebou.
Dialogue: 0,0:04:48.01,0:04:53.51,def2,(null),0000,0000,0000,,Povedzte prosím lady Annerose...
Dialogue: 0,0:04:53.51,0:04:56.98,def2,(null),0000,0000,0000,,...že Sieg splnil svoj dávny sľub.
Dialogue: 0,0:04:59.11,0:05:00.91,def2,(null),0000,0000,0000,,Nie!
Dialogue: 0,0:05:00.91,0:05:02.81,def2,(null),0000,0000,0000,,Nič jej nepoviem!
Dialogue: 0,0:05:02.81,0:05:04.60,def2,(null),0000,0000,0000,,Povieš jej to sám!
Dialogue: 0,0:05:04.60,0:05:06.61,def2,(null),0000,0000,0000,,Osobne!
Dialogue: 0,0:05:06.61,0:05:09.32,def2,(null),0000,0000,0000,,Nechcem jej to povedať.\NRozumieš?
Dialogue: 0,0:05:09.32,0:05:12.82,def2,(null),0000,0000,0000,,Navštívime ju spoločne, Kircheis!
Dialogue: 0,0:05:21.92,0:05:23.82,def2,(null),0000,0000,0000,,Kircheis !\NOdpovedz mi!
Dialogue: 0,0:05:23.82,0:05:27.64,def2,(null),0000,0000,0000,,Kircheis ! Povedz niečo!\NKircheis !
Dialogue: 0,0:05:27.64,0:05:30.48,def2,(null),0000,0000,0000,,Je to zbytočné.\NJe mŕtvy.
Dialogue: 0,0:05:32.54,0:05:35.70,def2,(null),0000,0000,0000,,Už odpočíva v pokoji.
Dialogue: 0,0:05:36.54,0:05:39.03,def2,(null),0000,0000,0000,,To je lož, Mittermeyer!
Dialogue: 0,0:05:39.03,0:05:41.34,def2,(null),0000,0000,0000,,Klamete!
Dialogue: 0,0:05:41.34,0:05:45.48,def2,(null),0000,0000,0000,,Kircheis by nikdy nezomrel skôr než ja.
Dialogue: 0,0:05:48.35,0:05:51.35,def2,(null),0000,0000,0000,,No tak, otvor oči, Kircheis!
Dialogue: 0,0:05:51.35,0:05:52.75,def2,(null),0000,0000,0000,,Kircheis...
Dialogue: 0,0:05:52.75,0:05:54.65,def2,(null),0000,0000,0000,,Kircheis !
Dialogue: 0,0:05:54.65,0:05:56.35,def2,(null),0000,0000,0000,,{\pos(315,444)}Kircheis !
Dialogue: 0,0:06:08.61,0:06:10.90,def2,(null),0000,0000,0000,,Ako sa má markíz Lohengramm?
Dialogue: 0,0:06:10.90,0:06:14.81,def2,(null),0000,0000,0000,,Tak ako predtým, potichu sedí.
Dialogue: 0,0:06:22.81,0:06:28.62,def2,(null),0000,0000,0000,,Nevedel som, že je markíz Lohengramm taký labilný.
Dialogue: 0,0:06:28.62,0:06:30.72,def2,(null),0000,0000,0000,,Mýlite sa, Műller.
Dialogue: 0,0:06:30.72,0:06:34.32,def2,(null),0000,0000,0000,,Keby ste zomreli vy alebo ja, veľmi by za nami nesmútil.
Dialogue: 0,0:06:34.32,0:06:37.12,def2,(null),0000,0000,0000,,Siegfried Kircheis je výnimočný.
Dialogue: 0,0:06:37.12,0:06:39.02,def2,(null),0000,0000,0000,,....bol výnimočný.
Dialogue: 0,0:06:39.02,0:06:43.12,def2,(null),0000,0000,0000,,Je to, ako by markíz Lohengramm stratil svoju druhú polovicu.
Dialogue: 0,0:06:43.12,0:06:46.03,def2,(null),0000,0000,0000,,A vlastnou chybou.
Dialogue: 0,0:06:47.83,0:06:53.23,def2,(null),0000,0000,0000,,Na tom, čo sa stalo, nič nezmeníme. Otázkou je, čo teraz?
Dialogue: 0,0:06:55.03,0:06:58.13,def2,(null),0000,0000,0000,,Musíme markíza Lohengramma postaviť znova na nohy.
Dialogue: 0,0:06:58.13,0:07:00.33,def2,(null),0000,0000,0000,,Musíme ho z toho dostať.
Dialogue: 0,0:07:00.33,0:07:06.14,def2,(null),0000,0000,0000,,Inak sa prepadneme do hlbín galaxie a budú o nás spievať v žalospevoch.
Dialogue: 0,0:07:06.14,0:07:07.84,def2,(null),0000,0000,0000,,Ale čo máme spraviť?
Dialogue: 0,0:07:07.84,0:07:10.14,def2,(null),0000,0000,0000,,Ako mu máme pomôcť?
Dialogue: 0,0:07:10.14,0:07:14.24,def2,(null),0000,0000,0000,,Možno on na niečo príde.
Dialogue: 0,0:07:14.24,0:07:15.64,def2,(null),0000,0000,0000,,On?
Dialogue: 0,0:07:15.64,0:07:16.74,def2,(null),0000,0000,0000,,Vieš kto.
Dialogue: 0,0:07:16.74,0:07:18.24,def2,(null),0000,0000,0000,,Ten, ktorý tu nie je.
Dialogue: 0,0:07:18.24,0:07:20.24,def2,(null),0000,0000,0000,,Oberstein?
Dialogue: 0,0:07:22.04,0:07:26.75,def2,(null),0000,0000,0000,,Nebolo by sa to stalo, keby zas nepchal do toho nos!
Dialogue: 0,0:07:26.75,0:07:29.14,def2,(null),0000,0000,0000,,Myslím, že by sme ho mali požiadať o radu.
Dialogue: 0,0:07:29.14,0:07:31.95,def2,(null),0000,0000,0000,,Vzhľadom na okolnosti nemáme na výber.
Dialogue: 0,0:07:31.95,0:07:35.95,def2,(null),0000,0000,0000,,Čo urobíme, ak sa pokúsi presadiť svoju autoritu?
Dialogue: 0,0:07:35.95,0:07:39.75,def2,(null),0000,0000,0000,,Nebyť markíza Lohengramma, nemal by kam ísť.
Dialogue: 0,0:07:39.75,0:07:40.95,def2,(null),0000,0000,0000,,Okrem toho...
Dialogue: 0,0:07:40.95,0:07:44.45,def2,(null),0000,0000,0000,,...ak sa pokúsi využiť situáciu vo svoj prospech...
Dialogue: 0,0:07:44.45,0:07:48.07,def2,(null),0000,0000,0000,,...podnikneme proti nemu príslušné opatrenia.
Dialogue: 0,0:07:48.07,0:07:49.47,def2,(null),0000,0000,0000,,To je pravda.
Dialogue: 0,0:07:49.47,0:07:53.63,def2,(null),0000,0000,0000,,My sme tí, čo máme na svojej strane vojenskú silu.
Dialogue: 0,0:07:56.67,0:07:58.57,def2,(null),0000,0000,0000,,S dovolením...
Dialogue: 0,0:07:58.57,0:08:01.76,def2,(null),0000,0000,0000,,...Jeho Excelencia, náčelník štábu s vami chce hovoriť.
Dialogue: 0,0:08:01.76,0:08:04.17,def2,(null),0000,0000,0000,,Ten vie, kedy sa má ukázať.
Dialogue: 0,0:08:06.08,0:08:08.48,def2,(null),0000,0000,0000,,Tak dlho rokujete...
Dialogue: 0,0:08:08.48,0:08:11.38,def2,(null),0000,0000,0000,,...a ešte ste sa na ničom nedohodli?
Dialogue: 0,0:08:12.18,0:08:16.28,def2,(null),0000,0000,0000,,Keďže už nie je žiaden prvý či druhý v poradí...
Dialogue: 0,0:08:16.28,0:08:19.18,def2,(null),0000,0000,0000,,...chýba nám prostredník.
Dialogue: 0,0:08:21.68,0:08:25.59,def2,(null),0000,0000,0000,,Máte nejaké nápady, náčelník štábu?
Dialogue: 0,0:08:25.59,0:08:26.99,def2,(null),0000,0000,0000,,Zopár.
Dialogue: 0,0:08:28.09,0:08:30.99,def2,(null),0000,0000,0000,,Požiadal by som o láskavosť staršiu sestru markíza Lohengramma.
Dialogue: 0,0:08:30.99,0:08:33.29,def2,(null),0000,0000,0000,,Grófku z Grűnewaldu?
Dialogue: 0,0:08:33.29,0:08:36.09,def2,(null),0000,0000,0000,,Uvažovali sme o tom, ale...
Dialogue: 0,0:08:37.99,0:08:42.79,def2,(null),0000,0000,0000,,Zdá sa, že nikto z vás nemá odvahu jej to oznámiť.
Dialogue: 0,0:08:42.79,0:08:46.30,def2,(null),0000,0000,0000,,Podujmem sa na to, ale na oplátku chcem niečo od vás.
Dialogue: 0,0:08:47.00,0:08:51.00,def2,(null),0000,0000,0000,,Musíme chytiť zločinca, ktorý zabil admirála Kircheisa.
Dialogue: 0,0:08:52.00,0:08:53.19,def2,(null),0000,0000,0000,,To je zvláštne...
Dialogue: 0,0:08:53.19,0:08:55.60,def2,(null),0000,0000,0000,,Nie je tým zločincom Ansbach?
Dialogue: 0,0:08:55.60,0:09:00.30,def2,(null),0000,0000,0000,,On bol len obyčajný vykonávateľ. Skutočný vinník je niekde inde.
Dialogue: 0,0:09:00.30,0:09:01.69,def2,(null),0000,0000,0000,,Je to vysokopostavená osoba.
Dialogue: 0,0:09:01.69,0:09:03.34,def2,(null),0000,0000,0000,,To je síce pravda...
Dialogue: 0,0:09:03.34,0:09:06.66,def2,(null),0000,0000,0000,,...ale princ Braunschweig je už mŕtvy.
Dialogue: 0,0:09:06.66,0:09:09.05,def2,(null),0000,0000,0000,,Nehovorím o princovi Braunschweigovi.
Dialogue: 0,0:09:09.86,0:09:11.76,def2,(null),0000,0000,0000,,Čo tým myslíte?
Dialogue: 0,0:09:11.76,0:09:14.36,def2,(null),0000,0000,0000,,Kto je podľa vás tým zločincom?
Dialogue: 0,0:09:14.36,0:09:17.00,def2,(null),0000,0000,0000,,Imperiálny ministerský predseda, princ Lichtenlade.
Dialogue: 0,0:09:19.05,0:09:23.76,def2,(null),0000,0000,0000,,Podľa vás sa snaží využiť situáciu na zneškodnenie možných súperov?
Dialogue: 0,0:09:23.76,0:09:25.07,def2,(null),0000,0000,0000,,Presne tak.
Dialogue: 0,0:09:25.07,0:09:27.97,def2,(null),0000,0000,0000,,Nechcem stáť na opačnej strane...
Dialogue: 0,0:09:27.97,0:09:30.17,def2,(null),0000,0000,0000,,...ale nemôžem sa vám postaviť za rovnakých podmienok.
Dialogue: 0,0:09:30.17,0:09:34.47,def2,(null),0000,0000,0000,,Skôr či neskôr Lichtenlade odstráni každého rivala.
Dialogue: 0,0:09:34.47,0:09:37.37,def2,(null),0000,0000,0000,,Presne tak isto vníma Lichtenlade aj nás.
Dialogue: 0,0:09:37.37,0:09:42.97,def2,(null),0000,0000,0000,,Už teraz je jasné, že Lichtenlade plánuje spôsob, akým by zničil markíza Lohengramma.
Dialogue: 0,0:09:42.97,0:09:46.28,def2,(null),0000,0000,0000,,A čo ak ide o falošné obvinenie?
Dialogue: 0,0:09:46.28,0:09:48.98,def2,(null),0000,0000,0000,,Mali by sme sa čo najrýchlejšie vrátiť na Odin.
Dialogue: 0,0:09:48.98,0:09:52.08,def2,(null),0000,0000,0000,,Zatknutím princa Lichtenladeho získame štátnu pečať.
Dialogue: 0,0:09:52.08,0:09:56.28,def2,(null),0000,0000,0000,,Tak môžeme zaistiť pre markíza Lohengramma vládne právo.
Dialogue: 0,0:09:56.28,0:10:02.78,def2,(null),0000,0000,0000,,Keď raz získame autoritu, čokoľvek neskôr urobíme, bude legálne.
Dialogue: 0,0:10:04.08,0:10:07.10,def2,(null),0000,0000,0000,,Intrigám a podvodom sa v takejto situácii nevyhneme.
Dialogue: 0,0:10:07.10,0:10:09.90,def2,(null),0000,0000,0000,,Mali by sme túto príležitosť využiť na odstránenie nepriateľov markíza Lohengramma.
Dialogue: 0,0:10:09.90,0:10:12.50,def2,(null),0000,0000,0000,,A tak získať nepopierateľnú autoritu.
Dialogue: 0,0:10:12.50,0:10:15.40,def2,(null),0000,0000,0000,,Mali by sme uskutočniť Obersteinov plán.
Dialogue: 0,0:10:15.40,0:10:16.70,def2,(null),0000,0000,0000,,Presne tak.
Dialogue: 0,0:10:16.70,0:10:20.50,def2,(null),0000,0000,0000,,Ak nebudeme ihneď konať, nepriateľ nás predbehne.
Dialogue: 0,0:10:20.50,0:10:21.80,def2,(null),0000,0000,0000,,Nejaké námietky?
Dialogue: 0,0:10:21.80,0:10:23.60,def2,(null),0000,0000,0000,,Nie!
Dialogue: 0,0:10:23.60,0:10:29.11,def2,(null),0000,0000,0000,,Vyberte z každej flotily najrýchlejšie lode a okamžite ich vyšlite na Odin.
Dialogue: 0,0:10:29.11,0:10:32.41,def2,(null),0000,0000,0000,,Reuental a ja sa ujmeme velenia.
Dialogue: 0,0:10:32.41,0:10:36.11,def2,(null),0000,0000,0000,,Ako najvyššie postavení admiráli na to máte právo.
Dialogue: 0,0:10:36.11,0:10:38.31,def2,(null),0000,0000,0000,,V tom prípade, Mecklinger, Lutz...
Dialogue: 0,0:10:38.31,0:10:40.41,def2,(null),0000,0000,0000,,...vezmite si na starosť zvyšok flotily.
Dialogue: 0,0:10:40.41,0:10:42.21,def2,(null),0000,0000,0000,,Ochráňte pevnosť Geiersburg.
Dialogue: 0,0:10:42.21,0:10:43.01,def2,(null),0000,0000,0000,,Rozkaz!
Dialogue: 0,0:10:43.01,0:10:44.01,def2,(null),0000,0000,0000,,Rozumiem.
Dialogue: 0,0:10:44.01,0:10:47.62,def2,(null),0000,0000,0000,,Nezabudnite udržať informáciu o smrti admirála Kircheisa v tajnosti.
Dialogue: 0,0:10:48.62,0:10:50.82,def2,(null),0000,0000,0000,,Takže do toho.
Dialogue: 0,0:10:50.82,0:10:52.12,def2,(null),0000,0000,0000,,Nesmieme stratiť ani minútu!
Dialogue: 0,0:10:52.12,0:10:53.82,def2,(null),0000,0000,0000,,Áno, pane!
Dialogue: 0,0:11:01.87,0:11:04.38,def2,(null),0000,0000,0000,,Cesta na Odin trvá 20 dní.
Dialogue: 0,0:11:04.38,0:11:06.38,def2,(null),0000,0000,0000,,Musíme ju čo najviac skrátiť.
Dialogue: 0,0:11:07.18,0:11:08.68,def2,(null),0000,0000,0000,,Plnou rýchlosťou vpred!
Dialogue: 0,0:11:08.68,0:11:11.98,def2,(null),0000,0000,0000,,Ukážte im, akí sú Čiernokopijníci rýchli!
Dialogue: 0,0:11:11.98,0:11:14.08,def2,(null),0000,0000,0000,,Teraz máme šancu získať späť našu česť.
Dialogue: 0,0:11:14.08,0:11:16.48,def2,(null),0000,0000,0000,,Nedovoľte ostatným flotilám, aby nás porazili.
Dialogue: 0,0:11:16.48,0:11:18.28,def2,(null),0000,0000,0000,,Vpred, nechajte oneskorencov za nami!
Dialogue: 0,0:11:18.28,0:11:20.00,def2,(null),0000,0000,0000,,Kto ostane pozadu, dostihne nás na Odine!
Dialogue: 0,0:11:34.94,0:11:37.24,def2,(null),0000,0000,0000,,Műller, rozostavte svoje lode na vonkajšiu orbitu.
Dialogue: 0,0:11:37.24,0:11:38.63,def2,(null),0000,0000,0000,,Zaistite našu kontrolu na priestorom.
Dialogue: 0,0:11:38.63,0:11:39.33,def2,(null),0000,0000,0000,,Rozkaz.
Dialogue: 0,0:11:39.33,0:11:41.84,def2,(null),0000,0000,0000,,Zvyšné flotily nech obsadia hlavné mesto.
Dialogue: 0,0:11:41.84,0:11:44.55,def2,(null),0000,0000,0000,,Ignorujte akékoľvek rozkazy z pevniny a núdzovo pristaňte.
Dialogue: 0,0:11:44.55,0:11:45.65,def2,(null),0000,0000,0000,,Vpred!
Dialogue: 0,0:11:55.75,0:11:58.64,def2,(null),0000,0000,0000,,Otvorte poklopy inak začneme strieľať!
Dialogue: 0,0:11:58.64,0:12:02.75,def2,(null),0000,0000,0000,,Pristaňte kdekoľvek to pôjde, na jazere alebo aj na predmestí.
Dialogue: 0,0:12:05.86,0:12:07.16,def2,(null),0000,0000,0000,,Čo sa to deje?
Dialogue: 0,0:12:07.16,0:12:10.08,def2,(null),0000,0000,0000,,Urobiť nálet nad hlavným mestom... taká nehoráznosť.
Dialogue: 0,0:12:12.46,0:12:14.06,def2,(null),0000,0000,0000,,Čo má znamenať táto nehanebnosť?
Dialogue: 0,0:12:14.06,0:12:19.08,def2,(null),0000,0000,0000,,Imperiálny ministerský predseda Lichtenlade, ste zatknutý.
Dialogue: 0,0:12:20.16,0:12:21.56,def2,(null),0000,0000,0000,,Z akého dôvodu?
Dialogue: 0,0:12:21.56,0:12:26.48,def2,(null),0000,0000,0000,,Za pokus o atentát na Jeho Excelenciu, markíza Lohengramma.
Dialogue: 0,0:12:26.48,0:12:28.98,def2,(null),0000,0000,0000,,To je absurdné!\NNemáte dôkaz!
Dialogue: 0,0:12:28.98,0:12:33.68,def2,(null),0000,0000,0000,,Ak je v Impériu niekto obvinený zo zločinu, dôkaz nie je vždy nevyhnutný.
Dialogue: 0,0:12:33.68,0:12:34.78,def2,(null),0000,0000,0000,,Čože?
Dialogue: 0,0:12:34.78,0:12:41.08,def2,(null),0000,0000,0000,,Pravdepodobne ste vždy počítali so zhovievavosťou vlastnej vlády.
Dialogue: 0,0:12:42.68,0:12:44.09,def2,(null),0000,0000,0000,,Zavrite ho.
Dialogue: 0,0:12:47.19,0:12:48.29,def2,(null),0000,0000,0000,,Prestaňte, prosím!
Dialogue: 0,0:12:48.29,0:12:50.69,def2,(null),0000,0000,0000,,Nemáte povolenie od cisára!
Dialogue: 0,0:12:51.69,0:12:54.19,def2,(null),0000,0000,0000,,Právomoci patria tomu, kto má v rukách skutočnú moc.
Dialogue: 0,0:12:54.19,0:12:55.59,def2,(null),0000,0000,0000,,Našli sme to, Excelencia!
Dialogue: 0,0:12:55.59,0:12:56.79,def2,(null),0000,0000,0000,,To je ono!
Dialogue: 0,0:12:56.79,0:12:58.99,def2,(null),0000,0000,0000,,To je imperiálna pečať.
Dialogue: 0,0:13:00.49,0:13:02.89,def2,(null),0000,0000,0000,,Slečna Hilda, poďte sa schovať.
Dialogue: 0,0:13:02.89,0:13:04.90,def2,(null),0000,0000,0000,,Nebojte sa.
Dialogue: 0,0:13:04.90,0:13:07.59,def2,(null),0000,0000,0000,,Odkiaľ sa tu vzali toľkí vojaci, slečna?
Dialogue: 0,0:13:07.59,0:13:10.20,def2,(null),0000,0000,0000,,Vojaci sa tu neobjavili len tak z ničoho nič.
Dialogue: 0,0:13:10.20,0:13:15.70,def2,(null),0000,0000,0000,,Nikto iný okrem markíza Lohengramma nemá takú veľkú flotilu.
Dialogue: 0,0:13:15.70,0:13:18.40,def2,(null),0000,0000,0000,,Myslím, že nás čaká búrlivá doba.
Dialogue: 0,0:13:18.40,0:13:23.08,def2,(null),0000,0000,0000,,Aj keď bude asi hektická, je to stále lepšie ako stagnácia.
Dialogue: 0,0:13:32.61,0:13:33.71,def2,(null),0000,0000,0000,,Vaša Excelencia...
Dialogue: 0,0:13:33.71,0:13:37.71,def2,(null),0000,0000,0000,,...prišla vám správa z hlavného mesta, Odinu.
Dialogue: 0,0:13:37.71,0:13:41.31,def2,(null),0000,0000,0000,,Je od grófky z Grűnewaldu.
Dialogue: 0,0:13:41.31,0:13:43.92,def2,(null),0000,0000,0000,,Vy ste jej to povedali!
Dialogue: 0,0:13:43.92,0:13:46.32,def2,(null),0000,0000,0000,,Povedali ste mojej sestre o Kircheisovi?!
Dialogue: 0,0:13:46.32,0:13:48.12,def2,(null),0000,0000,0000,,Áno.
Dialogue: 0,0:13:48.12,0:13:50.21,def2,(null),0000,0000,0000,,Ako ste sa opovážili...
Dialogue: 0,0:13:50.21,0:13:54.52,def2,(null),0000,0000,0000,,Obávam sa, že je aj nad vaše sily to naveky utajiť.
Dialogue: 0,0:13:54.52,0:13:55.82,def2,(null),0000,0000,0000,,Mlčte!
Dialogue: 0,0:13:55.82,0:13:58.52,def2,(null),0000,0000,0000,,Máte strach postaviť sa vlastnej sestre?
Dialogue: 0,0:13:58.52,0:13:59.42,def2,(null),0000,0000,0000,,Čože?
Dialogue: 0,0:13:59.42,0:14:01.00,def2,(null),0000,0000,0000,,V tom prípade si s ňou pohovorte.
Dialogue: 0,0:14:02.62,0:14:07.23,def2,(null),0000,0000,0000,,Vaša Excelencia, ja vás nezatracujem.
Dialogue: 0,0:14:07.23,0:14:12.73,def2,(null),0000,0000,0000,,Nesmiete sa naďalej takto týrať ani mi prenechávať vaše povinnosti.
Dialogue: 0,0:14:12.73,0:14:18.68,def2,(null),0000,0000,0000,,Namiesto utápania sa v minulosti, musíte čeliť budúcnosti.
Dialogue: 0,0:14:18.68,0:14:20.63,def2,(null),0000,0000,0000,,Inak sa nikam nedostanete.
Dialogue: 0,0:14:20.63,0:14:22.84,def2,(null),0000,0000,0000,,Keby vesmír padol do rúk niekoho iného...
Dialogue: 0,0:14:22.84,0:14:27.33,def2,(null),0000,0000,0000,,...admirál Kircheis by sa musel vo Valhalle prepadnúť od hanby.
Dialogue: 0,0:14:35.59,0:14:37.99,def2,(null),0000,0000,0000,,Každé svetlo musí sprevádzať tieň.
Dialogue: 0,0:14:37.99,0:14:40.39,def2,(null),0000,0000,0000,,Ale keď svetlo pohasne...
Dialogue: 0,0:14:40.39,0:14:42.39,def2,(null),0000,0000,0000,,...nestratí sa aj tieň?
Dialogue: 0,0:14:49.11,0:14:51.61,def2,(null),0000,0000,0000,,Sestra...
Dialogue: 0,0:14:53.41,0:14:56.91,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Môj úbohý Reinhard...
Dialogue: 0,0:14:56.91,0:15:01.72,def2,(null),0000,0000,0000,,{\c&HFFFF80&}...teraz už nemáš čo stratiť.
Dialogue: 0,0:15:02.72,0:15:03.82,def2,(null),0000,0000,0000,,{\pos(317,452)}Nie.
Dialogue: 0,0:15:03.82,0:15:04.82,def2,(null),0000,0000,0000,,Nie.
Dialogue: 0,0:15:04.82,0:15:08.22,def2,(null),0000,0000,0000,,Stále mám teba, sestra.
Dialogue: 0,0:15:08.22,0:15:10.62,def2,(null),0000,0000,0000,,Je to tak, sestra?\NJe to tak?
Dialogue: 0,0:15:10.62,0:15:12.02,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Áno.
Dialogue: 0,0:15:12.02,0:15:17.02,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Už máme len jeden druhého.
Dialogue: 0,0:15:17.02,0:15:21.32,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Reinhard, odsťahujem sa z tvojho sídla.
Dialogue: 0,0:15:21.32,0:15:24.13,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Nájdem si niekde malý domček.
Dialogue: 0,0:15:24.13,0:15:26.03,def2,(null),0000,0000,0000,,Sestra...?
Dialogue: 0,0:15:26.03,0:15:29.93,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Myslím, že by sme sa nemali istú dobu vídať.
Dialogue: 0,0:15:29.93,0:15:31.33,def2,(null),0000,0000,0000,,Sestra...?
Dialogue: 0,0:15:31.33,0:15:34.93,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Nemala by som ti byť nablízku.
Dialogue: 0,0:15:34.93,0:15:37.53,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Naše životné cesty sú príliš rozdielne.
Dialogue: 0,0:15:37.53,0:15:39.63,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Mne zostala len minulosť.
Dialogue: 0,0:15:39.63,0:15:42.84,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Ale teba čaká budúcnosť.
Dialogue: 0,0:15:42.84,0:15:46.94,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Reinhard, ak sa raz unavíš, príď za mnou.
Dialogue: 0,0:15:46.94,0:15:49.80,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Ale ty ešte nesmieš byť unavený.
Dialogue: 0,0:15:51.54,0:15:53.14,def2,(null),0000,0000,0000,,Rozumiem.
Dialogue: 0,0:15:53.14,0:15:57.44,def2,(null),0000,0000,0000,,Ak je to tvoje želanie, splním ti, o čo žiadaš.
Dialogue: 0,0:15:57.44,0:15:59.64,def2,(null),0000,0000,0000,,Keď splním svoju prísahu Kircheisovi...
Dialogue: 0,0:15:59.64,0:16:03.25,def2,(null),0000,0000,0000,,...a dobyjem vesmír, potom ťa prídem navštíviť.
Dialogue: 0,0:16:03.25,0:16:07.23,def2,(null),0000,0000,0000,,Ale prv než sa rozlúčime, mi povedz jednu vec...
Dialogue: 0,0:16:09.65,0:16:14.23,def2,(null),0000,0000,0000,,...bola si do Kircheisa zamilovaná?
Dialogue: 0,0:16:20.35,0:16:21.65,def2,(null),0000,0000,0000,,{\c&HFFFFFF&}Áno...
Dialogue: 0,0:16:21.65,0:16:24.26,def2,(null),0000,0000,0000,,{\c&HFFFFFF&}...získam vesmír.
Dialogue: 0,0:16:24.26,0:16:26.86,def2,(null),0000,0000,0000,,{\c&HFFFFFF&}Keď si pomyslím na to, čo som stratil...
Dialogue: 0,0:16:26.86,0:16:29.26,def2,(null),0000,0000,0000,,{\c&HFFFFFF&}...ak sa mi nepodarí získať aspoň to...
Dialogue: 0,0:16:29.26,0:16:31.26,def2,(null),0000,0000,0000,,{\c&HFFFFFF&}...čo potom?
Dialogue: 0,0:16:34.56,0:16:37.76,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Oberstein ma informoval o situácii.
Dialogue: 0,0:16:37.76,0:16:38.96,def2,(null),0000,0000,0000,,Áno, pane.
Dialogue: 0,0:16:38.96,0:16:42.07,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Budete odmenený za svoje zásluhy.
Dialogue: 0,0:16:42.07,0:16:44.57,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Vraciam sa na Odin.
Dialogue: 0,0:16:44.57,0:16:47.57,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Môžete mi zaobstarať na cestu sprievod?
Dialogue: 0,0:16:47.57,0:16:50.36,def2,(null),0000,0000,0000,,Áno. Čo tak Mittermeyer?
Dialogue: 0,0:16:51.22,0:16:55.42,def2,(null),0000,0000,0000,,Mimochodom, celá rodina Lichtenladeovcov bola zatknutá.
Dialogue: 0,0:16:55.42,0:16:57.02,def2,(null),0000,0000,0000,,Čo s nimi urobíme?
Dialogue: 0,0:16:57.02,0:17:00.72,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Obávam sa, že nemôžeme imperiálneho premiéra odsúdiť na smrť.
Dialogue: 0,0:17:00.72,0:17:02.84,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Ponúknite mu samovraždu.
Dialogue: 0,0:17:02.84,0:17:04.14,def2,(null),0000,0000,0000,,Ako si želáte.
Dialogue: 0,0:17:04.14,0:17:05.84,def2,(null),0000,0000,0000,,A jeho rodina?
Dialogue: 0,0:17:05.84,0:17:08.24,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Ženy a deti vyhostite do pohraničia.
Dialogue: 0,0:17:08.24,0:17:11.74,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Všetci muži nad desať rokov budú popravení.
Dialogue: 0,0:17:11.74,0:17:12.84,def2,(null),0000,0000,0000,,Ako si želáte.
Dialogue: 0,0:17:12.84,0:17:15.54,def2,(null),0000,0000,0000,,Chlapci pod desať rokov zostanú nažive?
Dialogue: 0,0:17:15.54,0:17:18.93,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Mal som desať, keď som nastúpil na akadémiu.
Dialogue: 0,0:17:18.93,0:17:21.54,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Do toho veku sa nedajú považovať za svojprávnych.
Dialogue: 0,0:17:21.54,0:17:23.35,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Preto ich nechám nažive.
Dialogue: 0,0:17:23.35,0:17:26.75,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Ak sa mi budú chcieť pomstiť, keď vyrastú, v poriadku.
Dialogue: 0,0:17:26.75,0:17:30.55,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Je prirodzené zvrhnúť neschopného vládcu.
Dialogue: 0,0:17:33.25,0:17:34.85,def2,(null),0000,0000,0000,,{\c&HFFFF80&}To isté platí aj pre vás ostatných.
Dialogue: 0,0:17:34.85,0:17:38.05,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Ak budete pripravení ma zvrhnúť...
Dialogue: 0,0:17:38.05,0:17:40.44,def2,(null),0000,0000,0000,,{\c&HFFFF80&}...príďte si po mňa kedykoľvek.
Dialogue: 0,0:17:40.44,0:17:42.38,def2,(null),0000,0000,0000,,Žartujete?
Dialogue: 0,0:17:44.46,0:17:46.86,def2,(null),0000,0000,0000,,Vaša Excelencia, o chvíľu opustíme prístav.
Dialogue: 0,0:17:47.86,0:17:51.65,def2,(null),0000,0000,0000,,Čo sa týka Lichtenladeho rodiny... bolo to múdre?
Dialogue: 0,0:17:51.65,0:17:54.56,def2,(null),0000,0000,0000,,Už som doposiaľ prelial priveľa krvi.
Dialogue: 0,0:17:54.56,0:17:56.36,def2,(null),0000,0000,0000,,A pravdepodobne ešte viac prelejem v budúcnosti.
Dialogue: 0,0:17:56.36,0:18:00.26,def2,(null),0000,0000,0000,,Krv Lichtenladeovcov je len pár kvapiek.
Dialogue: 0,0:18:00.26,0:18:02.57,def2,(null),0000,0000,0000,,Aký je v tom rozdiel?
Dialogue: 0,0:18:02.57,0:18:05.87,def2,(null),0000,0000,0000,,Ak to tak chcete, v poriadku.
Dialogue: 0,0:18:12.78,0:18:14.17,def2,(null),0000,0000,0000,,Ideš!
Dialogue: 0,0:18:14.17,0:18:16.07,def2,(null),0000,0000,0000,,Nebuď na toho psa zlý.
Dialogue: 0,0:18:16.07,0:18:18.37,def2,(null),0000,0000,0000,,Neznášam psov.
Dialogue: 0,0:18:18.37,0:18:21.28,def2,(null),0000,0000,0000,,No napriek tomu sa mám stať vládnym psom.
Dialogue: 0,0:18:21.28,0:18:22.68,def2,(null),0000,0000,0000,,Psom?
Dialogue: 0,0:18:22.68,0:18:25.48,def2,(null),0000,0000,0000,,Chcú, aby som donášal na Alianciu.
Dialogue: 0,0:18:25.48,0:18:29.48,def2,(null),0000,0000,0000,,Chcú využiť to, že som poznal Yanga, keď bol ešte decko.
Dialogue: 0,0:18:29.48,0:18:32.48,def2,(null),0000,0000,0000,,Ale ty si to odmietol, nie?
Dialogue: 0,0:18:32.48,0:18:35.28,def2,(null),0000,0000,0000,,Preto som zo seba znechutený.
Dialogue: 0,0:18:35.28,0:18:40.48,def2,(null),0000,0000,0000,,V Aliancii by sme sa už čoskoro mali dostať blízko k Yangovi Wenlimu.
Dialogue: 0,0:18:40.48,0:18:42.19,def2,(null),0000,0000,0000,,Problémom zostáva Impérium.
Dialogue: 0,0:18:42.19,0:18:45.19,def2,(null),0000,0000,0000,,Politicky sa tomu sopliakovi nie je ľahké priblížiť.
Dialogue: 0,0:18:45.19,0:18:46.39,def2,(null),0000,0000,0000,,Áno.
Dialogue: 0,0:18:46.39,0:18:48.09,def2,(null),0000,0000,0000,,Boltik...
Dialogue: 0,0:18:48.09,0:18:51.09,def2,(null),0000,0000,0000,,...nastúpite na post najvyššieho splnomocnenca na Odine...
Dialogue: 0,0:18:51.09,0:18:53.69,def2,(null),0000,0000,0000,,...a pokúsite sa dostať do blízkosti plavovlasého sopliaka.
Dialogue: 0,0:18:53.69,0:18:56.19,def2,(null),0000,0000,0000,,Áno, pane. Ale čo môj nástupca...
Dialogue: 0,0:18:56.19,0:18:58.59,def2,(null),0000,0000,0000,,Nebojte sa. Už som za vás našiel náhradu.
Dialogue: 0,0:18:58.59,0:19:01.58,def2,(null),0000,0000,0000,,Predstavím vás, aby ste mohli ukončiť prestup.
Dialogue: 0,0:19:02.95,0:19:05.00,def2,(null),0000,0000,0000,,Toto je Rupert Kesserling.
Dialogue: 0,0:19:06.15,0:19:08.15,def2,(null),0000,0000,0000,,Ak vás prekvapuje jeho mladosť...
Dialogue: 0,0:19:08.15,0:19:11.45,def2,(null),0000,0000,0000,,...ako chcete jednať s markízom Lohengrammom?
Dialogue: 0,0:19:11.45,0:19:13.25,def2,(null),0000,0000,0000,,A-Áno, pane.
Dialogue: 0,0:19:14.25,0:19:16.15,def2,(null),0000,0000,0000,,To bolo nebezpečné.
Dialogue: 0,0:19:16.85,0:19:19.15,def2,(null),0000,0000,0000,,Keď som si potriasol ruku s Trunihtom.
Dialogue: 0,0:19:19.15,0:19:21.97,def2,(null),0000,0000,0000,,Zase vyviazol so zdravou kožou.
Dialogue: 0,0:19:21.97,0:19:24.07,def2,(null),0000,0000,0000,,To isté sa stalo počas Amlitzeru.
Dialogue: 0,0:19:24.07,0:19:29.87,def2,(null),0000,0000,0000,,Tým, že vyvolá búrku a potom sa schová, sa mu nikdy nič nestane.
Dialogue: 0,0:19:29.87,0:19:33.47,def2,(null),0000,0000,0000,,Skôr než sa nazdáme, bude mať ešte väčšiu moc.
Dialogue: 0,0:19:33.47,0:19:37.37,def2,(null),0000,0000,0000,,Len samotné pomyslenie na to ma desí.
Dialogue: 0,0:19:37.37,0:19:39.17,def2,(null),0000,0000,0000,,A potom ma napadala kacírska myšlienka.
Dialogue: 0,0:19:39.17,0:19:43.18,def2,(null),0000,0000,0000,,Na čo je dobrá demokracia, keď dáva moc takému človeku?
Dialogue: 0,0:19:44.18,0:19:46.38,def2,(null),0000,0000,0000,,Nemôžem na to prestať myslieť.
Dialogue: 0,0:19:46.38,0:19:48.78,def2,(null),0000,0000,0000,,Rudolf, ktorý založil Galaktické Impérium...
Dialogue: 0,0:19:48.78,0:19:51.18,def2,(null),0000,0000,0000,,...a aj celá Národnoobrodenecká vojenská rada...
Dialogue: 0,0:19:51.18,0:19:56.78,def2,(null),0000,0000,0000,,...boli presvedčení o tom, že spasia svet. A verili tomu až do konca.
Dialogue: 0,0:19:58.48,0:20:00.59,def2,(null),0000,0000,0000,,Je to zvláštny paradox...
Dialogue: 0,0:20:00.59,0:20:03.89,def2,(null),0000,0000,0000,,...ale to, čo Rudolfa donútilo vytvoriť brutálnu despotickú vládu...
Dialogue: 0,0:20:03.89,0:20:07.69,def2,(null),0000,0000,0000,,...bol jeho zmysel pre povinnosť voči celému ľudstvu.
Dialogue: 0,0:20:07.69,0:20:10.69,def2,(null),0000,0000,0000,,Myslíte, že markíz Lohengramm je taký istý?
Dialogue: 0,0:20:12.49,0:20:15.29,def2,(null),0000,0000,0000,,Vychladne vám čaj.
Dialogue: 0,0:20:15.29,0:20:19.78,def2,(null),0000,0000,0000,,Asi si myslíš, že som šťastný, kým môžem piť svoj čaj.
Dialogue: 0,0:20:21.59,0:20:25.59,def2,(null),0000,0000,0000,,Občianska vojna v Impériu sa už pravdepodobne skončila.
Dialogue: 0,0:20:25.59,0:20:29.35,def2,(null),0000,0000,0000,,Preto by som mal radšej piť čaj, kým môžem.
Dialogue: 0,0:20:34.59,0:20:39.00,def2,(null),0000,0000,0000,,S čím novým na nás teraz prídete, markíz Reinhard von Lohengramm?
Dialogue: 0,0:20:43.71,0:20:48.61,def2,(null),0000,0000,0000,,{\c&HFFFF80&}V tom čase sa markíz Lohengramm vrátil na hlavnú planétu Odin...
Dialogue: 0,0:20:48.61,0:20:51.71,def2,(null),0000,0000,0000,,{\c&HFFFF80&}...ako najvyšší veliteľ imperiálneho vojska.
Dialogue: 0,0:20:51.71,0:20:53.51,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Bola mu udelená funkcia dočasného predsedu vlády...
Dialogue: 0,0:20:53.51,0:20:57.51,def2,(null),0000,0000,0000,,{\c&HFFFF80&}...a upevnil tak svoju absolútnu moc nad Impériom.
Dialogue: 0,0:20:57.51,0:21:02.72,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Súčasne bol Siegfied Kircheis povýšený na imperiálneho admirála...
Dialogue: 0,0:21:02.72,0:21:07.72,def2,(null),0000,0000,0000,,{\c&HFFFF80&}...a posmrtne mu bolo udelené miesto v triumviráte imperiálnych síl.
Dialogue: 0,0:21:09.22,0:21:11.62,def2,(null),0000,0000,0000,,Kircheis...
Dialogue: 0,0:21:11.62,0:21:13.35,def2,(null),0000,0000,0000,,...sestra ťa prišla navštíviť?
Dialogue: 0,0:21:15.62,0:21:23.93,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Na jeho náhrobku však boli vytesané len dve slová: „Môj priateľ.“
Dialogue: 0,0:21:25.43,0:21:29.03,def2,(null),0000,0000,0000,,{\c&HFFFFFF&}Už teraz nemám čo stratiť.
Dialogue: 0,0:21:29.03,0:21:32.53,def2,(null),0000,0000,0000,,{\c&HFFFFFF&}No aj tak budem bojovať...
Dialogue: 0,0:21:32.53,0:21:34.73,def2,(null),0000,0000,0000,,{\c&HFFFFFF&}...aby som splnil svoj sľub tebe.
Dialogue: 0,0:21:34.73,0:21:36.03,def2,(null),0000,0000,0000,,{\c&HFFFFFF&}A...
Dialogue: 0,0:21:36.03,0:21:39.53,def2,(null),0000,0000,0000,,{\c&HFFFFFF&}...aby som našiel niečo, čím uhasím smäd v svojom srdci.
Dialogue: 0,0:21:40.65,0:21:45.25,def2,(null),0000,0000,0000,,{\c&HFFFFFF&}Je to dobrý priateľ alebo silný nepriateľ?
Dialogue: 0,0:21:45.25,0:21:47.04,def2,(null),0000,0000,0000,,{\c&HFFFFFF&}Yang Wenli...
Dialogue: 0,0:21:47.04,0:21:50.25,def2,(null),0000,0000,0000,,{\c&HFFFFFF&}...zhostíš sa tej úlohy?
Dialogue: 0,0:21:50.25,0:21:55.75,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Vesmírny rok 797, imperiálny rok 488.
Dialogue: 0,0:21:55.75,0:22:01.26,def2,(null),0000,0000,0000,,{\c&HFFFF80&}Večný čas v galaxii si naďalej plynie bez ohľadu na ľudské ambície.
