Dialogue: 0,0:00:00.00,0:00:03.25,Default,,0,0,0,,{\an8}TAIGA DRAMA
Dialogue: 0,0:00:03.19,0:00:08.26,kurzíva,,0,0,0,,Kičinosuke zápasil s Nariakirou.
Dialogue: 0,0:00:08.56,0:00:10.66,kurzíva,,0,0,0,,I když ho všichni varovali,
Dialogue: 0,0:00:10.66,0:00:13.66,kurzíva,,0,0,0,,hodil Nariakiru vší silou na zem.
Dialogue: 0,0:00:15.13,0:00:18.80,Default,,0,0,0,,Bratr možná bude muset spáchat seppuku.
Dialogue: 0,0:00:19.14,0:00:20.40,Default,,0,0,0,,Seppuku?
Dialogue: 0,0:00:22.24,0:00:23.47,Default,,0,0,0,,Itó!
Dialogue: 0,0:00:25.04,0:00:26.51,Default,,0,0,0,,Kičinosuke.
Dialogue: 0,0:00:33.49,0:00:34.85,Default,,0,0,0,,Itó!
Dialogue: 0,0:00:35.09,0:00:36.49,Default,,0,0,0,,Kičinosuke.
Dialogue: 0,0:00:36.62,0:00:37.86,Default,,0,0,0,,Jdeme.
Dialogue: 0,0:00:39.76,0:00:41.03,Default,,0,0,0,,Dovnitř.
Dialogue: 0,0:00:42.66,0:00:44.16,Default,,0,0,0,,Kičinosuke.
Dialogue: 0,0:00:51.50,0:00:52.97,Default,,0,0,0,,Kičinosuke.
Dialogue: 0,0:00:55.84,0:00:57.38,Default,,0,0,0,,Kičinosuke.
Dialogue: 0,0:01:00.45,0:01:04.98,Default,,0,0,0,,Jsem Saigó Kičinosuke.
Dialogue: 0,0:01:07.25,0:01:10.92,Default,,0,0,0,,Proč jste ve vězení, řekněte?
Dialogue: 0,0:01:24.47,0:01:27.74,kurzíva,,0,0,0,,Kičinosuke skončil v kobce.
Dialogue: 0,0:01:28.07,0:01:31.31,kurzíva,,0,0,0,,Jaký bude jeho osud?
Dialogue: 0,0:01:33.15,0:01:34.68,Default,,0,0,0,,Kičinosuke!
