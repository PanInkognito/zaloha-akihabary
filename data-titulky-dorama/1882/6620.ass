Dialogue: 0,0:49:25.56,0:49:27.09,Main,,0,0,0,,{\i1}Lidi jako táta,{\i0}
Dialogue: 0,0:49:27.56,0:49:29.36,Main,,0,0,0,,{\i1}co dělají výborné tofu.{\i0}
Dialogue: 0,0:49:31.26,0:49:32.63,Main,,0,0,0,,{\i1}Naše společnost{\i0}
Dialogue: 0,0:49:33.37,0:49:36.37,Main,,0,0,0,,{\i1}je tvořena různými lidmi.{\i0}
Dialogue: 0,0:49:38.54,0:49:39.34,Main,,0,0,0,,{\i1}Ako.{\i0}
Dialogue: 0,0:49:41.21,0:49:42.41,Main,,0,0,0,,{\i1}Hiroki, Riko.{\i0}
Dialogue: 0,0:49:43.81,0:49:45.18,Main,,0,0,0,,{\i1}Prosím, sedněte si.{\i0}
Dialogue: 0,0:49:55.12,0:49:55.95,Main,,0,0,0,,{\i1}Ayo.{\i0}
Dialogue: 0,0:49:56.86,0:49:57.86,Main,,0,0,0,,{\i1}Nevadí to?{\i0}
Dialogue: 0,0:50:00.13,0:50:01.03,Main,,0,0,0,,{\i1}Tvoje přítomnost{\i0}
Dialogue: 0,0:50:01.73,0:50:03.46,Main,,0,0,0,,{\i1}je pro Ako důležitá,{\i0}
Dialogue: 0,0:50:03.73,0:50:04.73,Main,,0,0,0,,{\i1}stejně tak{\i0}
Dialogue: 0,0:50:05.26,0:50:07.23,Main,,0,0,0,,{\i1}pro všechny z rodiny.{\i0}
Dialogue: 0,0:50:18.61,0:50:20.08,Main,,0,0,0,,{\i1}Ayina nemoc{\i0}
Dialogue: 0,0:50:21.41,0:50:24.02,Main,,0,0,0,,{\i1}se jmenuje spinocerebelární degenerace.{\i0}
Dialogue: 0,0:50:25.55,0:50:26.82,Main,,0,0,0,,{\i1}Zabraňuje{\i0}
Dialogue: 0,0:50:27.32,0:50:29.49,Main,,0,0,0,,{\i1}nervům, aby správně fungovaly.{\i0}
Dialogue: 0,0:50:32.09,0:50:33.96,Main,,0,0,0,,{\i1}Nejdřív bude mít problémy s chůzí.{\i0}
Dialogue: 0,0:50:35.63,0:50:37.20,Main,,0,0,0,,{\i1}Pak nebude moct vůbec chodit,{\i0}
Dialogue: 0,0:50:38.06,0:50:39.80,Main,,0,0,0,,{\i1}nebo zvedat těžké předměty.{\i0}
Dialogue: 0,0:50:41.87,0:50:43.60,Main,,0,0,0,,{\i1}Bude pro ni těžké{\i0}
Dialogue: 0,0:50:43.97,0:50:47.31,Main,,0,0,0,,{\i1}nám s čímkoliv pomoct i v obchodě.{\i0}
Dialogue: 0,0:50:50.18,0:50:52.34,Main,,0,0,0,,{\i1}Časem pro ni bude všechno těžké,{\i0}
Dialogue: 0,0:50:52.58,0:50:53.71,Main,,0,0,0,,{\i1}proto chci,{\i0}
Dialogue: 0,0:50:54.05,0:50:55.85,Main,,0,0,0,,{\i1}abyste jí pomáhali{\i0}
Dialogue: 0,0:50:56.75,0:50:58.68,Main,,0,0,0,,{\i1}a nezatratili ji{\i0}
Dialogue: 0,0:50:59.75,0:51:01.32,Main,,0,0,0,,{\i1}nebo si jí nevšímali.{\i0}
Dialogue: 0,0:51:07.79,0:51:08.76,Main,,0,0,0,,{\i1}Rozumím..{\i0}
Dialogue: 0,0:51:11.10,0:51:13.60,Main,,0,0,0,,{\i1}Jsem s Ayou.{\i0}
Dialogue: 0,0:51:13.60,0:51:14.77,Main,,0,0,0,,{\i1}Rika taky!{\i0}
Dialogue: 0,0:51:15.93,0:51:16.97,Main,,0,0,0,,{\i1}Děkuju.{\i0}
Dialogue: 0,0:51:20.67,0:51:21.94,Main,,0,0,0,,{\i1}Uzdraví se?{\i0}
Dialogue: 0,0:51:29.15,0:51:30.28,Main,,0,0,0,,{\i1}Uzdraví se, že jo?{\i0}
Dialogue: 0,0:51:34.19,0:51:35.69,Main,,0,0,0,,{\i1}Není na to lék.{\i0}
Dialogue: 0,0:51:38.92,0:51:40.43,Main,,0,0,0,,{\i1}Říkají, že s dnešními léky{\i0}
Dialogue: 0,0:51:41.36,0:51:42.96,Main,,0,0,0,,{\i1}to nejde.{\i0}
Dialogue: 0,0:51:53.47,0:51:54.44,Main,,0,0,0,,{\i1}Je to tak najednou...{\i0}
Dialogue: 0,0:51:57.98,0:51:59.95,Main,,0,0,0,,{\i1}...dozvědět se to tak najednou...{\i0}
Dialogue: 0,0:52:02.05,0:52:03.75,Main,,0,0,0,,{\i1}Nevím, co mám dělat.{\i0}
Dialogue: 0,0:52:07.02,0:52:08.59,Main,,0,0,0,,{\i1}To je snad jasný.{\i0}
Dialogue: 0,0:52:10.56,0:52:12.26,Main,,0,0,0,,{\i1}Když bude mít někdo potíž,{\i0}
Dialogue: 0,0:52:12.49,0:52:14.93,Main,,0,0,0,,{\i1}přijdeš a pomůžeš mu.{\i0}
Dialogue: 0,0:52:16.93,0:52:17.93,Main,,0,0,0,,{\i1}Když tvoje kamarádka{\i0}
Dialogue: 0,0:52:19.26,0:52:20.37,Main,,0,0,0,,{\i1}brečí,{\i0}
Dialogue: 0,0:52:21.83,0:52:24.30,Main,,0,0,0,,{\i1}zeptáš se jí: "Co se stalo?"{\i0}
Dialogue: 0,0:52:26.27,0:52:27.61,Main,,0,0,0,,{\i1}Je to to samé.{\i0}
Dialogue: 0,0:52:30.21,0:52:31.94,Main,,0,0,0,,{\i1}Musíš shromáždit{\i0}
Dialogue: 0,0:52:33.21,0:52:34.55,Main,,0,0,0,,{\i1}všechnu laskavost{\i0}
Dialogue: 0,0:52:35.51,0:52:36.78,Main,,0,0,0,,{\i1}ve svém srdci{\i0}
Dialogue: 0,0:52:36.78,0:52:38.32,Main,,0,0,0,,{\i1}a použít ji.{\i0}
Dialogue: 0,0:52:40.19,0:52:40.99,Main,,0,0,0,,{\i1}Jo?{\i0}
Dialogue: 0,0:52:45.39,0:52:47.26,Main,,0,0,0,,{\i1}Laskavost?{\i0}
Dialogue: 0,0:52:49.69,0:52:51.56,Main,,0,0,0,,{\i1}Ale já taková nejsem...{\i0}
Dialogue: 0,0:52:53.30,0:52:55.30,Main,,0,0,0,,{\i1}Jsi taková!{\i0}
Dialogue: 0,0:53:01.37,0:53:02.41,Main,,0,0,0,,{\i1}Jsi otravný.{\i0}
Dialogue: 0,0:53:09.75,0:53:12.55,Main,,0,0,0,,{\i1}Jsem to pořád já.{\i0}
Dialogue: 0,0:53:13.52,0:53:14.55,Main,,0,0,0,,{\i1}To je pravda.{\i0}
Dialogue: 0,0:53:15.45,0:53:16.76,Main,,0,0,0,,{\i1}Je jedno, co se stane,{\i0}
Dialogue: 0,0:53:17.56,0:53:18.62,Main,,0,0,0,,{\i1}Aya bude pořád Aya.{\i0}
Dialogue: 0,0:53:19.62,0:53:21.23,Main,,0,0,0,,{\i1}Důležitý člen naší rodiny.{\i0}
Dialogue: 0,0:53:24.20,0:53:26.33,Main,,0,0,0,,{\i1}Přestanu říkat "Omlouvám se."{\i0}
Dialogue: 0,0:53:27.37,0:53:29.80,Main,,0,0,0,,{\i1}Místo toho budu mít ráda slovo "Děkuju".{\i0}
Dialogue: 0,0:53:31.24,0:53:31.97,Main,,0,0,0,,{\i1}Jo.{\i0}
Dialogue: 0,0:53:32.34,0:53:34.21,Main,,0,0,0,,{\i1}To je moje holka.{\i0}
Dialogue: 0,0:54:20.49,0:54:21.49,Main,,0,0,0,,{\i1}Nešiko.{\i0}
Dialogue: 0,0:54:23.52,0:54:24.66,Main,,0,0,0,,{\i1}Asou.{\i0}
Dialogue: 0,0:54:25.16,0:54:26.29,Main,,0,0,0,,{\i1}Co tu děláš?{\i0}
Dialogue: 0,0:54:26.86,0:54:28.83,Main,,0,0,0,,{\i1}Mimoškolní aktivity jsou pozastavené kvůli zkouškám, ne?{\i0}
Dialogue: 0,0:54:30.03,0:54:31.30,Main,,0,0,0,,{\i1}A co ty?{\i0}
Dialogue: 0,0:54:32.90,0:54:34.07,Main,,0,0,0,,{\i1}Krmil jsem želvy.{\i0}
Dialogue: 0,0:54:36.53,0:54:37.24,Main,,0,0,0,,{\i1}Hej,{\i0}
Dialogue: 0,0:54:38.44,0:54:40.17,Main,,0,0,0,,{\i1}pomůžeš mi to tu uklidit?{\i0}
Dialogue: 0,0:54:43.01,0:54:44.04,Main,,0,0,0,,{\i1}Cože?{\i0}
Dialogue: 0,0:54:55.59,0:54:57.56,Main,,0,0,0,,{\i1}Mám prosbu.{\i0}
Dialogue: 0,0:54:58.32,0:54:59.96,Main,,0,0,0,,{\i1}Další?{\i0}
Dialogue: 0,0:55:00.96,0:55:02.93,Main,,0,0,0,,{\i1}Zůstaneš se mnou,{\i0}
Dialogue: 0,0:55:04.06,0:55:05.76,Main,,0,0,0,,{\i1}aby ses ujistil, jestli brečím?{\i0}
Dialogue: 0,0:55:06.36,0:55:07.10,Main,,0,0,0,,{\i1}Co?{\i0}
Dialogue: 0,0:55:16.41,0:55:17.28,Main,,0,0,0,,{\i1}Haló?{\i0}
Dialogue: 0,0:55:18.94,0:55:20.05,Main,,0,0,0,,{\i1}Tady Ikeuchi.{\i0}
Dialogue: 0,0:55:23.35,0:55:24.55,Main,,0,0,0,,{\i1}Víš...{\i0}
Dialogue: 0,0:55:26.35,0:55:27.72,Main,,0,0,0,,{\i1}Děkuju{\i0}
Dialogue: 0,0:55:28.02,0:55:29.85,Main,,0,0,0,,{\i1}za všechno, co jsi pro mě udělal.{\i0}
Dialogue: 0,0:55:39.66,0:55:41.37,Main,,0,0,0,,{\i1}Když jsem se dostala do Higashi,{\i0}
Dialogue: 0,0:55:41.67,0:55:43.37,Main,,0,0,0,,{\i1}byla jsem opravdu šťastná.{\i0}
Dialogue: 0,0:55:44.54,0:55:46.84,Main,,0,0,0,,{\i1}Byla jsem ráda, že od tebe slyším "Blahopřeji"{\i0}
Dialogue: 0,0:55:51.24,0:55:53.75,Main,,0,0,0,,{\i1}a "Pojďme hrát zase basketbal."{\i0}
Dialogue: 0,0:55:56.61,0:55:59.12,Main,,0,0,0,,{\i1}Byla jsem šťastná, když jsi mi podepsal moje potítko.{\i0}
Dialogue: 0,0:56:02.52,0:56:03.36,Main,,0,0,0,,{\i1}Ale...{\i0}
Dialogue: 0,0:56:07.09,0:56:08.16,Main,,0,0,0,,{\i1}Ale já...{\i0}
Dialogue: 0,0:56:11.70,0:56:14.80,Main,,0,0,0,,{\i1}Myslím, že odejdu z týmu.{\i0}
Dialogue: 0,0:56:19.00,0:56:19.90,Main,,0,0,0,,{\i1}Takže...{\i0}
Dialogue: 0,0:56:23.68,0:56:25.14,Main,,0,0,0,,{\i1}Už se neuvidíme...{\i0}
Dialogue: 0,0:56:32.25,0:56:33.12,Main,,0,0,0,,{\i1}Rozumím tomu.{\i0}
Dialogue: 0,0:56:35.35,0:56:36.62,Main,,0,0,0,,{\i1}Brzo se uzdrav.{\i0}
Dialogue: 0,0:56:40.79,0:56:41.53,Main,,0,0,0,,{\i1}Jo.{\i0}
Dialogue: 0,0:56:49.83,0:56:51.00,Main,,0,0,0,,{\i1}Sbohem.{\i0}
Dialogue: 0,0:57:03.01,0:57:04.62,Main,,0,0,0,,{\i1}Jsi sobecká.{\i0}
Dialogue: 0,0:57:05.98,0:57:07.39,Main,,0,0,0,,{\i1}Říkat sbohem{\i0}
Dialogue: 0,0:57:07.69,0:57:09.52,Main,,0,0,0,,{\i1}po telefonu...{\i0}
Dialogue: 0,0:57:10.99,0:57:13.26,Main,,0,0,0,,{\i1}Kawamoto teď určitě brečí.{\i0}
Dialogue: 0,0:57:16.66,0:57:17.93,Main,,0,0,0,,{\i1}Možná.{\i0}
Dialogue: 0,0:57:20.03,0:57:21.37,Main,,0,0,0,,{\i1}Kdyby ne, ty brečet můžeš.{\i0}
Dialogue: 0,0:57:24.44,0:57:25.14,Main,,0,0,0,,{\i1}Já nechci.{\i0}
Dialogue: 0,0:57:26.37,0:57:27.77,Main,,0,0,0,,{\i1}Jsi vážně sobecká.{\i0}
Dialogue: 0,0:57:30.78,0:57:31.74,Main,,0,0,0,,{\i1}Já jen...{\i0}
Dialogue: 0,0:57:34.31,0:57:37.02,Main,,0,0,0,,{\i1}...nechci ti platit tu pokutu.{\i0}
Dialogue: 0,0:57:39.95,0:57:40.99,Main,,0,0,0,,{\i1}Dobře děláš.{\i0}
Dialogue: 0,0:58:20.73,0:58:23.09,Main,,0,0,0,,{\i1}Místo toho, abys usiloval o to, cos ztratil,{\i0}
Dialogue: 0,0:58:24.60,0:58:26.80,Main,,0,0,0,,{\i1}pouč se z věcí, které ti zbyly.{\i0}
Dialogue: 0,0:58:29.27,0:58:32.07,Main,,0,0,0,,{\i1}Když myslím na to, že mě slunce osvítí svými paprsky,{\i0}
Dialogue: 0,0:58:32.64,0:58:34.14,Main,,0,0,0,,{\i1}přijde déšť,{\i0}
Dialogue: 0,0:58:34.97,0:58:36.27,Main,,0,0,0,,{\i1}přijde tajfun{\i0}
Dialogue: 0,0:58:37.38,0:58:38.54,Main,,0,0,0,,{\i1}a pak se vrátí slunce,{\i0}
Dialogue: 0,0:58:40.21,0:58:42.01,Main,,0,0,0,,{\i1}tohle je mé zlomené srdce.{\i0}
Dialogue: 0,0:58:44.75,0:58:45.58,Main,,0,0,0,,{\i1}Ale{\i0}
Dialogue: 0,0:58:46.99,0:58:49.42,Main,,0,0,0,,{\i1}není tu jiná možnost, než žít současnost.{\i0}
Dialogue: 0,0:58:53.96,0:58:55.39,Main,,0,0,0,,{\i1}Nějak takhle?{\i0}
Dialogue: 0,0:58:56.29,0:58:57.36,Main,,0,0,0,,{\i1}Dobře, Hiro.{\i0}
Dialogue: 0,0:58:58.13,0:59:00.53,Main,,0,0,0,,{\i1}Nestřílej jen tak,{\i0}
Dialogue: 0,0:59:00.53,0:59:02.70,Main,,0,0,0,,{\i1}míč se musí dostat do prostoru.{\i0}
Dialogue: 0,0:59:03.87,0:59:05.50,Main,,0,0,0,,{\i1}Představ si, že je to brána,{\i0}
Dialogue: 0,0:59:05.50,0:59:08.74,Main,,0,0,0,,{\i1}a vystřel na ní.{\i0}
Dialogue: 0,0:59:09.44,0:59:11.28,Main,,0,0,0,,{\i1}Mentální trénink?{\i0}
Dialogue: 0,0:59:11.54,0:59:12.48,Main,,0,0,0,,{\i1}Jo.{\i0}
Dialogue: 0,0:59:12.48,0:59:13.65,Main,,0,0,0,,{\i1}Dobře!{\i0}
Dialogue: 0,0:59:20.92,0:59:23.82,Main,,0,0,0,,{\i1}Ještě kousek...{\i0}
Dialogue: 0,0:59:26.76,0:59:27.93,Main,,0,0,0,,{\i1}a mám to...{\i0}
Dialogue: 0,0:59:28.46,0:59:29.39,Main,,0,0,0,,{\i1}Jo, jo.{\i0}
Dialogue: 0,0:59:31.06,0:59:32.00,Main,,0,0,0,,{\i1}Tak.{\i0}
Dialogue: 0,0:59:33.06,0:59:35.03,Main,,0,0,0,,{\i1}Ty jsi Hirokiho velká sestra?{\i0}
Dialogue: 0,0:59:35.33,0:59:37.17,Main,,0,0,0,,{\i1}Nauč nás, jak se hraje fotbal.{\i0}
Dialogue: 0,0:59:38.34,0:59:39.94,Main,,0,0,0,,{\i1}To není ona.{\i0}
Dialogue: 0,0:59:39.94,0:59:41.81,Main,,0,0,0,,{\i1}Tamta{\i0}
Dialogue: 0,0:59:41.81,0:59:44.18,Main,,0,0,0,,{\i1}ho nedokáže naučit žádný triky ve fotbale.{\i0}
Dialogue: 0,0:59:44.91,0:59:46.54,Main,,0,0,0,,{\i1}Neumí ani chodit.{\i0}
Dialogue: 0,0:59:47.71,0:59:49.45,Main,,0,0,0,,{\i1}Že jo, Hiroki?{\i0}
Dialogue: 0,0:59:49.98,0:59:52.42,Main,,0,0,0,,{\i1}To je důvod, proč nechceš hrát zápas, ne?{\i0}
Dialogue: 0,0:59:53.38,0:59:54.55,Main,,0,0,0,,{\i1}Hele,{\i0}
Dialogue: 0,0:59:54.85,0:59:57.29,Main,,0,0,0,,{\i1}proč nenecháš fotbal fotbalem a{\i0}
Dialogue: 0,0:59:57.29,0:59:58.79,Main,,0,0,0,,{\i1}nenaučíš jí{\i0}
Dialogue: 0,0:59:58.79,1:00:01.63,Main,,0,0,0,,{\i1}radši chodit?{\i0}
Dialogue: 0,1:00:03.60,1:00:04.60,Main,,0,0,0,,{\i1}Au!{\i0}
Dialogue: 0,1:00:05.00,1:00:05.90,Main,,0,0,0,,{\i1}Au!{\i0}
Dialogue: 0,1:00:06.86,1:00:07.70,Main,,0,0,0,,{\i1}Nezasloužíš si{\i0}
Dialogue: 0,1:00:08.63,1:00:10.20,Main,,0,0,0,,{\i1}hrát fotbal!{\i0}
Dialogue: 0,1:00:11.54,1:00:12.77,Main,,0,0,0,,{\i1}Proč něco neřekneš?{\i0}
Dialogue: 0,1:00:14.01,1:00:15.71,Main,,0,0,0,,{\i1}Nevadí ti,{\i0}
Dialogue: 0,1:00:15.71,1:00:17.11,Main,,0,0,0,,{\i1}že někdo takhle o Aye mluví?{\i0}
Dialogue: 0,1:00:18.24,1:00:19.24,Main,,0,0,0,,{\i1}To...{\i0}
Dialogue: 0,1:00:19.24,1:00:20.65,Main,,0,0,0,,{\i1}Proč nic neřekneš?{\i0}
Dialogue: 0,1:00:20.65,1:00:21.95,Main,,0,0,0,,{\i1}Nemůžu nic udělat!{\i0}
Dialogue: 0,1:00:21.95,1:00:23.11,Main,,0,0,0,,{\i1}Nemůžeš nic udělat?{\i0}
Dialogue: 0,1:00:23.48,1:00:24.68,Main,,0,0,0,,{\i1}Co nemůžeš udělat?{\i0}
Dialogue: 0,1:00:26.72,1:00:27.89,Main,,0,0,0,,{\i1}Stydíš se{\i0}
Dialogue: 0,1:00:27.89,1:00:29.05,Main,,0,0,0,,{\i1}za Ayu,{\i0}
Dialogue: 0,1:00:29.39,1:00:30.49,Main,,0,0,0,,{\i1}protože není dost dobrá?{\i0}
Dialogue: 0,1:00:36.19,1:00:39.13,Main,,0,0,0,,{\i1}Co to děláš, Ako? Pusť mě.{\i0}
Dialogue: 0,1:00:43.50,1:00:44.57,Main,,0,0,0,,{\i1}Z cesty!{\i0}
Dialogue: 0,1:00:46.47,1:00:47.91,Main,,0,0,0,,{\i1}Cože mám?{\i0}
Dialogue: 0,1:00:48.61,1:00:49.61,Main,,0,0,0,,{\i1}Blbá holka!{\i0}
Dialogue: 0,1:00:53.04,1:00:54.38,Main,,0,0,0,,{\i1}Ten kluk byl nechutný{\i0}
Dialogue: 0,1:00:54.88,1:00:56.31,Main,,0,0,0,,{\i1}ale ty jsi ještě horší.{\i0}
Dialogue: 0,1:00:56.31,1:00:58.02,Main,,0,0,0,,{\i1}Ako, co se děje?{\i0}
Dialogue: 0,1:00:58.62,1:01:00.32,Main,,0,0,0,,{\i1}Co si to dovoluješ ke svému otci?{\i0}
Dialogue: 0,1:01:00.32,1:01:01.49,Main,,0,0,0,,{\i1}Proč se za ní stydíš?{\i0}
Dialogue: 0,1:01:06.46,1:01:08.09,Main,,0,0,0,,{\i1}Co je na ní tak trapného?{\i0}
Dialogue: 0,1:01:12.13,1:01:13.40,Main,,0,0,0,,{\i1}Aya je skvělá.{\i0}
Dialogue: 0,1:01:15.80,1:01:16.97,Main,,0,0,0,,{\i1}Ako.{\i0}
Dialogue: 0,1:01:17.34,1:01:19.60,Main,,0,0,0,,{\i1}O co tady jde?{\i0}
Dialogue: 0,1:01:21.04,1:01:22.01,Main,,0,0,0,,{\i1}Aya...{\i0}
Dialogue: 0,1:01:23.21,1:01:25.01,Main,,0,0,0,,{\i1}...se každým dnem lepší.\NChodí na svoje rehabilitace s úsměvem.{\i0}
Dialogue: 0,1:01:27.55,1:01:28.27,Main,,0,0,0,,{\i1}Kdybych{\i0}
Dialogue: 0,1:01:34.02,1:01:36.22,Main,,0,0,0,,{\i1}byla nemocná já,{\i0}
Dialogue: 0,1:01:38.69,1:01:40.83,Main,,0,0,0,,{\i1}neměla bych ani odvahu vyjít z domu.{\i0}
Dialogue: 0,1:01:43.29,1:01:44.76,Main,,0,0,0,,{\i1}Být venku s lidmi, co na mě koukají{\i0}
Dialogue: 0,1:01:45.83,1:01:47.20,Main,,0,0,0,,{\i1}a mluví o mě za mými zády.{\i0}
Dialogue: 0,1:01:48.27,1:01:49.93,Main,,0,0,0,,{\i1}Nikdy bych se nedokázala smát jako ona.{\i0}
Dialogue: 0,1:01:56.57,1:01:57.51,Main,,0,0,0,,{\i1}Po tomhle{\i0}
Dialogue: 0,1:01:57.98,1:01:59.31,Main,,0,0,0,,{\i1}jsem si uvědomila,{\i0}
Dialogue: 0,1:02:00.58,1:02:01.68,Main,,0,0,0,,{\i1}jak je vážně skvělá.{\i0}
Dialogue: 0,1:02:20.97,1:02:21.87,Main,,0,0,0,,{\i1}Koukni...{\i0}
Dialogue: 0,1:02:22.73,1:02:24.00,Main,,0,0,0,,{\i1}To pro tebe udělala Aya.{\i0}
Dialogue: 0,1:02:29.37,1:02:30.58,Main,,0,0,0,,{\i1}Víš jak{\i0}
Dialogue: 0,1:02:32.51,1:02:34.11,Main,,0,0,0,,{\i1}to pro ní bylo těžké{\i0}
Dialogue: 0,1:02:35.21,1:02:36.61,Main,,0,0,0,,{\i1}to ušít?{\i0}
Dialogue: 0,1:02:37.65,1:02:39.02,Main,,0,0,0,,{\i1}Chápeš to?{\i0}
Dialogue: 0,1:02:41.32,1:02:42.65,Main,,0,0,0,,{\i1}Strávila nad{\i0}
Dialogue: 0,1:02:42.95,1:02:43.99,Main,,0,0,0,,{\i1}tím hodiny.{\i0}
Dialogue: 0,1:02:46.82,1:02:48.69,Main,,0,0,0,,{\i1}I když měla dávno spát, pořád šila dál.{\i0}
Dialogue: 0,1:02:53.77,1:02:54.53,Main,,0,0,0,,{\i1}Hiro.{\i0}
Dialogue: 0,1:02:55.73,1:02:57.30,Main,,0,0,0,,{\i1}Udělal bys to?{\i0}
Dialogue: 0,1:02:59.24,1:03:00.30,Main,,0,0,0,,{\i1}Udělal bys tuhle{\i0}
Dialogue: 0,1:03:00.84,1:03:02.51,Main,,0,0,0,,{\i1}těžkou práci za ní?{\i0}
Dialogue: 0,1:03:07.51,1:03:10.05,Main,,0,0,0,,{\i1}Proč se za ní pořád stydíš?{\i0}
Dialogue: 0,1:03:10.75,1:03:11.78,Main,,0,0,0,,{\i1}Ako!{\i0}
Dialogue: 0,1:03:12.02,1:03:12.98,Main,,0,0,0,,{\i1}To stačí.{\i0}
Dialogue: 0,1:03:12.98,1:03:14.89,Main,,0,0,0,,{\i1}Jestli to bereš takhle,{\i0}
Dialogue: 0,1:03:15.12,1:03:16.32,Main,,0,0,0,,{\i1}tak já se stydím za tebe!{\i0}
Dialogue: 0,1:03:16.85,1:03:18.89,Main,,0,0,0,,{\i1}Už dost, uklidni se!{\i0}
Dialogue: 0,1:03:33.67,1:03:34.81,Main,,0,0,0,,{\i1}Hiroki.{\i0}
Dialogue: 0,1:03:37.28,1:03:39.11,Main,,0,0,0,,{\i1}Pochopil jsi, co ti Ako říkala?{\i0}
Dialogue: 0,1:03:42.41,1:03:43.31,Main,,0,0,0,,{\i1}Ty,{\i0}
Dialogue: 0,1:03:45.52,1:03:47.59,Main,,0,0,0,,{\i1}cítíš za to odpovědnost?{\i0}
Dialogue: 0,1:03:49.49,1:03:50.66,Main,,0,0,0,,{\i1}Je mi to líto.{\i0}
Dialogue: 0,1:03:56.99,1:03:57.90,Main,,0,0,0,,{\i1}Dobře.{\i0}
Dialogue: 0,1:03:59.80,1:04:01.40,Main,,0,0,0,,{\i1}To je můj syn.{\i0}
Dialogue: 0,1:04:20.59,1:04:22.19,Main,,0,0,0,,{\i1}Kde je ten nezbedný kluk?{\i0}
Dialogue: 0,1:04:23.75,1:04:25.12,Main,,0,0,0,,{\i1}Támhle je! Támhle! Hiroki!{\i0}
Dialogue: 0,1:04:25.12,1:04:26.22,Main,,0,0,0,,{\i1}Hiroki!{\i0}
Dialogue: 0,1:04:26.22,1:04:27.99,Main,,0,0,0,,{\i1}Hiroki, hodně štěstí!{\i0}
Dialogue: 0,1:04:29.83,1:04:31.96,Main,,0,0,0,,{\i1}- Hiro!\N- Ayo!{\i0}
Dialogue: 0,1:04:33.03,1:04:34.67,Main,,0,0,0,,{\i1}Hodně štěstí!{\i0}
Dialogue: 0,1:04:36.03,1:04:37.37,Main,,0,0,0,,{\i1}To je moje velká sestra, Aya!{\i0}
Dialogue: 0,1:04:38.54,1:04:40.24,Main,,0,0,0,,{\i1}Je vážně pěkná! Že jo?{\i0}
Dialogue: 0,1:04:40.24,1:04:41.54,Main,,0,0,0,,{\i1}Žárlíš?{\i0}
Dialogue: 0,1:04:45.91,1:04:47.28,Main,,0,0,0,,{\i1}To je díky tobě, Ako.{\i0}
Dialogue: 0,1:04:48.85,1:04:49.95,Main,,0,0,0,,{\i1}Jsi moje malá holčička.{\i0}
Dialogue: 0,1:04:49.95,1:04:50.95,Main,,0,0,0,,{\i1}Zmlkni.{\i0}
Dialogue: 0,1:05:06.03,1:05:07.83,Main,,0,0,0,,{\i1}Do toho, do toho, do toho!{\i0}
Dialogue: 0,1:05:21.15,1:05:22.11,Main,,0,0,0,,{\i1}Hiro...{\i0}
Dialogue: 0,1:05:25.62,1:05:27.18,Main,,0,0,0,,{\i1}Nestřílej jen tak,{\i0}
Dialogue: 0,1:05:27.18,1:05:30.09,Main,,0,0,0,,{\i1}míč se musí dostat do prostoru.{\i0}
Dialogue: 0,1:05:41.93,1:05:43.47,Main,,0,0,0,,{\i1}Je tam!{\i0}
Dialogue: 0,1:05:51.01,1:05:52.01,Main,,0,0,0,,{\i1}To je můj kluk.{\i0}
Dialogue: 0,1:05:53.28,1:05:54.95,Main,,0,0,0,,{\i1}Zapomněl jsem to vyfotit!{\i0}
Dialogue: 0,1:06:00.02,1:06:01.49,Main,,0,0,0,,Nezáleží na tom, kdo jsi,
Dialogue: 0,1:06:03.19,1:06:04.96,Main,,0,0,0,,nikdy nevyhraješ, pokud nebudeš mít někoho při sobě.
Dialogue: 0,1:06:08.63,1:06:09.73,Main,,0,0,0,,Její rodiče věděli
Dialogue: 0,1:06:10.13,1:06:11.43,Main,,0,0,0,,o její nemoci,
Dialogue: 0,1:06:12.66,1:06:14.47,Main,,0,0,0,,přesto jim každý den pomáhala.
Dialogue: 0,1:06:16.37,1:06:17.64,Main,,0,0,0,,Ani jednou
Dialogue: 0,1:06:18.40,1:06:19.64,Main,,0,0,0,,nezaváhala.
Dialogue: 0,1:06:21.67,1:06:23.24,Main,,0,0,0,,Bylo jedno, kolik problémů nastalo,
Dialogue: 0,1:06:24.04,1:06:25.38,Main,,0,0,0,,dokázala se vždycky zvednout.
Dialogue: 0,1:06:28.21,1:06:29.51,Main,,0,0,0,,Byl jsem ohromen
Dialogue: 0,1:06:31.35,1:06:32.75,Main,,0,0,0,,její rodinou.
Dialogue: 0,1:06:35.65,1:06:37.99,Main,,0,0,0,,{\i1}No tak! Jez! Ber si!{\i0}
Dialogue: 0,1:06:38.52,1:06:40.59,Main,,0,0,0,,{\i1}Naše tofu je nejlepší.{\i0}
Dialogue: 0,1:06:40.59,1:06:42.66,Main,,0,0,0,,{\i1}Je to úplně jiné, než co kupuješ v obchodě.{\i0}
Dialogue: 0,1:06:44.60,1:06:46.30,Main,,0,0,0,,{\i1}To je yakidofu.{\i0}
Dialogue: 0,1:06:46.30,1:06:47.20,Main,,0,0,0,,{\i1}Tohle je omei.{\i0}
Dialogue: 0,1:06:47.20,1:06:48.33,Main,,0,0,0,,{\i1}A tohle kinousoshi.{\i0}
Dialogue: 0,1:06:48.33,1:06:49.97,Main,,0,0,0,,{\i1}Tati, už toho nech.{\i0}
Dialogue: 0,1:06:50.30,1:06:52.40,Main,,0,0,0,,{\i1}Pozvali jsme ho na sukiyaki.{\i0}
Dialogue: 0,1:06:52.40,1:06:53.67,Main,,0,0,0,,{\i1}Proč mu furt vnucuješ tofu?{\i0}
Dialogue: 0,1:06:53.67,1:06:54.77,Main,,0,0,0,,{\i1}Protože...{\i0}
Dialogue: 0,1:06:55.11,1:06:57.01,Main,,0,0,0,,{\i1}Nejsem lakomý!{\i0}
Dialogue: 0,1:06:57.01,1:06:57.91,Main,,0,0,0,,{\i1}Je to výborný.{\i0}
Dialogue: 0,1:06:57.91,1:06:58.54,Main,,0,0,0,,{\i1}Jo?{\i0}
Dialogue: 0,1:06:58.54,1:06:58.91,Main,,0,0,0,,{\i1}Vážně.{\i0}
Dialogue: 0,1:06:58.91,1:06:59.91,Main,,0,0,0,,{\i1}Říkal, že je to dobré.{\i0}
Dialogue: 0,1:06:59.91,1:07:01.51,Main,,0,0,0,,{\i1}Promiň, táta je přepracovaný.{\i0}
Dialogue: 0,1:07:01.51,1:07:02.21,Main,,0,0,0,,{\i1}Jo, prosím...{\i0}
Dialogue: 0,1:07:02.45,1:07:03.81,Main,,0,0,0,,{\i1}Kdo je přepracovaný?{\i0}
Dialogue: 0,1:07:03.81,1:07:04.85,Main,,0,0,0,,{\i1}Ty, kdo jiný?{\i0}
Dialogue: 0,1:07:05.45,1:07:10.00,Main,,0,0,0,,{\i1}- Asou, chceš být v budoucnu doktor, jako tvůj otec?\N- Ne.{\i0}
Dialogue: 0,1:07:10.29,1:07:12.76,Main,,0,0,0,,{\i1}Říkal jsi, že brácha studuje medicínu.{\i0}
Dialogue: 0,1:07:13.19,1:07:14.16,Main,,0,0,0,,{\i1}Vážně?{\i0}
Dialogue: 0,1:07:14.96,1:07:16.03,Main,,0,0,0,,{\i1}Studoval.{\i0}
Dialogue: 0,1:07:16.69,1:07:17.60,Main,,0,0,0,,{\i1}Umřel...{\i0}
Dialogue: 0,1:07:19.26,1:07:20.53,Main,,0,0,0,,{\i1}Před dvěma roky, při autonehodě.{\i0}
Dialogue: 0,1:07:22.27,1:07:23.33,Main,,0,0,0,,{\i1}Ty jsi nelhal?{\i0}
Dialogue: 0,1:07:24.34,1:07:26.07,Main,,0,0,0,,{\i1}Promiň, to jsem nevěděla.{\i0}
Dialogue: 0,1:07:26.07,1:07:26.87,Main,,0,0,0,,{\i1}To nevadí.{\i0}
Dialogue: 0,1:07:26.87,1:07:30.61,Main,,0,0,0,,{\i1}V tom případě,\Nse musíš snažit a jíst, abys byl silnější než tvůj bratr.{\i0}
Dialogue: 0,1:07:32.58,1:07:34.01,Main,,0,0,0,,{\i1}Takže se nestyď! Nestyď se!{\i0}
Dialogue: 0,1:07:34.01,1:07:37.68,Main,,0,0,0,,{\i1}Tady je maso. Vem si.\NNepřestávej jíst.{\i0}
Dialogue: 0,1:07:37.68,1:07:39.42,Main,,0,0,0,,{\i1}Proč ho nenecháš si vybrat?{\i0}
Dialogue: 0,1:07:39.42,1:07:40.75,Main,,0,0,0,,{\i1}Proč?{\i0}
Dialogue: 0,1:07:41.49,1:07:42.65,Main,,0,0,0,,{\i1}Je to obtížná záležitost{\i0}
Dialogue: 0,1:07:43.05,1:07:44.42,Main,,0,0,0,,{\i1}..nerad tohle řeším{\i0}
Dialogue: 0,1:07:44.92,1:07:46.36,Main,,0,0,0,,{\i1}zrovna já.{\i0}
Dialogue: 0,1:07:47.89,1:07:49.46,Main,,0,0,0,,{\i1}Nicméně, jsme přesvědčeni,{\i0}
Dialogue: 0,1:07:50.46,1:07:52.60,Main,,0,0,0,,{\i1}že pro Ayu by bylo vhodnější, kdyby druhý ročník studovala na jiné škole,{\i0}
Dialogue: 0,1:07:52.83,1:07:54.93,Main,,0,0,0,,{\i1}kde by se jí mohli věnovat.{\i0}
Dialogue: 0,1:07:57.94,1:07:59.54,Main,,0,0,0,,{\i1}S politováním musím říct,{\i0}
Dialogue: 0,1:08:00.24,1:08:03.31,Main,,0,0,0,,{\i1}že tato škola není\Nvhodně vybavená{\i0}
Dialogue: 0,1:08:03.31,1:08:04.71,Main,,0,0,0,,{\i1}pro postižené děti.{\i0}
Dialogue: 0,1:08:04.71,1:08:05.68,Main,,0,0,0,,{\i1}Ano, ale...{\i0}
Dialogue: 0,1:08:05.68,1:08:06.61,Main,,0,0,0,,{\i1}Paní Ikeuchi.{\i0}
Dialogue: 0,1:08:08.55,1:08:10.31,Main,,0,0,0,,{\i1}Uvažovali jste{\i0}
Dialogue: 0,1:08:10.31,1:08:12.08,Main,,0,0,0,,{\i1}o škole pro postižené?{\i0}
Dialogue: 0,1:08:13.48,1:08:14.99,Main,,0,0,0,,{\i1}Takové školy,{\i0}
Dialogue: 0,1:08:15.35,1:08:17.25,Main,,0,0,0,,{\i1}s možným vybavením,{\i0}
Dialogue: 0,1:08:17.46,1:08:19.92,Main,,0,0,0,,{\i1}by pomohly s postižením vaší dcery.{\i0}
Dialogue: 0,1:08:21.23,1:08:22.36,Main,,0,0,0,,{\i1}Teď museli{\i0}
Dialogue: 0,1:08:22.63,1:08:25.43,Main,,0,0,0,,{\i1}učitelé zpomalit výuku{\i0}
Dialogue: 0,1:08:25.70,1:08:26.90,Main,,0,0,0,,{\i1}a to není fér{\i0}
Dialogue: 0,1:08:26.90,1:08:28.77,Main,,0,0,0,,{\i1}vůči ostatním studentům.{\i0}
Dialogue: 0,1:08:31.04,1:08:32.37,Main,,0,0,0,,{\i1}Řediteli...{\i0}
Dialogue: 0,1:08:32.84,1:08:34.17,Main,,0,0,0,,{\i1}moje dcera je šťastná{\i0}
Dialogue: 0,1:08:34.47,1:08:36.91,Main,,0,0,0,,{\i1}se svými kamarády,{\i0}
Dialogue: 0,1:08:36.91,1:08:38.88,Main,,0,0,0,,{\i1}kteří jí pomáhají každý den.{\i0}
Dialogue: 0,1:08:38.88,1:08:40.61,Main,,0,0,0,,{\i1}To my víme.{\i0}
Dialogue: 0,1:08:41.58,1:08:43.41,Main,,0,0,0,,{\i1}Popravdě. Vždycky příjdou do třídy pozdě,{\i0}
Dialogue: 0,1:08:44.08,1:08:46.95,Main,,0,0,0,,{\i1}tím výuku přeruší.{\i0}
Dialogue: 0,1:08:48.95,1:08:50.79,Main,,0,0,0,,{\i1}Prosím, vezměte to v úvahu.{\i0}
Dialogue: 0,1:08:54.79,1:08:56.66,Main,,0,0,0,,{\i1}Sama si rozhodnu svojí budoucnost.{\i0}
Dialogue: 0,1:09:02.40,1:09:03.80,Main,,0,0,0,,{\i1}Kvůli téhle nemoci {\i0}
Dialogue: 0,1:09:06.94,1:09:09.67,Main,,0,0,0,,{\i1}jsem musela opustit basketbalový tým.{\i0}
Dialogue: 0,1:09:12.04,1:09:13.21,Main,,0,0,0,,{\i1}Musela jsem se{\i0}
Dialogue: 0,1:09:15.65,1:09:18.38,Main,,0,0,0,,{\i1}hodně věcí vzdát,{\i0}
Dialogue: 0,1:09:21.62,1:09:23.35,Main,,0,0,0,,{\i1}neměla jsem jinou možnost.{\i0}
Dialogue: 0,1:09:25.36,1:09:28.23,Main,,0,0,0,,{\i1}Vím, že nemůžu dělat věci jako ostatní.{\i0}
Dialogue: 0,1:09:29.13,1:09:30.36,Main,,0,0,0,,{\i1}Ale...{\i0}
Dialogue: 0,1:09:30.59,1:09:32.46,Main,,0,0,0,,{\i1}Já chci zůstat s Mari a ostatními.{\i0}
Dialogue: 0,1:09:34.63,1:09:37.17,Main,,0,0,0,,{\i1}Nechci opustit svoje kamarády.{\i0}
Dialogue: 0,1:09:40.50,1:09:42.41,Main,,0,0,0,,{\i1}Dokud neztratím svoje přátele...{\i0}
Dialogue: 0,1:09:47.11,1:09:49.31,Main,,0,0,0,,{\i1}...nebudu nikdy sama.{\i0}
Dialogue: 0,1:09:57.25,1:09:58.62,Main,,0,0,0,,{\i1}Tak... prosím!{\i0}
Dialogue: 0,1:10:05.70,1:10:06.90,Main,,0,0,0,,{\i1}Chápu to.{\i0}
Dialogue: 0,1:10:12.94,1:10:14.51,Main,,0,0,0,,{\i1}Místo,{\i0}
Dialogue: 0,1:10:14.51,1:10:16.31,Main,,0,0,0,,{\i1}kde se cítíš šťastná,{\i0}
Dialogue: 0,1:10:16.81,1:10:18.08,Main,,0,0,0,,{\i1}je Higashi, že jo?{\i0}
Dialogue: 0,1:10:21.55,1:10:23.51,Main,,0,0,0,,{\i1}V tom případě, už nic neříkej.{\i0}
Dialogue: 0,1:10:24.62,1:10:25.72,Main,,0,0,0,,{\i1}Tvoje budoucnost{\i0}
Dialogue: 0,1:10:26.32,1:10:27.79,Main,,0,0,0,,{\i1}je taky něco,{\i0}
Dialogue: 0,1:10:28.55,1:10:30.79,Main,,0,0,0,,{\i1}o co bych se chtěla starat.{\i0}
Dialogue: 0,1:10:52.28,1:10:53.54,Main,,0,0,0,,{\i1}Jdeš dneska domů dřív?{\i0}
Dialogue: 0,1:10:53.54,1:10:55.25,Main,,0,0,0,,{\i1}Někdo se o tom bavil.{\i0}
Dialogue: 0,1:10:55.61,1:10:57.05,Main,,0,0,0,,{\i1}Ještě tě dovezeme na ošetřovnu.{\i0}
Dialogue: 0,1:10:57.05,1:10:58.42,Main,,0,0,0,,{\i1}Ne, to je dobrý.{\i0}
Dialogue: 0,1:10:58.42,1:11:00.68,Main,,0,0,0,,{\i1}Za chvíli půjdu, takže by to nemělo ani cenu.{\i0}
Dialogue: 0,1:11:00.68,1:11:01.55,Main,,0,0,0,,{\i1}Dobře.{\i0}
Dialogue: 0,1:11:01.55,1:11:02.12,Main,,0,0,0,,{\i1}Jo.{\i0}
Dialogue: 0,1:11:04.26,1:11:05.32,Main,,0,0,0,,{\i1}Prosím, sedněte si.{\i0}
Dialogue: 0,1:11:05.72,1:11:06.89,Main,,0,0,0,,{\i1}Hodina začíná.{\i0}
Dialogue: 0,1:11:08.93,1:11:09.86,Main,,0,0,0,,{\i1}Pane učiteli,{\i0}
Dialogue: 0,1:11:10.29,1:11:12.53,Main,,0,0,0,,{\i1}chtěla bych se třídou něco probrat.{\i0}
Dialogue: 0,1:11:13.43,1:11:14.16,Main,,0,0,0,,{\i1}Dobře.{\i0}
Dialogue: 0,1:11:14.97,1:11:16.03,Main,,0,0,0,,{\i1}Mluv.{\i0}
Dialogue: 0,1:11:17.30,1:11:19.97,Main,,0,0,0,,{\i1}Ráda bych mluvila o Ikeuchi.{\i0}
Dialogue: 0,1:11:39.82,1:11:41.79,Main,,0,0,0,,{\i1}Tenhle problém{\i0}
Dialogue: 0,1:11:41.79,1:11:43.63,Main,,0,0,0,,{\i1}se už řešil na třídních schůzkách,{\i0}
Dialogue: 0,1:11:43.63,1:11:45.13,Main,,0,0,0,,{\i1}jak asi už všichni víte.{\i0}
Dialogue: 0,1:11:45.43,1:11:48.30,Main,,0,0,0,,{\i1}Myslím, že bychom to měli řešit a říkat své názory, jako třída.{\i0}
Dialogue: 0,1:11:49.87,1:11:51.80,Main,,0,0,0,,{\i1}Myslím, že se Ikeuchi stala{\i0}
Dialogue: 0,1:11:51.80,1:11:54.67,Main,,0,0,0,,{\i1}překážkou pro celou třídu.{\i0}
Dialogue: 0,1:11:57.88,1:11:59.44,Main,,0,0,0,,{\i1}Myslím, že bychom měli mluvit{\i0}
Dialogue: 0,1:11:59.44,1:12:01.88,Main,,0,0,0,,{\i1}o nejlepší věci pro ni a taky pro nás.{\i0}
Dialogue: 0,1:12:06.28,1:12:07.62,Main,,0,0,0,,{\i1}Je mi jí líto,{\i0}
Dialogue: 0,1:12:07.89,1:12:10.85,Main,,0,0,0,,{\i1}ale v hodinách se strašně zpožďujeme.{\i0}
Dialogue: 0,1:12:11.36,1:12:12.49,Main,,0,0,0,,{\i1}Myslel jsem,{\i0}
Dialogue: 0,1:12:14.06,1:12:15.73,Main,,0,0,0,,{\i1}že to zvládnu,{\i0}
Dialogue: 0,1:12:17.13,1:12:17.93,Main,,0,0,0,,{\i1}ale chtěl bych{\i0}
Dialogue: 0,1:12:18.53,1:12:20.40,Main,,0,0,0,,{\i1}jí říct, aby si{\i0}
Dialogue: 0,1:12:20.86,1:12:22.23,Main,,0,0,0,,{\i1}pospíšila.{\i0}
Dialogue: 0,1:12:22.53,1:12:25.47,Main,,0,0,0,,{\i1}Je mi Ikeuchi líto.{\i0}
Dialogue: 0,1:12:26.84,1:12:28.04,Main,,0,0,0,,{\i1}Nemůžeme jí dát{\i0}
Dialogue: 0,1:12:28.04,1:12:29.81,Main,,0,0,0,,{\i1}prostě 5 nebo 10 minut navíc?{\i0}
Dialogue: 0,1:12:29.81,1:12:30.91,Main,,0,0,0,,{\i1}A{\i0}
Dialogue: 0,1:12:31.24,1:12:33.34,Main,,0,0,0,,{\i1}co v den zkoušek?{\i0}
Dialogue: 0,1:12:38.82,1:12:40.72,Main,,0,0,0,,{\i1}Sugiuro, co si myslíš ty?{\i0}
Dialogue: 0,1:12:45.36,1:12:46.42,Main,,0,0,0,,{\i1}Aya{\i0}
Dialogue: 0,1:12:48.43,1:12:49.79,Main,,0,0,0,,{\i1}se hodně bojí...{\i0}
Dialogue: 0,1:12:50.99,1:12:52.30,Main,,0,0,0,,{\i1}ale snaží se,{\i0}
Dialogue: 0,1:12:53.80,1:12:55.50,Main,,0,0,0,,{\i1}snaží se, co nejvíc to jde.{\i0}
Dialogue: 0,1:12:57.13,1:12:58.97,Main,,0,0,0,,{\i1}Když jí budeme všichni aspoň trochu pomáhat{\i0}
Dialogue: 0,1:12:58.97,1:13:00.60,Main,,0,0,0,,{\i1}nebude žádný problém.{\i0}
Dialogue: 0,1:13:00.90,1:13:03.51,Main,,0,0,0,,{\i1}Nebyla to její chyba,{\i0}
Dialogue: 0,1:13:03.51,1:13:05.64,Main,,0,0,0,,{\i1}že máš zraněnou ruku\Na nemůžeš hrát zápas?{\i0}
Dialogue: 0,1:13:07.48,1:13:08.38,Main,,0,0,0,,{\i1}To...{\i0}
Dialogue: 0,1:13:10.08,1:13:11.08,Main,,0,0,0,,{\i1}...ano, ale...{\i0}
Dialogue: 0,1:13:11.08,1:13:12.58,Main,,0,0,0,,{\i1}Co ty, Matsumuro?{\i0}
Dialogue: 0,1:13:21.39,1:13:23.73,Main,,0,0,0,,{\i1}Každé ráno na ní čekám před školou.{\i0}
Dialogue: 0,1:13:24.83,1:13:26.73,Main,,0,0,0,,{\i1}Pomáhám jí o přestávkách.{\i0}
Dialogue: 0,1:13:27.80,1:13:29.37,Main,,0,0,0,,{\i1}Mám Ayu ráda.{\i0}
Dialogue: 0,1:13:30.53,1:13:32.47,Main,,0,0,0,,{\i1}Dělám to, protože je kamarádka, ale...{\i0}
Dialogue: 0,1:13:34.57,1:13:36.44,Main,,0,0,0,,{\i1}ale... někdy...{\i0}
Dialogue: 0,1:13:38.31,1:13:40.28,Main,,0,0,0,,{\i1}je to vážně moc.{\i0}
Dialogue: 0,1:13:41.61,1:13:42.61,Main,,0,0,0,,{\i1}Saki...{\i0}
Dialogue: 0,1:13:45.12,1:13:48.02,Main,,0,0,0,,{\i1}Ve škole jsem se zhoršila...{\i0}
Dialogue: 0,1:13:49.59,1:13:50.95,Main,,0,0,0,,{\i1}Mám starosti s týmem...{\i0}
Dialogue: 0,1:13:54.63,1:13:56.86,Main,,0,0,0,,{\i1}Někdy bych se chtěla{\i0}
Dialogue: 0,1:13:57.53,1:13:59.23,Main,,0,0,0,,{\i1}pořádně vyspat...{\i0}
Dialogue: 0,1:14:02.07,1:14:03.27,Main,,0,0,0,,{\i1}Tohle už stačí.{\i0}
Dialogue: 0,1:14:03.27,1:14:05.14,Main,,0,0,0,,{\i1}Nezáleží na tom, jak moc jí chceme pomáhat,{\i0}
Dialogue: 0,1:14:05.14,1:14:07.47,Main,,0,0,0,,{\i1}stejně to je k ničemu, že jo?{\i0}
Dialogue: 0,1:14:12.24,1:14:13.18,Main,,0,0,0,,{\i1}Dobře.{\i0}
Dialogue: 0,1:14:14.58,1:14:15.55,Main,,0,0,0,,{\i1}Chápu to.{\i0}
Dialogue: 0,1:14:16.28,1:14:17.75,Main,,0,0,0,,{\i1}Slyšel jsem vaše názory.{\i0}
Dialogue: 0,1:14:18.32,1:14:19.38,Main,,0,0,0,,{\i1}Promluvím{\i0}
Dialogue: 0,1:14:19.65,1:14:21.62,Main,,0,0,0,,{\i1}si s její rodinou.{\i0}
Dialogue: 0,1:14:21.62,1:14:22.99,Main,,0,0,0,,{\i1}Jste pokrytci.{\i0}
Dialogue: 0,1:14:26.96,1:14:28.93,Main,,0,0,0,,{\i1}Tváříte se na ní a chováte se jako dobří kamarádi.{\i0}
Dialogue: 0,1:14:28.93,1:14:30.26,Main,,0,0,0,,{\i1}Pokaždé,{\i0}
Dialogue: 0,1:14:31.20,1:14:34.77,Main,,0,0,0,,{\i1}když se omluví, řeknete jí: "To nevadí, je to dobrý!"{\i0}
Dialogue: 0,1:14:36.27,1:14:38.44,Main,,0,0,0,,{\i1}Přitom si myslíte něco jiného.{\i0}
Dialogue: 0,1:14:39.10,1:14:40.90,Main,,0,0,0,,{\i1}"Jsi jen na obtíž."{\i0}
Dialogue: 0,1:14:40.90,1:14:42.04,Main,,0,0,0,,{\i1}Jste pokrytci.{\i0}
Dialogue: 0,1:14:42.41,1:14:43.37,Main,,0,0,0,,{\i1}Asou, poslouchej...{\i0}
Dialogue: 0,1:14:44.07,1:14:46.51,Main,,0,0,0,,{\i1}Jestli s ní máte všichni problém,\Ntak s ní nejednejte tak přátelsky!{\i0}
Dialogue: 0,1:14:47.01,1:14:49.71,Main,,0,0,0,,{\i1}"Jsi přítěž. Obtěžuješ mě.\NJsem unavená." Řekněte jí to do očí!{\i0}
Dialogue: 0,1:14:50.35,1:14:51.98,Main,,0,0,0,,{\i1}Potom bude vědět, na čem je.{\i0}
Dialogue: 0,1:14:52.32,1:14:54.42,Main,,0,0,0,,{\i1}Pak najde způsob, jak vám nebude překážet.{\i0}
Dialogue: 0,1:14:54.75,1:14:55.99,Main,,0,0,0,,{\i1}Asou, chápu,co tím myslíš, ale...{\i0}
Dialogue: 0,1:14:56.55,1:14:57.55,Main,,0,0,0,,{\i1}Ty taky!{\i0}
Dialogue: 0,1:14:57.86,1:14:58.76,Main,,0,0,0,,{\i1}"Ty" ?{\i0}
Dialogue: 0,1:14:59.16,1:14:59.69,Main,,0,0,0,,{\i1}Co si to...{\i0}
Dialogue: 0,1:14:59.69,1:15:01.79,Main,,0,0,0,,{\i1}Kdybyste k ní byli upřímní,{\i0}
Dialogue: 0,1:15:02.73,1:15:05.80,Main,,0,0,0,,{\i1}nikdy bychom se o tom nemuseli bavit.{\i0}
Dialogue: 0,1:15:06.03,1:15:08.10,Main,,0,0,0,,{\i1}Jenom jste dělali, co je pro vás nejlepší.{\i0}
Dialogue: 0,1:15:09.20,1:15:11.10,Main,,0,0,0,,{\i1}Kdybyste s ní mluvili přimo,{\i0}
Dialogue: 0,1:15:11.70,1:15:13.24,Main,,0,0,0,,{\i1}mohla by se rozhodnout...{\i0}
Dialogue: 0,1:15:18.88,1:15:19.84,Main,,0,0,0,,{\i1}Ikeuchi.{\i0}
Dialogue: 0,1:15:23.11,1:15:24.18,Main,,0,0,0,,{\i1}Aya!{\i0}
Dialogue: 0,1:15:33.06,1:15:34.39,Main,,0,0,0,,{\i1}Promiňte.{\i0}
Dialogue: 0,1:15:34.96,1:15:36.46,Main,,0,0,0,,{\i1}Něco jsem si tu zapomněla.{\i0}
Dialogue: 0,1:16:23.97,1:16:24.94,Main,,0,0,0,,{\i1}Nasedni.{\i0}
Dialogue: 0,1:17:40.68,1:17:42.32,Main,,0,0,0,,{\i1}Řekni něco!{\i0}
Dialogue: 0,1:17:45.42,1:17:47.12,Main,,0,0,0,,{\i1}Řekni mi něco o tučňácích!{\i0}
Dialogue: 0,1:17:48.33,1:17:49.79,Main,,0,0,0,,{\i1}Nebo rybách!{\i0}
Dialogue: 0,1:17:50.09,1:17:51.23,Main,,0,0,0,,{\i1}...psech!{\i0}
Dialogue: 0,1:17:52.50,1:17:54.46,Main,,0,0,0,,{\i1}Můžeš mi říct nějaký tvůj příběh?{\i0}
Dialogue: 0,1:17:56.23,1:17:58.50,Main,,0,0,0,,{\i1}Něco si vymysli!{\i0}
Dialogue: 0,1:17:59.84,1:18:01.24,Main,,0,0,0,,{\i1}Je to jedno, jestli to bude lež!{\i0}
Dialogue: 0,1:18:02.64,1:18:04.68,Main,,0,0,0,,{\i1}Nebudu se na tebe zlobit!{\i0}
Dialogue: 0,1:18:14.52,1:18:15.72,Main,,0,0,0,,{\i1}Nemůžu nic dělat.{\i0}
Dialogue: 0,1:18:20.56,1:18:22.03,Main,,0,0,0,,{\i1}Říkali tak hrozný věci,{\i0}
Dialogue: 0,1:18:25.10,1:18:27.10,Main,,0,0,0,,{\i1}ale já jsem stejný!{\i0}
Dialogue: 0,1:18:30.43,1:18:32.04,Main,,0,0,0,,{\i1}Věděl jsem, že jsi nemocná.{\i0}
Dialogue: 0,1:18:33.37,1:18:36.27,Main,,0,0,0,,{\i1}Byl jsem tak blízko a díval se, jak se trápíš.{\i0}
Dialogue: 0,1:18:38.98,1:18:40.64,Main,,0,0,0,,{\i1}A pořád{\i0}
Dialogue: 0,1:18:42.75,1:18:44.01,Main,,0,0,0,,{\i1}jsem nic nemohl dělat.{\i0}
Dialogue: 0,1:18:46.98,1:18:48.35,Main,,0,0,0,,{\i1}Myslel jsem, že ti můžu pomoct.{\i0}
Dialogue: 0,1:18:49.29,1:18:50.89,Main,,0,0,0,,{\i1}Ale jenom jsem si lhal.{\i0}
Dialogue: 0,1:18:53.79,1:18:55.36,Main,,0,0,0,,{\i1}Táta měl pravdu.{\i0}
Dialogue: 0,1:18:57.93,1:18:59.33,Main,,0,0,0,,{\i1}Jsem jen kluk.{\i0}
Dialogue: 0,1:19:05.87,1:19:07.50,Main,,0,0,0,,{\i1}To není pravda.{\i0}
Dialogue: 0,1:19:13.68,1:19:15.65,Main,,0,0,0,,{\i1}Vždycky jsi mi dal odvahu.{\i0}
Dialogue: 0,1:19:22.32,1:19:24.65,Main,,0,0,0,,{\i1}Vždycky jsi poslouchal to,{\i0}
Dialogue: 0,1:19:26.29,1:19:27.49,Main,,0,0,0,,{\i1}co jsem jiným říct nemohla.{\i0}
Dialogue: 0,1:19:29.53,1:19:30.96,Main,,0,0,0,,{\i1}Když jsem byla smutná,{\i0}
Dialogue: 0,1:19:32.66,1:19:34.10,Main,,0,0,0,,{\i1}rozesmál jsi mě.{\i0}
Dialogue: 0,1:19:36.93,1:19:38.64,Main,,0,0,0,,{\i1}Kdykoliv jsem měla zlomené srdce,{\i0}
Dialogue: 0,1:19:41.54,1:19:43.21,Main,,0,0,0,,{\i1}ty jsi tady vždycky byl.{\i0}
Dialogue: 0,1:19:48.55,1:19:50.38,Main,,0,0,0,,{\i1}Vždycky jsi tady pro mě byl.{\i0}
Dialogue: 0,1:20:13.77,1:20:14.87,Main,,0,0,0,,{\i1}Děkuju.{\i0}
Dialogue: 0,1:20:15.61,1:20:16.67,Main,,0,0,0,,{\i1}Asou.{\i0}
Dialogue: 0,1:20:28.45,1:20:29.39,Main,,0,0,0,,{\i1}Sbohem.{\i0}
Dialogue: 0,1:20:55.51,1:20:56.61,Main,,0,0,0,,Pro ni
Dialogue: 0,1:20:57.21,1:20:58.32,Main,,0,0,0,,bylo Higashi
Dialogue: 0,1:20:59.32,1:21:01.05,Main,,0,0,0,,důležité místo.
Dialogue: 0,1:21:03.72,1:21:04.65,Main,,0,0,0,,Nakonec,
Dialogue: 0,1:21:06.26,1:21:08.12,Main,,0,0,0,,i když vůbec nechtěla,
Dialogue: 0,1:21:09.23,1:21:10.73,Main,,0,0,0,,musela ho opustit.
Dialogue: 0,1:21:12.40,1:21:14.10,Main,,0,0,0,,Nemohla dokončit školu,
Dialogue: 0,1:21:15.73,1:21:17.57,Main,,0,0,0,,do které patřila.
Dialogue: 0,1:21:22.54,1:21:23.47,Main,,0,0,0,,Doktore,
Dialogue: 0,1:21:24.74,1:21:26.44,Main,,0,0,0,,měl jste to ve škole někdy těžký?
Dialogue: 0,1:21:31.18,1:21:32.22,Main,,0,0,0,,Myslím, že ne.
Dialogue: 0,1:21:33.15,1:21:34.58,Main,,0,0,0,,Proto mi nerozumíte.
Dialogue: 0,1:21:36.29,1:21:38.82,Main,,0,0,0,,Já nemám ve škole nikoho.
Dialogue: 0,1:21:41.09,1:21:42.46,Main,,0,0,0,,Násilníci,
Dialogue: 0,1:21:42.86,1:21:44.36,Main,,0,0,0,,zloději, 
Dialogue: 0,1:21:46.33,1:21:48.57,Main,,0,0,0,,všichni se odtud snaží dostat pryč.
Dialogue: 0,1:21:52.24,1:21:53.77,Main,,0,0,0,,Jste upřímný,
Dialogue: 0,1:21:55.47,1:21:57.14,Main,,0,0,0,,proto jste spokojený.
Dialogue: 0,1:22:02.68,1:22:03.98,Main,,0,0,0,,Asi ano.
Dialogue: 0,1:22:06.22,1:22:08.02,Main,,0,0,0,,Možná se mi v té škole líbilo,
Dialogue: 0,1:22:09.02,1:22:10.15,Main,,0,0,0,,proto
Dialogue: 0,1:22:10.82,1:22:12.96,Main,,0,0,0,,se mi nic takového nestalo.
Dialogue: 0,1:22:17.89,1:22:18.80,Main,,0,0,0,,Ale...
Dialogue: 0,1:22:21.97,1:22:23.33,Main,,0,0,0,,neměla bys říkat,
Dialogue: 0,1:22:24.07,1:22:25.37,Main,,0,0,0,,že raději umřeš,
Dialogue: 0,1:22:25.37,1:22:26.24,Main,,0,0,0,,než aby ses vrátila do školy.
Dialogue: 0,1:22:33.91,1:22:35.31,Main,,0,0,0,,Lidé, kteří žijí,
Dialogue: 0,1:22:36.31,1:22:37.61,Main,,0,0,0,,by si měli život užívat.
Dialogue: 0,1:22:39.15,1:22:40.32,Main,,0,0,0,,Je jedno, co se stane,
Dialogue: 0,1:22:41.45,1:22:42.79,Main,,0,0,0,,nebo jak to bude bolet.
Dialogue: 0,1:22:45.62,1:22:47.52,Main,,0,0,0,,Nemůžeš se vzdát.
Dialogue: 0,1:22:55.07,1:22:56.10,Main,,0,0,0,,Ta dívka,
Dialogue: 0,1:22:57.97,1:22:59.64,Main,,0,0,0,,chodila do školy pro postižené?
Dialogue: 0,1:23:01.47,1:23:02.24,Main,,0,0,0,,Ano.
Dialogue: 0,1:23:03.21,1:23:04.44,Main,,0,0,0,,Hledal jste ji?
Dialogue: 0,1:23:07.08,1:23:08.01,Main,,0,0,0,,Ano.
Dialogue: 0,1:23:14.55,1:23:16.42,Main,,0,0,0,,{\i1}Ale... zajímalo by mě,{\i0}
Dialogue: 0,1:23:18.02,1:23:19.06,Main,,0,0,0,,{\i1}jak můžou{\i0}
Dialogue: 0,1:23:19.82,1:23:22.16,Main,,0,0,0,,{\i1}tak klidně plavat okolo toho skla,{\i0}
Dialogue: 0,1:23:22.56,1:23:24.49,Main,,0,0,0,,{\i1}aniž by do něj nenarazili.{\i0}
Dialogue: 0,1:23:27.86,1:23:28.93,Main,,0,0,0,,{\i1}Kvůli delfínímu hlasu.{\i0}
Dialogue: 0,1:23:30.27,1:23:31.17,Main,,0,0,0,,{\i1}Hlasu?{\i0}
Dialogue: 0,1:23:31.40,1:23:33.27,Main,,0,0,0,,{\i1}Lidé ho neslyší.{\i0}
Dialogue: 0,1:23:33.27,1:23:34.90,Main,,0,0,0,,{\i1}Jejich hlas se odrazí od skla zpátky,{\i0}
Dialogue: 0,1:23:34.90,1:23:36.34,Main,,0,0,0,,{\i1}tím jím umožní{\i0}
Dialogue: 0,1:23:36.34,1:23:38.51,Main,,0,0,0,,{\i1}zůstat blízko ostatních.{\i0}
Dialogue: 0,1:23:39.81,1:23:41.14,Main,,0,0,0,,{\i1}Jo takhle.{\i0}
Dialogue: 0,1:23:42.05,1:23:43.58,Main,,0,0,0,,{\i1}Oni dokonce ty zvuky{\i0}
Dialogue: 0,1:23:43.58,1:23:46.42,Main,,0,0,0,,{\i1}používají k mluvení na dálku.{\i0}
Dialogue: 0,1:23:48.65,1:23:52.19,Main,,0,0,0,,{\i1}Jako tajné rozhovory, které neslyšíme.{\i0}
Dialogue: 0,1:23:53.26,1:23:54.86,Main,,0,0,0,,{\i1}Můžu je slyšet?{\i0}
Dialogue: 0,1:24:03.50,1:24:04.70,Main,,0,0,0,,{\i1}Kéž by lidi mohli{\i0}
Dialogue: 0,1:24:05.00,1:24:06.74,Main,,0,0,0,,{\i1}komunikovat{\i0}
Dialogue: 0,1:24:06.74,1:24:09.47,Main,,0,0,0,,{\i1}s ostatními na dálku, jako oni.{\i0}
Dialogue: 0,1:24:17.45,1:24:18.45,Main,,0,0,0,,{\i1}Počkej tady chvíli.{\i0}
Dialogue: 0,1:24:31.80,1:24:33.56,Main,,0,0,0,,{\i1}Není to ale tak úžasné jako skutečný delfín.{\i0}
Dialogue: 0,1:24:35.83,1:24:36.97,Main,,0,0,0,,{\i1}Děkuju.{\i0}
Dialogue: 0,1:24:51.82,1:24:52.85,Main,,0,0,0,,{\i1}Musíme pryč.{\i0}
Dialogue: 0,1:25:24.55,1:25:25.68,Main,,0,0,0,,{\i1}Už jede!{\i0}
Dialogue: 0,1:25:27.82,1:25:28.38,Main,,0,0,0,,{\i1}Ayo!{\i0}
Dialogue: 0,1:25:29.89,1:25:30.59,Main,,0,0,0,,{\i1}Ayo!{\i0}
Dialogue: 0,1:25:30.99,1:25:31.52,Main,,0,0,0,,{\i1}Ayo!{\i0}
Dialogue: 0,1:25:32.82,1:25:34.59,Main,,0,0,0,,{\i1}Nic mi není.{\i0}
Dialogue: 0,1:25:39.19,1:25:40.40,Main,,0,0,0,,{\i1}Co jsi to udělal?{\i0}
Dialogue: 0,1:25:40.40,1:25:42.07,Main,,0,0,0,,{\i1}Co když se nachladí?{\i0}
Dialogue: 0,1:25:42.67,1:25:43.70,Main,,0,0,0,,{\i1}Je mi to líto.{\i0}
Dialogue: 0,1:25:44.53,1:25:45.77,Main,,0,0,0,,{\i1}Musíme jí dát něco teplého,{\i0}
Dialogue: 0,1:25:45.77,1:25:47.10,Main,,0,0,0,,{\i1}je celá mokrá.{\i0}
Dialogue: 0,1:25:48.57,1:25:50.44,Main,,0,0,0,,{\i1}Běž a taky se osuš.{\i0}
Dialogue: 0,1:26:10.53,1:26:11.43,Main,,0,0,0,,{\i1}Jak jí je?{\i0}
Dialogue: 0,1:26:11.66,1:26:13.46,Main,,0,0,0,,{\i1}Dobře, zrovna spí.{\i0}
Dialogue: 0,1:26:13.70,1:26:15.30,Main,,0,0,0,,{\i1}Přikryla jsem jí teplou dekou.{\i0}
Dialogue: 0,1:26:16.40,1:26:17.60,Main,,0,0,0,,{\i1}Je to moje vina.{\i0}
Dialogue: 0,1:26:20.80,1:26:21.94,Main,,0,0,0,,{\i1}Moc se omlouvám.{\i0}
Dialogue: 0,1:26:22.34,1:26:24.14,Main,,0,0,0,,{\i1}Já se omlouvám,{\i0}
Dialogue: 0,1:26:25.18,1:26:26.38,Main,,0,0,0,,{\i1}že jsem na tebe křičela.{\i0}
Dialogue: 0,1:26:27.44,1:26:29.85,Main,,0,0,0,,{\i1}To je dobrý, neseď tak provinile.{\i0}
Dialogue: 0,1:26:32.82,1:26:34.78,Main,,0,0,0,,{\i1}Asou, prosím, zvedni hlavu.{\i0}
Dialogue: 0,1:26:41.66,1:26:43.59,Main,,0,0,0,,{\i1}Jsme ti opravdu vděční,{\i0}
Dialogue: 0,1:26:44.69,1:26:47.06,Main,,0,0,0,,{\i1}že jsi byl celý den s Ayou{\i0}
Dialogue: 0,1:26:48.10,1:26:50.23,Main,,0,0,0,,{\i1}a věnoval se jí.{\i0}
Dialogue: 0,1:26:51.00,1:26:51.90,Main,,0,0,0,,{\i1}Myslím,{\i0}
Dialogue: 0,1:26:52.47,1:26:54.47,Main,,0,0,0,,{\i1}že je za to Aya taky ráda.{\i0}
Dialogue: 0,1:26:58.27,1:26:59.58,Main,,0,0,0,,{\i1}Odteď,{\i0}
Dialogue: 0,1:27:00.31,1:27:03.41,Main,,0,0,0,,{\i1}je tu víc věcí, na které si musí dávat pozor.{\i0}
Dialogue: 0,1:27:05.35,1:27:07.65,Main,,0,0,0,,{\i1}Možná se zdá, že je jí dobře,{\i0}
Dialogue: 0,1:27:08.38,1:27:09.89,Main,,0,0,0,,{\i1}ale není{\i0}
Dialogue: 0,1:27:10.79,1:27:12.76,Main,,0,0,0,,{\i1}na tom zas až tak dobře.{\i0}
Dialogue: 0,1:27:14.99,1:27:17.03,Main,,0,0,0,,{\i1}Kdyby se jen trochu nachladila,{\i0}
Dialogue: 0,1:27:17.33,1:27:18.83,Main,,0,0,0,,{\i1}mohla by{\i0}
Dialogue: 0,1:27:20.13,1:27:22.23,Main,,0,0,0,,{\i1}mít zápal plic.{\i0}
Dialogue: 0,1:27:26.47,1:27:28.91,Main,,0,0,0,,{\i1}Věci, které byly dřív nic, mohly by teď...{\i0}
Dialogue: 0,1:27:30.01,1:27:31.51,Main,,0,0,0,,{\i1}být...{\i0}
Dialogue: 0,1:27:33.51,1:27:35.48,Main,,0,0,0,,{\i1}pro Ayu smrtelné.{\i0}
Dialogue: 0,1:27:39.48,1:27:41.45,Main,,0,0,0,,{\i1}Myslím to naprosto vážně.{\i0}
Dialogue: 0,1:27:43.62,1:27:44.59,Main,,0,0,0,,{\i1}Nic...{\i0}
Dialogue: 0,1:27:46.46,1:27:48.42,Main,,0,0,0,,{\i1}už nebude jako dřív.{\i0}
Dialogue: 0,1:27:50.89,1:27:52.93,Main,,0,0,0,,{\i1}Ona je teď{\i0}
Dialogue: 0,1:27:53.40,1:27:54.70,Main,,0,0,0,,{\i1}každou chvíli v nebezpečí,{\i0}
Dialogue: 0,1:27:55.90,1:27:57.83,Main,,0,0,0,,{\i1}my jsme ti, kteří ti jí svěřili,{\i0}
Dialogue: 0,1:27:57.83,1:27:59.30,Main,,0,0,0,,{\i1}takže{\i0}
Dialogue: 0,1:28:00.17,1:28:02.01,Main,,0,0,0,,{\i1}to není tvoje vina.{\i0}
Dialogue: 0,1:28:05.64,1:28:06.78,Main,,0,0,0,,{\i1}Omlouvám se.{\i0}
Dialogue: 0,1:28:11.71,1:28:12.95,Main,,0,0,0,,{\i1}Moc se omlouvám.{\i0}
Dialogue: 0,1:28:43.38,1:28:44.45,Main,,0,0,0,,{\i1}Za dnešek...{\i0}
Dialogue: 0,1:28:46.88,1:28:48.02,Main,,0,0,0,,{\i1}...omlouvám se.{\i0}
Dialogue: 0,1:28:49.62,1:28:51.92,Main,,0,0,0,,{\i1}Způsobila jsem ti problémy.{\i0}
Dialogue: 0,1:28:54.89,1:28:55.89,Main,,0,0,0,,{\i1}Než jsi odešel...{\i0}
Dialogue: 0,1:28:56.59,1:28:58.39,Main,,0,0,0,,{\i1}Co moje mamka říkala...{\i0}
Dialogue: 0,1:29:02.63,1:29:03.50,Main,,0,0,0,,{\i1}Promiň.{\i0}
Dialogue: 0,1:29:04.03,1:29:05.84,Main,,0,0,0,,{\i1}Moc tě neslyším, venku prší.{\i0}
Dialogue: 0,1:29:12.78,1:29:13.98,Main,,0,0,0,,{\i1}Já jsem...{\i0}
Dialogue: 0,1:29:18.72,1:29:20.38,Main,,0,0,0,,{\i1}Vážně je to těžké pochopit?{\i0}
Dialogue: 0,1:29:24.92,1:29:26.16,Main,,0,0,0,,{\i1}Vůbec ne.{\i0}
Dialogue: 0,1:29:27.56,1:29:28.76,Main,,0,0,0,,{\i1}To je dobrý.{\i0}
Dialogue: 0,1:29:32.80,1:29:33.66,Main,,0,0,0,,{\i1}Nic už nebude{\i0}
Dialogue: 0,1:29:33.93,1:29:36.23,Main,,0,0,0,,{\i1}jako dřív?{\i0}
Dialogue: 0,1:29:40.27,1:29:41.67,Main,,0,0,0,,{\i1}Můžeš mě vozit{\i0}
Dialogue: 0,1:29:43.34,1:29:45.48,Main,,0,0,0,,{\i1}na vozíku, ale{\i0}
Dialogue: 0,1:29:50.38,1:29:51.15,Main,,0,0,0,,{\i1}nemůžeme...{\i0}
Dialogue: 0,1:29:51.61,1:29:53.55,Main,,0,0,0,,{\i1}spolu někam jít.{\i0}
Dialogue: 0,1:29:58.09,1:30:00.02,Main,,0,0,0,,{\i1}Jen malý déšť{\i0}
Dialogue: 0,1:30:03.43,1:30:05.56,Main,,0,0,0,,{\i1}a může mi to ublížit.{\i0}
Dialogue: 0,1:30:07.70,1:30:08.87,Main,,0,0,0,,{\i1}Není pochyb,{\i0}
Dialogue: 0,1:30:11.43,1:30:13.87,Main,,0,0,0,,{\i1}že mi nebudeš rozumnět, co říkám.{\i0}
Dialogue: 0,1:30:18.61,1:30:21.34,Main,,0,0,0,,{\i1}Ani nebudu moct používat telefon.{\i0}
Dialogue: 0,1:30:26.75,1:30:28.08,Main,,0,0,0,,{\i1}Teď{\i0}
Dialogue: 0,1:30:30.09,1:30:31.69,Main,,0,0,0,,{\i1}se všechno změnilo.{\i0}
Dialogue: 0,1:30:34.39,1:30:36.69,Main,,0,0,0,,{\i1}Od té doby, co jsem byla na Higashi...{\i0}
Dialogue: 0,1:30:41.70,1:30:43.57,Main,,0,0,0,,{\i1}Asou...{\i0}
Dialogue: 0,1:30:46.57,1:30:48.00,Main,,0,0,0,,{\i1}Teď...{\i0}
Dialogue: 0,1:30:49.97,1:30:52.31,Main,,0,0,0,,{\i1}Oba žijeme v jiných světech.{\i0}
Dialogue: 0,1:31:52.87,1:31:54.44,Main,,0,0,0,,{\i1}Vážně se snažíš.{\i0}
Dialogue: 0,1:31:56.54,1:31:59.08,Main,,0,0,0,,{\i1}Určitě se na školu dostaneš.{\i0}
Dialogue: 0,1:32:04.88,1:32:06.35,Main,,0,0,0,,{\i1}Víš, vždycky jsem si říkala,{\i0}
Dialogue: 0,1:32:08.65,1:32:10.39,Main,,0,0,0,,{\i1}proč Aya?{\i0}
Dialogue: 0,1:32:12.99,1:32:15.09,Main,,0,0,0,,{\i1}Proč ne já?{\i0}
Dialogue: 0,1:32:16.19,1:32:19.20,Main,,0,0,0,,{\i1}Proč ona, která byla na všechny tak hodná?{\i0}
Dialogue: 0,1:32:21.86,1:32:23.70,Main,,0,0,0,,{\i1}Bůh je špatný,{\i0}
Dialogue: 0,1:32:24.70,1:32:27.17,Main,,0,0,0,,{\i1}když trestá lidi jako je Aya.{\i0}
Dialogue: 0,1:32:29.54,1:32:30.51,Main,,0,0,0,,{\i1}Zajímalo by mě,{\i0}
Dialogue: 0,1:32:31.04,1:32:32.91,Main,,0,0,0,,{\i1}jestli měl{\i0}
Dialogue: 0,1:32:33.84,1:32:35.51,Main,,0,0,0,,{\i1}nějaký důvod.{\i0}
Dialogue: 0,1:32:39.35,1:32:40.45,Main,,0,0,0,,{\i1}Chci{\i0}
Dialogue: 0,1:32:41.72,1:32:44.25,Main,,0,0,0,,{\i1}se dostat do Higashi na místo Ayi.{\i0}
Dialogue: 0,1:32:47.16,1:32:49.39,Main,,0,0,0,,{\i1}Je to můj sen, ale nechci si ho splnit pro sebe.{\i0}
Dialogue: 0,1:32:52.90,1:32:55.36,Main,,0,0,0,,{\i1}Udělám to{\i0}
Dialogue: 0,1:32:56.67,1:32:58.80,Main,,0,0,0,,{\i1}pro Ayu.{\i0}
Dialogue: 0,1:33:01.44,1:33:02.87,Main,,0,0,0,,{\i1}To je{\i0}
Dialogue: 0,1:33:03.17,1:33:04.97,Main,,0,0,0,,{\i1}asi jediný, co pro ni{\i0}
Dialogue: 0,1:33:06.38,1:33:09.35,Main,,0,0,0,,{\i1}můžu udělat.{\i0}
Dialogue: 0,1:33:14.28,1:33:15.85,Main,,0,0,0,,{\i1}Jsi vážně úžasná.{\i0}
Dialogue: 0,1:33:19.02,1:33:20.29,Main,,0,0,0,,{\i1}Jako tvoje{\i0}
Dialogue: 0,1:33:20.62,1:33:21.99,Main,,0,0,0,,{\i1}sestra.{\i0}
Dialogue: 0,1:33:49.89,1:33:50.92,Main,,0,0,0,,{\i1}Dlouho jsme se neviděli.{\i0}
Dialogue: 0,1:33:57.23,1:33:58.49,Main,,0,0,0,,{\i1}Nemohl jsem zavolat,{\i0}
Dialogue: 0,1:33:59.83,1:34:00.93,Main,,0,0,0,,{\i1}tak jsem přišel osobně.{\i0}
Dialogue: 0,1:34:07.47,1:34:09.04,Main,,0,0,0,,{\i1} Lidé, kteří tě budou chtít pochopit,{\i}
Dialogue: 0,1:34:09.04,1:34:10.41,Main,,0,0,0,,{\i1}tě budou poslouchat.{\i0}
Dialogue: 0,1:34:14.74,1:34:16.15,Main,,0,0,0,,{\i1}Dneska...{\i0}
Dialogue: 0,1:34:20.18,1:34:24.15,Main,,0,0,0,,{\i1}...měla... sen...{\i0}
Dialogue: 0,1:34:26.12,1:34:26.92,Main,,0,0,0,,{\i1}Sen?{\i0}
Dialogue: 0,1:34:30.96,1:34:33.96,Main,,0,0,0,,{\i1}V mých snech... můžu...{\i0}
Dialogue: 0,1:34:35.53,1:34:36.63,Main,,0,0,0,,{\i1}chodit, nebo jen tak{\i0}
Dialogue: 0,1:34:37.63,1:34:39.34,Main,,0,0,0,,{\i1}běhat...{\i0}
Dialogue: 0,1:34:40.80,1:34:42.51,Main,,0,0,0,,{\i1}Můžu se volně hýbat...{\i0}
Dialogue: 0,1:34:46.01,1:34:49.01,Main,,0,0,0,,{\i1}Jako, když jsem tě poprvé poznala.{\i0}
Dialogue: 0,1:34:53.42,1:34:54.55,Main,,0,0,0,,{\i1}Ale{\i0}
Dialogue: 0,1:34:57.29,1:35:00.22,Main,,0,0,0,,{\i1}tenhle sen byl jiný.{\i0}
Dialogue: 0,1:35:03.93,1:35:05.19,Main,,0,0,0,,{\i1}Já jsem...{\i0}
Dialogue: 0,1:35:08.96,1:35:13.34,Main,,0,0,0,,{\i1}...seděla na vozíčku.{\i0}
Dialogue: 0,1:35:16.44,1:35:18.04,Main,,0,0,0,,{\i1}Dokonce i ve snu...{\i0}
Dialogue: 0,1:35:25.82,1:35:29.29,Main,,0,0,0,,{\i1}... jsem byla... tělesně... postižená.{\i0}
Dialogue: 0,1:35:39.10,1:35:41.60,Main,,0,0,0,,{\i1}Chtěla jsem{\i0}
Dialogue: 0,1:35:45.33,1:35:47.20,Main,,0,0,0,,{\i1}svoje tělo přijmout...{\i0}
Dialogue: 0,1:35:54.38,1:35:56.01,Main,,0,0,0,,{\i1}Ale ve svém srdci...{\i0}
Dialogue: 0,1:35:59.18,1:36:01.28,Main,,0,0,0,,{\i1}...jsem ho možná nikdy nepřijala.{\i0}
Dialogue: 0,1:36:04.85,1:36:09.53,Main,,0,0,0,,{\i1}I když jsem to já.{\i0}
Dialogue: 0,1:36:18.57,1:36:21.47,Main,,0,0,0,,{\i1}Bude dobře, když ti řeknu, jak se teď cítím?{\i0}
Dialogue: 0,1:36:24.87,1:36:27.71,Main,,0,0,0,,{\i1}Nevím, co se dál stane...{\i0}
Dialogue: 0,1:36:30.35,1:36:31.55,Main,,0,0,0,,{\i1}Ale můžu ti říct,{\i0}
Dialogue: 0,1:36:34.65,1:36:36.25,Main,,0,0,0,,{\i1}že jak se teď cítím, je naprostá pravda.{\i0}
Dialogue: 0,1:36:37.29,1:36:38.59,Main,,0,0,0,,{\i1}Bez žádných pochybností.{\i0}
Dialogue: 0,1:36:40.72,1:36:41.66,Main,,0,0,0,,{\i1}Já...{\i0}
Dialogue: 0,1:36:43.83,1:36:45.03,Main,,0,0,0,,{\i1}jestli budeš mluvit,{\i0}
Dialogue: 0,1:36:46.70,1:36:48.00,Main,,0,0,0,,{\i1}jestli to bude těžké říct,{\i0}
Dialogue: 0,1:36:48.23,1:36:49.27,Main,,0,0,0,,{\i1}budu tě poslouchat.{\i0}
Dialogue: 0,1:36:52.67,1:36:54.70,Main,,0,0,0,,{\i1}Když nebudeš moct mluvit po telefonu,{\i0}
Dialogue: 0,1:36:56.11,1:36:57.67,Main,,0,0,0,,{\i1}přijdu za tebou.{\i0}
Dialogue: 0,1:37:01.71,1:37:02.98,Main,,0,0,0,,{\i1}Nejsem delfín,{\i0}
Dialogue: 0,1:37:04.81,1:37:06.52,Main,,0,0,0,,{\i1}ani ty ne...{\i0}
Dialogue: 0,1:37:09.45,1:37:10.69,Main,,0,0,0,,{\i1}Až půjdeš,{\i0}
Dialogue: 0,1:37:12.35,1:37:13.62,Main,,0,0,0,,{\i1}je jedno, že pomalu,{\i0}
Dialogue: 0,1:37:14.26,1:37:15.29,Main,,0,0,0,,{\i1}budu chodit vedle tebe.{\i0}
Dialogue: 0,1:37:20.13,1:37:22.87,Main,,0,0,0,,{\i1}Teď možná nebudu moc spolehlivý,{\i0}
Dialogue: 0,1:37:25.23,1:37:26.24,Main,,0,0,0,,{\i1}ale chci,{\i0}
Dialogue: 0,1:37:27.50,1:37:28.94,Main,,0,0,0,,{\i1}abych jednou byl.{\i0}
Dialogue: 0,1:37:33.04,1:37:34.68,Main,,0,0,0,,{\i1}Když věci nejsou jako dřív,{\i0}
Dialogue: 0,1:37:35.88,1:37:38.25,Main,,0,0,0,,{\i1}pořád máme naše vzpomínky.{\i0}
Dialogue: 0,1:37:39.95,1:37:41.95,Main,,0,0,0,,{\i1}Světy v kterých žijeme, nejsou odlišné.{\i0}
Dialogue: 0,1:37:49.94,1:37:50.82,Main,,0,0,0,,{\i1}Pro mě...{\i0}
Dialogue: 0,1:37:53.80,1:37:54.93,Main,,0,0,0,,{\i1}jsi...{\i0}
Dialogue: 0,1:38:00.24,1:38:01.34,Main,,0,0,0,,{\i1}Miluju tě.{\i0}
Dialogue: 0,1:38:05.51,1:38:06.38,Main,,0,0,0,,{\i1}Možná.{\i0}
Dialogue: 0,1:38:14.18,1:38:15.38,Main,,0,0,0,,{\i1}Myslím, že tě miluju.{\i0}
Dialogue: 0,1:38:18.69,1:38:19.62,Main,,0,0,0,,{\i1}Asi ano.{\i0}
Dialogue: 0,1:38:32.27,1:38:33.84,Main,,0,0,0,,{\i1}Děkuju.{\i0}
Dialogue: 0,1:40:00.56,1:40:01.52,Main,,0,0,0,,{\i1}Co se děje?{\i0}
Dialogue: 0,1:40:01.52,1:40:03.19,Main,,0,0,0,,{\i1}Musím rychle do nemocnice.{\i0}
Dialogue: 0,1:40:03.19,1:40:04.96,Main,,0,0,0,,{\i1}Co? Teď?{\i0}
Dialogue: 0,1:40:05.36,1:40:07.40,Main,,0,0,0,,{\i1}Mám o Ayu strach.{\i0}
Dialogue: 0,1:40:08.03,1:40:09.50,Main,,0,0,0,,{\i1}Já půjdu s tebou.{\i0}
Dialogue: 0,1:40:09.97,1:40:11.23,Main,,0,0,0,,{\i1}Ne, nemusíš.{\i0}
Dialogue: 0,1:40:12.50,1:40:14.34,Main,,0,0,0,,{\i1}Když tam půjdete oba,{\i0}
Dialogue: 0,1:40:14.34,1:40:15.70,Main,,0,0,0,,{\i1}bude to znamenat, že opravdu něco není v pořádku.{\i0}
Dialogue: 0,1:40:15.70,1:40:17.34,Main,,0,0,0,,{\i1}Mamka se o Ayu postará.{\i0}
Dialogue: 0,1:40:17.34,1:40:18.44,Main,,0,0,0,,{\i1}Myslíš?{\i0}
Dialogue: 0,1:40:18.44,1:40:19.44,Main,,0,0,0,,{\i1}Jo, jo.{\i0}
Dialogue: 0,1:40:19.44,1:40:21.28,Main,,0,0,0,,{\i1}Já s tátou pohlídám dům.{\i0}
Dialogue: 0,1:40:22.01,1:40:23.98,Main,,0,0,0,,{\i1}Podívám se na ni a zase přijdu zpátky.{\i0}
Dialogue: 0,1:40:23.98,1:40:26.32,Main,,0,0,0,,{\i1}Dobře. Buď opatrná.{\i0}
Dialogue: 0,1:40:26.32,1:40:27.22,Main,,0,0,0,,{\i1}Měj se.{\i0}
Dialogue: 0,1:40:27.22,1:40:28.18,Main,,0,0,0,,{\i1}Měj se.{\i0}
Dialogue: 0,1:40:40.73,1:40:41.86,Main,,0,0,0,,{\i1}Ayo?{\i0}
Dialogue: 0,1:40:45.83,1:40:46.67,Main,,0,0,0,,{\i1}Ayo...{\i0}
Dialogue: 0,1:40:48.44,1:40:49.30,Main,,0,0,0,,{\i1}Ayo...{\i0}
Dialogue: 0,1:40:57.61,1:40:58.61,Main,,0,0,0,,{\i1}Ayo!{\i0}
Dialogue: 0,1:41:03.09,1:41:05.22,Main,,0,0,0,,{\i1}Co tady děláš tak pozdě?{\i0}
Dialogue: 0,1:41:05.79,1:41:07.46,Main,,0,0,0,,{\i1}Budeš nemocná.{\i0}
Dialogue: 0,1:41:08.22,1:41:09.32,Main,,0,0,0,,{\i1}Pojď zpátky do pokoje.{\i0}
Dialogue: 0,1:41:10.86,1:41:12.66,Main,,0,0,0,,{\i1}Mami.{\i0}
Dialogue: 0,1:41:13.63,1:41:14.93,Main,,0,0,0,,{\i1}Copak?{\i0}
Dialogue: 0,1:41:15.60,1:41:18.47,Main,,0,0,0,,{\i1}Nemůžu spát...{\i0}
Dialogue: 0,1:41:21.24,1:41:25.91,Main,,0,0,0,,{\i1}Bojím se zavřít oči...{\i0}
Dialogue: 0,1:41:29.75,1:41:32.95,Main,,0,0,0,,{\i1}Chtěla jsem zavolat domů.{\i0}
Dialogue: 0,1:41:34.68,1:41:37.02,Main,,0,0,0,,{\i1}Snažila jsem se.{\i0}
Dialogue: 0,1:41:39.49,1:41:44.53,Main,,0,0,0,,{\i1}Chtěla jsem slyšet tvůj hlas.{\i0}
Dialogue: 0,1:41:47.10,1:41:48.20,Main,,0,0,0,,{\i1}Ale...{\i0}
Dialogue: 0,1:41:50.47,1:41:53.70,Main,,0,0,0,,{\i1}nemohla jsem zmáčknout tlačítka.{\i0}
Dialogue: 0,1:41:58.17,1:41:59.13,Main,,0,0,0,,{\i1}Pomoz mi,{\i0}
Dialogue: 0,1:42:01.68,1:42:02.40,Main,,0,0,0,,{\i1}mami.{\i0}
Dialogue: 0,1:42:09.03,1:42:09.87,Main,,0,0,0,,{\i1}Zmizí to.{\i0}
Dialogue: 0,1:42:16.36,1:42:18.96,Main,,0,0,0,,{\i1}Všechno,{\i0}
Dialogue: 0,1:42:19.29,1:42:20.93,Main,,0,0,0,,{\i1}co můžu udělat,{\i0}
Dialogue: 0,1:42:21.80,1:42:24.63,Main,,0,0,0,,{\i1}všechno to zmizí!{\i0}
Dialogue: 0,1:42:34.01,1:42:34.88,Main,,0,0,0,,{\i1}Jdeme.{\i0}
Dialogue: 0,1:42:49.86,1:42:53.10,Main,,0,0,0,,{\i1}Je pravda, že jsi nemocná a{\i0}
Dialogue: 0,1:42:53.56,1:42:56.33,Main,,0,0,0,,{\i1}můžeš toho dělat míň.{\i0}
Dialogue: 0,1:42:57.00,1:43:00.40,Main,,0,0,0,,{\i1}Chodí se ti a mluví špatně,{\i0}
Dialogue: 0,1:43:00.77,1:43:04.21,Main,,0,0,0,,{\i1}nemůžeš jít na vysokou nebo pracovat jako{\i0}
Dialogue: 0,1:43:04.61,1:43:06.01,Main,,0,0,0,,{\i1}tvoji kamarádi,{\i0}
Dialogue: 0,1:43:07.88,1:43:08.74,Main,,0,0,0,,{\i1}ale{\i0}
Dialogue: 0,1:43:09.58,1:43:11.65,Main,,0,0,0,,{\i1}vážně si myslíš,{\i0}
Dialogue: 0,1:43:13.48,1:43:14.98,Main,,0,0,0,,{\i1}že všechno, co můžeš udělat, zmizí?{\i0}
Dialogue: 0,1:43:17.82,1:43:20.09,Main,,0,0,0,,{\i1}Ayo, podívej,{\i0}
Dialogue: 0,1:43:21.36,1:43:22.12,Main,,0,0,0,,{\i1}a tohle,{\i0}
Dialogue: 0,1:43:22.59,1:43:23.46,Main,,0,0,0,,{\i1}tohle{\i0}
Dialogue: 0,1:43:24.69,1:43:25.53,Main,,0,0,0,,{\i1}a tohle.{\i0}
Dialogue: 0,1:43:26.46,1:43:27.46,Main,,0,0,0,,{\i1}To jsou deníky,{\i0}
Dialogue: 0,1:43:27.76,1:43:30.53,Main,,0,0,0,,{\i1}co jsi psala každý den.{\i0}
Dialogue: 0,1:43:31.87,1:43:33.27,Main,,0,0,0,,{\i1}Jsou plné slov,{\i0}
Dialogue: 0,1:43:34.47,1:43:35.80,Main,,0,0,0,,{\i1}které jsi psala perem,{\i0}
Dialogue: 0,1:43:36.10,1:43:37.14,Main,,0,0,0,,{\i1}které ses tak moc{\i0}
Dialogue: 0,1:43:37.81,1:43:39.78,Main,,0,0,0,,{\i1}snažila udržet.{\i0}
Dialogue: 0,1:43:43.55,1:43:45.35,Main,,0,0,0,,{\i1}Spolužáci, kamarádi,{\i0}
Dialogue: 0,1:43:46.52,1:43:48.55,Main,,0,0,0,,{\i1}všichni zdraví lidé tohle nedělali.{\i0}
Dialogue: 0,1:43:49.99,1:43:53.46,Main,,0,0,0,,{\i1}Ale tys to dělala.{\i0}
Dialogue: 0,1:44:05.00,1:44:06.07,Main,,0,0,0,,{\i1}Ayo, pořád...{\i0}
Dialogue: 0,1:44:09.57,1:44:11.44,Main,,0,0,0,,{\i1}...máš, co psát.{\i0}
Dialogue: 0,1:44:14.98,1:44:16.38,Main,,0,0,0,,{\i1}Mám pravdu?{\i0}
Dialogue: 0,1:44:20.32,1:44:21.38,Main,,0,0,0,,{\i1}Ano?{\i0}
Dialogue: 0,1:44:42.40,1:44:43.91,Main,,0,0,0,,{\i1}Nevěsta teď bude házet kytici.{\i0}
Dialogue: 0,1:44:46.17,1:44:48.38,Main,,0,0,0,,{\i1}Páni! Aya!{\i0}
Dialogue: 0,1:44:50.11,1:44:52.28,Main,,0,0,0,,{\i1}Dneska je pěkný den.{\i0}
Dialogue: 0,1:45:05.19,1:45:09.16,Main,,0,0,0,,{\i1}Dobře, tak my počkáme v autě.{\i0}
Dialogue: 0,1:45:09.16,1:45:11.70,Main,,0,0,0,,{\i1}Že jo, Shioko? Jo?{\i0}
Dialogue: 0,1:45:12.27,1:45:14.54,Main,,0,0,0,,{\i1}Postarej se o Ayu.{\i0}
Dialogue: 0,1:45:15.57,1:45:16.54,Main,,0,0,0,,{\i1}Vrátíme se.{\i0}
Dialogue: 0,1:45:20.44,1:45:23.35,Main,,0,0,0,,{\i1}Bylo to pěkné, viď?{\i0}
Dialogue: 0,1:45:23.35,1:45:26.21,Main,,0,0,0,,{\i1}Bylo tam hodně květin.{\i0}
Dialogue: 0,1:45:28.38,1:45:29.45,Main,,0,0,0,,{\i1}To jo.{\i0}
Dialogue: 0,1:45:38.73,1:45:42.33,Main,,0,0,0,,{\i1}Asou... to je pro tebe.{\i0}
Dialogue: 0,1:45:49.30,1:45:50.17,Main,,0,0,0,,{\i1}Co to je?{\i0}
Dialogue: 0,1:45:56.51,1:45:59.35,Main,,0,0,0,,{\i1}Zamilovaný dopis.{\i0}
Dialogue: 0,1:46:01.15,1:46:02.32,Main,,0,0,0,,{\i1}Vážně?{\i0}
Dialogue: 0,1:46:28.61,1:46:31.45,Main,,0,0,0,,{\i1}Byl to hezký obřad, co?{\i0}
Dialogue: 0,1:46:31.85,1:46:33.75,Main,,0,0,0,,{\i1}Panéí učitelka Madoka vypadala skvěle.{\i0}
Dialogue: 0,1:46:34.02,1:46:35.85,Main,,0,0,0,,{\i1}Opravdu jí to slušelo.{\i0}
Dialogue: 0,1:46:35.85,1:46:37.42,Main,,0,0,0,,{\i1}Připomnělo mi to nás.{\i0}
Dialogue: 0,1:46:41.16,1:46:41.96,Main,,0,0,0,,{\i1}Ayo!{\i0}
Dialogue: 0,1:46:41.96,1:46:42.76,Main,,0,0,0,,{\i1}Ayo!{\i0}
Dialogue: 0,1:46:43.79,1:46:44.53,Main,,0,0,0,,{\i1}Ayo!{\i0}
Dialogue: 0,1:46:44.76,1:46:46.46,Main,,0,0,0,,{\i1}Promiňte! Sestřičko!{\i0}
Dialogue: 0,1:46:46.46,1:46:46.70,Main,,0,0,0,,{\i1}Pomoc!{\i0}
Dialogue: 0,1:46:47.66,1:46:48.80,Main,,0,0,0,,{\i1}Jsi v pořádku? Ayo!{\i0}
Dialogue: 0,1:46:48.80,1:46:49.66,Main,,0,0,0,,{\i1}Ayo!{\i0}
Dialogue: 0,1:46:53.10,1:46:54.17,Main,,0,0,0,,{\i1}Ayo, budeš v pořádku!{\i0}
Dialogue: 0,1:47:05.01,1:47:06.31,Main,,0,0,0,,{\i1}Milý Asou,{\i0}
Dialogue: 0,1:47:07.78,1:47:11.09,Main,,0,0,0,,{\i1} jsou věci, které ti nemůžu říct sama,{\i}
Dialogue: 0,1:47:11.35,1:47:12.75,Main,,0,0,0,,{\i1}proto tenhle dopis.{\i}
Dialogue: 0,1:47:14.36,1:47:18.06,Main,,0,0,0,,{\i1} Děkuju, že jsi byl pořád se mnou.{\i}
Dialogue: 0,1:47:22.66,1:47:24.60,Main,,0,0,0,,{\i1} Děkuju za podporu,{\i}
Dialogue: 0,1:47:25.30,1:47:27.20,Main,,0,0,0,,{\i1}kterou jsi mi dal.{\i}
Dialogue: 0,1:47:27.60,1:47:29.10,Main,,0,0,0,,{\i1} Když tě vidím,{\i}
Dialogue: 0,1:47:29.34,1:47:31.14,Main,,0,0,0,,{\i1} jak jdeš za svými sny, jsem šťastná.{\i}
Dialogue: 0,1:47:33.68,1:47:37.11,Main,,0,0,0,,{\i1} Tvoje budoucnost mě od tebe odhání.{\i}
Dialogue: 0,1:47:39.01,1:47:42.82,Main,,0,0,0,,{\i1} A ty se mi ztrácíš.{\i}
Dialogue: 0,1:47:45.75,1:47:47.96,Main,,0,0,0,,{\i1} Já budu žít{\i}
Dialogue: 0,1:47:49.69,1:47:51.36,Main,,0,0,0,,{\i1} s budoucností, kterou teď mám.{\i}
Dialogue: 0,1:47:52.56,1:47:53.70,Main,,0,0,0,,{\i1} To je ono.{\i}
Dialogue: 0,1:47:55.06,1:47:56.80,Main,,0,0,0,,{\i1} To, co můžu teď udělat.{\i}
Dialogue: 0,1:47:58.33,1:48:00.60,Main,,0,0,0,,{\i1} Můj osud se nedá změnit.{\i}
Dialogue: 0,1:48:02.97,1:48:06.48,Main,,0,0,0,,{\i1} Každý den se sebou bojuju.{\i}
Dialogue: 0,1:48:07.64,1:48:08.44,Main,,0,0,0,,{\i1}Ayo?{\i0}
Dialogue: 0,1:48:08.78,1:48:11.08,Main,,0,0,0,,{\i1} Bolest, utrpení...{\i}
Dialogue: 0,1:48:11.45,1:48:12.78,Main,,0,0,0,,{\i1}Bolí tě něco?{\i0}
Dialogue: 0,1:48:12.78,1:48:15.22,Main,,0,0,0,,{\i1}Bojuju se vším,{\i}
Dialogue: 0,1:48:15.88,1:48:17.32,Main,,0,0,0,,{\i1}co tyhle pocity vyvolává.{\i}
Dialogue: 0,1:48:20.86,1:48:27.93,Main,,0,0,0,,{\i1}Napsala jsem Asouovi dopis.{\i0}
Dialogue: 0,1:48:31.30,1:48:32.93,Main,,0,0,0,,{\i1} Budu upřímná.{\i}
Dialogue: 0,1:48:35.30,1:48:39.91,Main,,0,0,0,,{\i1} Bolí mě, když jsem s tebou{\i}
Dialogue: 0,1:48:42.28,1:48:43.88,Main,,0,0,0,,{\i1} Čekat, až něco udělám,{\i}
Dialogue: 0,1:48:44.31,1:48:45.85,Main,,0,0,0,,{\i1}až něco udělám...{\i}
Dialogue: 0,1:48:46.85,1:48:49.52,Main,,0,0,0,,{\i1} Nemůžu si pomoct, ale jen kdybych byla zdravá,{\i}
Dialogue: 0,1:48:50.72,1:48:52.39,Main,,0,0,0,,{\i1} mohla bych něco udělat.{\i}
Dialogue: 0,1:48:54.99,1:48:56.69,Main,,0,0,0,,{\i1} Když jsem s tebou,{\i}
Dialogue: 0,1:48:57.16,1:49:00.36,Main,,0,0,0,,{\i1}mám sny, které se mi nikdy nevyplní.{\i}
Dialogue: 0,1:49:02.80,1:49:05.77,Main,,0,0,0,,{\i1} Není to tvoje vina.{\i}
Dialogue: 0,1:49:07.72,1:49:11.37,Main,,0,0,0,,{\i1} Ale žárlím,{\i}
Dialogue: 0,1:49:13.33,1:49:14.47,Main,,0,0,0,,{\i1}stydím se...{\i}
Dialogue: 0,1:49:16.89,1:49:18.92,Main,,0,0,0,,{\i1}Ať jsem,{\i}
Dialogue: 0,1:49:20.53,1:49:22.30,Main,,0,0,0,,{\i1}jaká jsem,{\i}
Dialogue: 0,1:49:24.60,1:49:26.66,Main,,0,0,0,,{\i1}žiju víc a víc nešťastně.{\i}
Dialogue: 0,1:49:29.59,1:49:31.03,Main,,0,0,0,,{\i1} Nemůžu s tím žít a{\i}
Dialogue: 0,1:49:31.69,1:49:34.06,Main,,0,0,0,,{\i1}čelit svojí budoucnosti.{\i}
Dialogue: 0,1:49:37.90,1:49:40.04,Main,,0,0,0,,{\i1} Děkuju za všechno, co jsi pro mě{\i}
Dialogue: 0,1:49:41.10,1:49:42.40,Main,,0,0,0,,{\i1}udělal.{\i}
Dialogue: 0,1:49:45.47,1:49:49.64,Main,,0,0,0,,{\i1} Že jsi mi řekl "Miluju tě."{\i}
Dialogue: 0,1:49:51.85,1:49:53.21,Main,,0,0,0,,{\i1} Děkuju ti.{\i}
Dialogue: 0,1:49:55.78,1:49:57.92,Main,,0,0,0,,{\i1} Omlouvám se, že ti to nemůžu{\i}
Dialogue: 0,1:49:58.92,1:50:00.26,Main,,0,0,0,,{\i1}nějak oplatit.{\i}
Dialogue: 0,1:50:02.92,1:50:06.49,Main,,0,0,0,,{\i1} Nemůžeme se už nikdy vidět.{\i}
Dialogue: 0,1:50:33.52,1:50:35.09,Main,,0,0,0,,{\i1}Mami.{\i0}
Dialogue: 0,1:50:39.16,1:50:41.10,Main,,0,0,0,,{\i1}Tati.{\i0}
Dialogue: 0,1:50:44.53,1:50:46.53,Main,,0,0,0,,{\i1}Doktore.{\i0}
Dialogue: 0,1:50:52.84,1:50:54.91,Main,,0,0,0,,{\i1}Můžu...{\i0}
Dialogue: 0,1:51:00.28,1:51:04.15,Main,,0,0,0,,{\i1}...se někdy... vdát?{\i0}
Dialogue: 0,1:51:17.50,1:51:20.54,Main,,0,0,0,,{\i1}Myslela jsem si to.{\i0}
Dialogue: 0,1:51:23.67,1:51:24.61,Main,,0,0,0,,{\i1}Ayo.{\i0}
Dialogue: 0,1:51:25.14,1:51:26.78,Main,,0,0,0,,{\i1}Ale...{\i0}
Dialogue: 0,1:51:30.21,1:51:32.18,Main,,0,0,0,,{\i1}I když nemůžu...{\i0}
Dialogue: 0,1:51:36.42,1:51:38.25,Main,,0,0,0,,{\i1}Nakonec...{\i0}
Dialogue: 0,1:51:43.89,1:51:47.56,Main,,0,0,0,,{\i1}až přijde můj čas,{\i0}
Dialogue: 0,1:51:48.43,1:51:57.24,Main,,0,0,0,,{\i1}chtěla bych ležet uprostřed hodně květin.{\i0}
Dialogue: 0,1:52:22.10,1:52:23.20,Main,,0,0,0,,{\i1}Jak jde učení?{\i0}
Dialogue: 0,1:52:24.10,1:52:25.87,Main,,0,0,0,,{\i1}Dobře.{\i0}
Dialogue: 0,1:52:27.40,1:52:30.04,Main,,0,0,0,,{\i1}Už jsi byl za Ayou?{\i0}
Dialogue: 0,1:52:31.84,1:52:32.47,Main,,0,0,0,,{\i1}Ano.{\i0}
Dialogue: 0,1:52:34.41,1:52:37.05,Main,,0,0,0,,{\i1}Chtěl jsem práci, ve které můžu pomáhat lidem,{\i0}
Dialogue: 0,1:52:38.01,1:52:41.68,Main,,0,0,0,,{\i1}ale nakonec jsem pro její nemoc nemohl nic udělat.{\i0}
Dialogue: 0,1:52:46.65,1:52:48.79,Main,,0,0,0,,{\i1}Důvod, proč jsem chtěl být neurologem je,{\i0}
Dialogue: 0,1:52:49.36,1:52:51.93,Main,,0,0,0,,{\i1}že tento obor zahrnuje víc věcí.{\i0}
Dialogue: 0,1:52:52.96,1:52:54.76,Main,,0,0,0,,{\i1}Myslel jsem, že najdu lék na nemoci,{\i0}
Dialogue: 0,1:52:54.76,1:52:57.00,Main,,0,0,0,,{\i1}které nikdo není schopný vyléčit.{\i0}
Dialogue: 0,1:52:59.30,1:53:01.34,Main,,0,0,0,,{\i1}Zpočátku jsem si hodně věřil.{\i0}
Dialogue: 0,1:53:03.27,1:53:04.41,Main,,0,0,0,,{\i1}Mohl jsem říct všechno,{\i0}
Dialogue: 0,1:53:05.14,1:53:06.64,Main,,0,0,0,,aniž bych něco předstíral.
Dialogue: 0,1:53:11.11,1:53:13.08,Main,,0,0,0,,{\i1}Říkám lidem tady na křesle:{\i0}
Dialogue: 0,1:53:13.92,1:53:16.89,Main,,0,0,0,,{\i1}"Vaše nemoc nevede ke smrti."{\i0}
Dialogue: 0,1:53:17.45,1:53:19.49,Main,,0,0,0,,{\i1}"Vydržte, dokud nebude výzkum u konce."{\i0}
Dialogue: 0,1:53:20.26,1:53:23.19,Main,,0,0,0,,{\i1}"Nevzdávejte to, snažte se vydržet."{\i0}
Dialogue: 0,1:53:26.53,1:53:28.03,Main,,0,0,0,,{\i1}Tohle jim říkám,{\i0}
Dialogue: 0,1:53:28.33,1:53:31.70,Main,,0,0,0,,{\i1}"Nemáme v úmyslu výzkum přerušit."{\i0}
Dialogue: 0,1:53:33.33,1:53:35.44,Main,,0,0,0,,{\i1}Ale je to lež.{\i0}
Dialogue: 0,1:53:38.67,1:53:40.54,Main,,0,0,0,,{\i1}Ale nechci se toho vzdát.{\i0}
Dialogue: 0,1:53:42.74,1:53:44.55,Main,,0,0,0,,{\i1}Pacienti se nikdy nevzdají.{\i0}
Dialogue: 0,1:53:45.78,1:53:47.92,Main,,0,0,0,,{\i1}Pro doktora není žádná omluva.{\i0}
Dialogue: 0,1:53:58.83,1:54:00.53,Main,,0,0,0,,{\i1}To říkám i tobě.{\i0}
Dialogue: 0,1:54:23.92,1:54:25.55,Main,,0,0,0,,{\i1}Doktore?{\i0}
Dialogue: 0,1:54:28.36,1:54:29.49,Main,,0,0,0,,{\i1}Dlouho jsem tě neviděl.{\i0}
Dialogue: 0,1:54:32.93,1:54:37.03,Main,,0,0,0,,{\i1}Každý měsíc{\i0}
Dialogue: 0,1:54:38.03,1:54:39.20,Main,,0,0,0,,{\i1}publikuješ{\i0}
Dialogue: 0,1:54:39.73,1:54:41.34,Main,,0,0,0,,{\i1}svoje myšlenky z deníku, že jo?{\i0}
Dialogue: 0,1:54:44.81,1:54:46.21,Main,,0,0,0,,{\i1}Přišel ti dopis od dívky ze základní školy,{\i0}
Dialogue: 0,1:54:46.44,1:54:48.11,Main,,0,0,0,,{\i1}píše tu, že četla,{\i0}
Dialogue: 0,1:54:48.51,1:54:49.74,Main,,0,0,0,,{\i1}co jsi napsala.{\i0}
Dialogue: 0,1:55:00.02,1:55:01.76,Main,,0,0,0,,{\i1}"Přeju si, abych byla mrtvá."{\i0}
Dialogue: 0,1:55:05.33,1:55:07.40,Main,,0,0,0,,{\i1}"Ayo, mám stejnou nemoc, jako ty."{\i0}
Dialogue: 0,1:55:10.27,1:55:13.33,Main,,0,0,0,,{\i1}"Když mi doktoři řekli, že to teď bude jen horší,"{\i0}
Dialogue: 0,1:55:14.27,1:55:15.64,Main,,0,0,0,,{\i1}"nemohla jsem přestat brečet."{\i0}
Dialogue: 0,1:55:17.37,1:55:19.21,Main,,0,0,0,,{\i1}"Už nemůžu moc chodit."{\i0}
Dialogue: 0,1:55:20.78,1:55:22.74,Main,,0,0,0,,{\i1}"Nemůžu být ve škole."{\i0}
Dialogue: 0,1:55:24.78,1:55:27.02,Main,,0,0,0,,{\i1}"Můj přítel mě opustil."{\i0}
Dialogue: 0,1:55:29.72,1:55:31.75,Main,,0,0,0,,{\i1}"Každý den se mamky ptám,"{\i0}
Dialogue: 0,1:55:32.92,1:55:36.62,Main,,0,0,0,,{\i1}"proč se to stalo zrovna mě?"{\i0}
Dialogue: 0,1:55:38.63,1:55:39.76,Main,,0,0,0,,{\i1}"Ale,"{\i0}
Dialogue: 0,1:55:40.90,1:55:42.76,Main,,0,0,0,,{\i1}"Ayo, když jsem četla, co jsi napsala,"{\i0}
Dialogue: 0,1:55:45.03,1:55:47.90,Main,,0,0,0,,{\i1}"uvědomila jsem si, že netrpím sama."{\i0}
Dialogue: 0,1:55:50.37,1:55:52.41,Main,,0,0,0,,{\i1}"Od té doby, co jsem nemocná, mám deprese."{\i0}
Dialogue: 0,1:55:52.64,1:55:57.05,Main,,0,0,0,,{\i1}"Koukám jen do země."{\i0}
Dialogue: 0,1:56:02.12,1:56:04.29,Main,,0,0,0,,{\i1}"Chci být sílná jako ty."{\i0}
Dialogue: 0,1:56:06.72,1:56:10.63,Main,,0,0,0,,{\i1}"I když mě to bolí a moje oči nepřestávají brečet,"{\i0}
Dialogue: 0,1:56:11.33,1:56:13.33,Main,,0,0,0,,{\i1}"chci to překonat a jít dál."{\i0}
Dialogue: 0,1:56:15.53,1:56:17.87,Main,,0,0,0,,{\i1}"Je to díky tobě Ayo.\NTy jsi mě k tomu přinutila."{\i0}
Dialogue: 0,1:56:23.91,1:56:25.01,Main,,0,0,0,,{\i1}Říkala jsi,{\i0}
Dialogue: 0,1:56:26.51,1:56:28.78,Main,,0,0,0,,{\i1}že chceš pomáhat{\i0}
Dialogue: 0,1:56:32.21,1:56:34.12,Main,,0,0,0,,{\i1}druhým, ne?{\i0}
Dialogue: 0,1:56:35.79,1:56:36.85,Main,,0,0,0,,{\i1}Myslel jsem,{\i0}
Dialogue: 0,1:56:38.42,1:56:39.75,Main,,0,0,0,,{\i1}že mi je úplně jedno,{\i0}
Dialogue: 0,1:56:40.29,1:56:41.32,Main,,0,0,0,,{\i1}jestli{\i0}
Dialogue: 0,1:56:42.62,1:56:44.09,Main,,0,0,0,,{\i1}lidi žijí nebo ne.{\i0}
Dialogue: 0,1:56:49.73,1:56:50.50,Main,,0,0,0,,{\i1}Ale...{\i0}
Dialogue: 0,1:56:53.57,1:56:54.67,Main,,0,0,0,,{\i1}změnil jsem se.{\i0}
Dialogue: 0,1:56:57.41,1:56:58.51,Main,,0,0,0,,{\i1}Až to přijde...{\i0}
Dialogue: 0,1:57:00.74,1:57:02.18,Main,,0,0,0,,{\i1}I když to bude bolet...{\i0}
Dialogue: 0,1:57:03.44,1:57:04.68,Main,,0,0,0,,{\i1}I kdyby ses musela nutit...{\i0}
Dialogue: 0,1:57:07.05,1:57:08.78,Main,,0,0,0,,{\i1}Chci, abys žila.{\i0}
Dialogue: 0,1:57:13.55,1:57:14.49,Main,,0,0,0,,{\i1}Takže,{\i0}
Dialogue: 0,1:57:17.43,1:57:18.65,Main,,0,0,0,,{\i1}já...{\i0}
Dialogue: 0,1:57:45.35,1:57:47.46,Main,,0,0,0,,{\i1}Asou.{\i0}
Dialogue: 0,1:57:53.53,1:57:58.57,Main,,0,0,0,,{\i1}Už nemůžu chodit.{\i0}
Dialogue: 0,1:58:02.00,1:58:02.87,Main,,0,0,0,,{\i1}Ale{\i0}
Dialogue: 0,1:58:04.01,1:58:05.51,Main,,0,0,0,,{\i1}mohla jsem{\i0}
Dialogue: 0,1:58:06.27,1:58:12.35,Main,,0,0,0,,{\i1}někomu pomoct.{\i0}
Dialogue: 0,1:58:14.82,1:58:15.55,Main,,0,0,0,,{\i1}Jo.{\i0}
Dialogue: 0,1:58:16.70,1:58:17.55,Main,,0,0,0,,{\i1}Byla jsem schopna pomoct.{\i0}
Dialogue: 0,1:58:26.13,1:58:27.20,Main,,0,0,0,,{\i1}To jo.{\i0}
Dialogue: 0,1:58:43.31,1:58:44.58,Main,,0,0,0,,{\i1}I když je ještě brzo,{\i0}
Dialogue: 0,1:58:44.58,1:58:46.25,Main,,0,0,0,,{\i1}přeju šťastné Vánoce.{\i0}
Dialogue: 0,1:58:51.22,1:58:52.39,Main,,0,0,0,,{\i1}To je pro tebe.{\i0}
Dialogue: 0,1:58:52.39,1:58:53.79,Main,,0,0,0,,{\i1}Ako.{\i0}
Dialogue: 0,1:58:54.99,1:58:56.12,Main,,0,0,0,,{\i1}Hiroki.{\i0}
Dialogue: 0,1:58:57.33,1:58:59.59,Main,,0,0,0,,{\i1}Tady pro Riku.{\i0}
Dialogue: 0,1:59:02.76,1:59:04.27,Main,,0,0,0,,{\i1}Úžasný.{\i0}
Dialogue: 0,1:59:05.40,1:59:07.90,Main,,0,0,0,,{\i1}Úžasný.{\i0}
Dialogue: 0,1:59:09.10,1:59:10.94,Main,,0,0,0,,{\i1}Tolik barev.{\i0}
Dialogue: 0,1:59:11.31,1:59:14.24,Main,,0,0,0,,{\i1}Popravdě, všechny ty dárky jsou od vaší sestry.{\i0}
Dialogue: 0,1:59:14.68,1:59:16.34,Main,,0,0,0,,{\i1}Od Ayi?{\i0}
Dialogue: 0,1:59:16.81,1:59:19.65,Main,,0,0,0,,{\i1}Všechny je pro vás vybrala.{\i0}
Dialogue: 0,1:59:22.62,1:59:25.52,Main,,0,0,0,,{\i1}Teď... přečtu dopisy, které všem napsala.{\i0}
Dialogue: 0,1:59:30.59,1:59:31.73,Main,,0,0,0,,{\i1}"Promiň, Ako.{\i0}
Dialogue: 0,1:59:33.09,1:59:34.03,Main,,0,0,0,,{\i1}Poslední dobou{\i0}
Dialogue: 0,1:59:34.26,1:59:36.33,Main,,0,0,0,,{\i1}máš víc a víc ráda módu,{\i0}
Dialogue: 0,1:59:37.33,1:59:39.37,Main,,0,0,0,,{\i1}přesto nosíš staré oblečení.{\i0}
Dialogue: 0,1:59:39.93,1:59:42.54,Main,,0,0,0,,{\i1}Měla jsi říct, že potřebuješ nové věci,{\i0}
Dialogue: 0,1:59:44.71,1:59:45.44,Main,,0,0,0,,{\i1}Ako,{\i0}
Dialogue: 0,1:59:46.17,1:59:48.01,Main,,0,0,0,,{\i1}a ne pyžamo.{\i0}
Dialogue: 0,1:59:49.14,1:59:50.14,Main,,0,0,0,,{\i1}Omlouvám se."{\i0}
Dialogue: 0,1:59:53.15,1:59:54.42,Main,,0,0,0,,{\i1}"Promiň, Hiroki.{\i0}
Dialogue: 0,1:59:55.78,1:59:59.22,Main,,0,0,0,,{\i1}Od začátku základní školy nosíš tu samou tašku.{\i0}
Dialogue: 0,2:00:00.05,2:00:01.59,Main,,0,0,0,,{\i1}Teď už jsi na střední,{\i0}
Dialogue: 0,2:00:01.59,2:00:04.46,Main,,0,0,0,,{\i1}nebylo by lepší, mít už novou?{\i0}
Dialogue: 0,2:00:05.69,2:00:08.26,Main,,0,0,0,,{\i1}Omlouvám se, že jsem si nepospíšila."{\i0}
Dialogue: 0,2:00:10.30,2:00:11.70,Main,,0,0,0,,{\i1}"Riko, tobě se taky omlouvám.{\i0}
Dialogue: 0,2:00:12.40,2:00:15.10,Main,,0,0,0,,{\i1}Obrázky, co mi maluješ,{\i0}
Dialogue: 0,2:00:15.54,2:00:19.24,Main,,0,0,0,,{\i1}jsou trochu míň barevné, teď se můžeš polepšit."{\i0}
Dialogue: 0,2:00:21.11,2:00:21.91,Main,,0,0,0,,{\i1}"Ako,{\i0}
Dialogue: 0,2:00:22.74,2:00:23.51,Main,,0,0,0,,{\i1}Hiro,{\i0}
Dialogue: 0,2:00:24.05,2:00:24.81,Main,,0,0,0,,{\i1}Riko.{\i0}
Dialogue: 0,2:00:25.78,2:00:27.08,Main,,0,0,0,,{\i1}Za všechno vám děkuju.{\i0}
Dialogue: 0,2:00:28.15,2:00:32.79,Main,,0,0,0,,{\i1}Omlouvám se, že jsem vám brala máminu pozornost."{\i0}
Dialogue: 0,2:00:38.03,2:00:38.93,Main,,0,0,0,,{\i1}Vypadá to,{\i0}
Dialogue: 0,2:00:39.83,2:00:41.36,Main,,0,0,0,,{\i1}že si Aya všimla{\i0}
Dialogue: 0,2:00:41.36,2:00:44.13,Main,,0,0,0,,{\i1}věcí, které mi ušly.{\i0}
Dialogue: 0,2:00:45.23,2:00:47.97,Main,,0,0,0,,{\i1}Ayo, si vždycky tak pečlivá.{\i0}
Dialogue: 0,2:00:48.27,2:00:50.20,Main,,0,0,0,,{\i1}Budeme ti pořád vděční.{\i0}
Dialogue: 0,2:00:51.57,2:00:53.54,Main,,0,0,0,,{\i1}Já s nima nebudu malovat.\NNechám si je na potom.{\i0}
Dialogue: 0,2:00:55.58,2:00:57.65,Main,,0,0,0,,{\i1}No tak! Začneme oslavovat!{\i0}
Dialogue: 0,2:00:57.65,2:00:58.61,Main,,0,0,0,,{\i1}Jo?{\i0}
Dialogue: 0,2:01:00.21,2:01:01.48,Main,,0,0,0,,{\i1}Připravit.{\i0}
Dialogue: 0,2:01:01.72,2:01:03.45,Main,,0,0,0,,{\i1}Veselé Vánoce!{\i0}
Dialogue: 0,2:01:06.82,2:01:07.72,Main,,0,0,0,,{\i1}Na zdraví!{\i0}
Dialogue: 0,2:01:09.19,2:01:10.26,Main,,0,0,0,,{\i1}Rika bude stát tady.{\i0}
Dialogue: 0,2:01:10.26,2:01:11.89,Main,,0,0,0,,{\i1}Chci být vedle Ayi.{\i0}
Dialogue: 0,2:01:11.89,2:01:12.86,Main,,0,0,0,,{\i1}Ne. Rika!{\i0}
Dialogue: 0,2:01:12.86,2:01:13.56,Main,,0,0,0,,{\i1}Ne, já!{\i0}
Dialogue: 0,2:01:14.53,2:01:15.23,Main,,0,0,0,,{\i1}Nehádejte se.{\i0}
Dialogue: 0,2:01:15.23,2:01:17.06,Main,,0,0,0,,{\i1}Postavte se vedle.{\i0}
Dialogue: 0,2:01:19.87,2:01:20.70,Main,,0,0,0,,{\i1}Připraveni?{\i0}
Dialogue: 0,2:01:24.61,2:01:26.01,Main,,0,0,0,,{\i1}Budeme pořád tady,{\i0}
Dialogue: 0,2:01:26.01,2:01:27.07,Main,,0,0,0,,{\i1}Ayo.{\i0}
Dialogue: 0,2:01:30.44,2:01:32.25,Main,,0,0,0,,{\i1}Tvoje místo je tady doma.{\i0}
Dialogue: 0,2:01:33.35,2:01:35.15,Main,,0,0,0,,{\i1}To se nezmění.{\i0}
Dialogue: 0,2:01:36.72,2:01:38.35,Main,,0,0,0,,{\i1}Pořád to je tvůj domov.{\i0}
Dialogue: 0,2:01:42.99,2:01:44.86,Main,,0,0,0,,{\i1}Děkuju vám{\i0}
Dialogue: 0,2:01:45.43,2:01:46.83,Main,,0,0,0,,{\i1}všem.{\i0}
Dialogue: 0,2:02:11.35,2:02:12.15,Main,,0,0,0,,{\i1}Ahoj.{\i0}
Dialogue: 0,2:02:25.62,2:02:42.29,Main,,0,0,0,,{\i1}Samukatta / Je ti zima?{\i0}
Dialogue: 0,2:02:42.69,2:02:43.30,Main,,0,0,0,,{\i1}Venku{\i0}
Dialogue: 0,2:02:43.30,2:02:44.42,Main,,0,0,0,,{\i1}strašně sněží.{\i0}
Dialogue: 0,2:02:44.72,2:02:46.52,Main,,0,0,0,,{\i1}Jsou tam tak tři metry sněhu.{\i0}
Dialogue: 0,2:02:57.41,2:02:58.64,Main,,0,0,0,,{\i1}Usotsuki / Lháři{\i0}
Dialogue: 0,2:03:05.84,2:03:07.30,Main,,0,0,0,,{\i1}Yond / Čti{\i0}
Dialogue: 0,2:03:14.60,2:03:15.74,Main,,0,0,0,,{\i1}Nikki / Deníky{\i0}
Dialogue: 0,2:03:18.79,2:03:19.72,Main,,0,0,0,,{\i1}Tyhle?{\i0}
Dialogue: 0,2:03:22.62,2:03:23.39,Main,,0,0,0,,{\i1}Můžu?{\i0}
Dialogue: 0,2:03:39.21,2:03:40.11,Main,,0,0,0,,{\i1}Nebuďte netrpěliví,{\i0}
Dialogue: 0,2:03:40.51,2:03:41.48,Main,,0,0,0,,{\i1}ani{\i0}
Dialogue: 0,2:03:41.78,2:03:42.84,Main,,0,0,0,,{\i1}sobečtí.{\i0}
Dialogue: 0,2:03:43.34,2:03:46.08,Main,,0,0,0,,{\i1}Všechno musíme dělat popostupně.{\i0}
Dialogue: 0,2:03:47.58,2:03:48.85,Main,,0,0,0,,{\i1}Jsi dobrá spisovatelka, viď?{\i0}
Dialogue: 0,2:03:53.59,2:03:55.56,Main,,0,0,0,,{\i1}Nejsem jediná, která trpí.{\i0}
Dialogue: 0,2:03:56.82,2:03:58.36,Main,,0,0,0,,{\i1}Pochopit.{\i0}
Dialogue: 0,2:03:58.79,2:04:00.53,Main,,0,0,0,,{\i1}Snažit se pochopit.{\i0}
Dialogue: 0,2:04:01.20,2:04:02.26,Main,,0,0,0,,{\i1}Obě možnosti{\i0}
Dialogue: 0,2:04:02.26,2:04:03.50,Main,,0,0,0,,{\i1}jsou bolestivé.{\i0}
Dialogue: 0,2:04:07.54,2:04:09.74,Main,,0,0,0,,{\i1}Kdybych byla květina, byla bych poupě.{\i0}
Dialogue: 0,2:04:13.07,2:04:14.71,Main,,0,0,0,,{\i1}Chci být na začátku...{\i0}
Dialogue: 0,2:04:15.44,2:04:16.64,Main,,0,0,0,,{\i1}svého mládí,{\i0}
Dialogue: 0,2:04:17.01,2:04:18.25,Main,,0,0,0,,{\i1}beze smutku.{\i0}
Dialogue: 0,2:04:21.45,2:04:22.45,Main,,0,0,0,,{\i1}Mami,{\i0}
Dialogue: 0,2:04:23.92,2:04:25.55,Main,,0,0,0,,{\i1}v hloubi svého srdce vím,{\i0}
Dialogue: 0,2:04:26.39,2:04:29.09,Main,,0,0,0,,{\i1}že ve mě nikdy nepřestaneš věřit.{\i0}
Dialogue: 0,2:04:30.93,2:04:32.73,Main,,0,0,0,,{\i1}Odteď, prosím, zůstaň pořád při mě.{\i0}
Dialogue: 0,2:04:34.40,2:04:36.10,Main,,0,0,0,,{\i1}Omlouvám se{\i0}
Dialogue: 0,2:04:36.50,2:04:37.57,Main,,0,0,0,,{\i1}za všechny způsobené problémy.{\i0}
Dialogue: 0,2:04:40.87,2:04:43.17,Main,,0,0,0,,{\i1}Proč si ta nemoc vybrala zrovna mě?{\i0}
Dialogue: 0,2:04:44.14,2:04:45.94,Main,,0,0,0,,{\i1}Nemůžu ani říct,{\i0}
Dialogue: 0,2:04:46.94,2:04:48.51,Main,,0,0,0,,{\i1}že je to osud.{\i0}
Dialogue: 0,2:04:56.48,2:04:58.92,Main,,0,0,0,,{\i1}Chci postavit stroj času, abych se mohla vrátit v čase.{\i0}
Dialogue: 0,2:05:01.36,2:05:03.06,Main,,0,0,0,,{\i1}Kdybych nebyla nemocná,{\i0}
Dialogue: 0,2:05:03.99,2:05:05.69,Main,,0,0,0,,{\i1}našla bych lásku?{\i0}
Dialogue: 0,2:05:08.93,2:05:10.60,Main,,0,0,0,,{\i1}Touhla po někom je{\i0}
Dialogue: 0,2:05:11.73,2:05:13.03,Main,,0,0,0,,{\i1}neúnosná.{\i0}
Dialogue: 0,2:05:18.27,2:05:20.61,Main,,0,0,0,,{\i1}Přeju si vrátit čas.{\i0}
Dialogue: 0,2:05:21.91,2:05:23.21,Main,,0,0,0,,{\i1}Přijmu to,{\i0}
Dialogue: 0,2:05:24.21,2:05:25.08,Main,,0,0,0,,{\i1}kdo teď jsem.{\i0}
Dialogue: 0,2:05:25.08,2:05:26.61,Main,,0,0,0,,{\i1}Uvědomila jsem si{\i0}
Dialogue: 0,2:05:27.95,2:05:29.32,Main,,0,0,0,,{\i1}že těch,{\i0}
Dialogue: 0,2:05:32.52,2:05:33.95,Main,,0,0,0,,{\i1}co mi chtějí ublížit,{\i0}
Dialogue: 0,2:05:33.95,2:05:35.96,Main,,0,0,0,,{\i1}je stejně jako těch,{\i0}
Dialogue: 0,2:05:36.92,2:05:38.06,Main,,0,0,0,,{\i1}co mi chtějí{\i0}
Dialogue: 0,2:05:38.06,2:05:40.59,Main,,0,0,0,,{\i1}pomoct.{\i0}
Dialogue: 0,2:05:45.17,2:05:47.23,Main,,0,0,0,,{\i1}Přesto tady zůstanu.{\i0}
Dialogue: 0,2:05:48.60,2:05:49.77,Main,,0,0,0,,{\i1}To je místo,{\i0}
Dialogue: 0,2:05:49.77,2:05:51.77,Main,,0,0,0,,{\i1}kam patřím.{\i0}
Dialogue: 0,2:05:53.34,2:05:55.11,Main,,0,0,0,,{\i1}Mám to vzdát a spadnout?{\i0}
Dialogue: 0,2:05:55.88,2:05:57.81,Main,,0,0,0,,{\i1}Vždycky se postavím.{\i0}
Dialogue: 0,2:05:58.81,2:06:01.18,Main,,0,0,0,,{\i1}Když se podívám na nebe{\i0}
Dialogue: 0,2:06:01.78,2:06:05.25,Main,,0,0,0,,{\i1}a rozhlídnu se kolem, je tu plno lidí, co se na něj dívá s úsměvem.{\i0}
Dialogue: 0,2:06:07.76,2:06:10.09,Main,,0,0,0,,{\i1}Spíše než žít v minulosti{\i0}
Dialogue: 0,2:06:10.93,2:06:13.23,Main,,0,0,0,,{\i1}musíme se zaměřit na to, co můžeme udělat dnes.{\i0}
Dialogue: 0,2:06:16.76,2:06:17.83,Main,,0,0,0,,{\i1}Mami...{\i0}
Dialogue: 0,2:06:19.97,2:06:21.07,Main,,0,0,0,,{\i1}můžu{\i0}
Dialogue: 0,2:06:22.34,2:06:23.90,Main,,0,0,0,,{\i1}...se někdy vdát?{\i0}
Dialogue: 0,2:06:24.20,2:06:25.14,Main,,0,0,0,,{\i1}Mami,{\i0}
Dialogue: 0,2:06:27.58,2:06:29.24,Main,,0,0,0,,{\i1}můžu se někdy vdát?{\i0}
Dialogue: 0,2:06:36.48,2:06:38.09,Main,,0,0,0,,{\i1}Vážně to nevzdáš?{\i0}
Dialogue: 0,2:06:40.89,2:06:41.96,Main,,0,0,0,,{\i1}Uděláš všechno proto,{\i0}
Dialogue: 0,2:06:42.79,2:06:43.96,Main,,0,0,0,,{\i1}abys mohla zůstat naživu, že jo?{\i0}
Dialogue: 0,2:07:13.29,2:07:14.72,Main,,0,0,0,,{\i1}Sou da yo / Samozřejmě{\i0}
Dialogue: 0,2:07:17.06,2:07:18.29,Main,,0,0,0,,{\i1}Nebuď tak sebejistá!{\i0}
Dialogue: 0,2:07:38.54,2:07:40.58,Main,,0,0,0,,{\i1}Ikite ne / Prosím, žij{\i0}
Dialogue: 0,2:08:03.61,2:08:05.99,Main,,0,0,0,,Zutto ikite / Žij navždy
Dialogue: 0,2:08:12.38,2:08:13.45,Main,,0,0,0,,{\i1}Dobře.{\i0}
Dialogue: 0,2:08:26.01,2:08:28.36,Main,,0,0,0,,{\i1}Děkuju{\i0}
Dialogue: 0,2:08:45.58,2:08:46.48,Main,,0,0,0,,{\i1}Usnula jsi?{\i0}
Dialogue: 0,2:08:51.29,2:08:52.75,Main,,0,0,0,,{\i1}Směješ se.{\i0}
Dialogue: 0,2:09:10.07,2:09:11.67,Main,,0,0,0,,Ikeuchi
Dialogue: 0,2:09:13.41,2:09:14.81,Main,,0,0,0,,zemřela pět let poté.
Dialogue: 0,2:09:17.38,2:09:19.05,Main,,0,0,0,,Umřela?
Dialogue: 0,2:09:29.36,2:09:30.62,Main,,0,0,0,,Žij navždy.
Dialogue: 0,2:09:31.79,2:09:32.99,Main,,0,0,0,,Řekla.
Dialogue: 0,2:09:35.96,2:09:36.96,Main,,0,0,0,,Ve svém srdci
Dialogue: 0,2:09:37.73,2:09:39.00,Main,,0,0,0,,chtěla
Dialogue: 0,2:09:40.07,2:09:42.00,Main,,0,0,0,,žít víc než kdokoli jiný.
Dialogue: 0,2:09:52.41,2:09:54.68,Main,,0,0,0,,To je poprvé, co jsem to někomu řekl.
Dialogue: 0,2:10:01.82,2:10:03.49,Main,,0,0,0,,Nerozumím
Dialogue: 0,2:10:04.66,2:10:06.49,Main,,0,0,0,,tvému trápení, ani pocitům.
Dialogue: 0,2:10:08.96,2:10:09.90,Main,,0,0,0,,Ale,
Dialogue: 0,2:10:12.13,2:10:13.53,Main,,0,0,0,,chci ti rozumět.
Dialogue: 0,2:10:17.07,2:10:18.81,Main,,0,0,0,,A chci tě slyšet mluvit pravdu.
Dialogue: 0,2:10:32.19,2:10:33.29,Main,,0,0,0,,Mizuki,
Dialogue: 0,2:10:33.29,2:10:35.22,Main,,0,0,0,,doktor Takigawa tě hledá.
Dialogue: 0,2:10:36.56,2:10:37.66,Main,,0,0,0,,Hned přijde.
Dialogue: 0,2:10:40.23,2:10:41.40,Main,,0,0,0,,Půjdeš na rehabilitaci?
Dialogue: 0,2:10:44.50,2:10:45.37,Main,,0,0,0,,Jo.
Dialogue: 0,2:10:59.95,2:11:02.75,Main,,0,0,0,,Děkuju vám, doktore.
Dialogue: 0,2:11:25.41,2:11:26.21,Main,,0,0,0,,Jak dlouho tu jsi?
Dialogue: 0,2:11:31.14,2:11:32.31,Main,,0,0,0,,Omlouvám se,
Dialogue: 0,2:11:34.82,2:11:36.52,Main,,0,0,0,,slyšela jsem všechno.
Dialogue: 0,2:11:41.39,2:11:42.46,Main,,0,0,0,,Kdysi dávno,
Dialogue: 0,2:11:44.36,2:11:46.43,Main,,0,0,0,,když jsme se potkali v knihovně,
Dialogue: 0,2:11:47.93,2:11:49.06,Main,,0,0,0,,řekl jsi mi:
Dialogue: 0,2:11:50.63,2:11:52.77,Main,,0,0,0,,"Jsi vážně úžasná, jako tvoje sestra."
Dialogue: 0,2:11:53.70,2:11:55.27,Main,,0,0,0,,Že jo?
Dialogue: 0,2:11:59.11,2:12:03.14,Main,,0,0,0,,Opravdu mě to potěšilo.
Dialogue: 0,2:12:05.71,2:12:07.65,Main,,0,0,0,,Protože na Ayu pořád myslím,
Dialogue: 0,2:12:08.18,2:12:10.62,Main,,0,0,0,,ať se stane cokoliv, nezmění se to.
Dialogue: 0,2:12:14.02,2:12:15.26,Main,,0,0,0,,A teď,
Dialogue: 0,2:12:17.29,2:12:19.39,Main,,0,0,0,,potom, co se stalo.
Dialogue: 0,2:12:22.56,2:12:24.56,Main,,0,0,0,,Jak by ses choval ty, kdybys tu stál místo mě?
Dialogue: 0,2:12:26.67,2:12:27.90,Main,,0,0,0,,Co myslíš?
Dialogue: 0,2:12:29.14,2:12:30.84,Main,,0,0,0,,Co bys řekl?
Dialogue: 0,2:12:34.01,2:12:36.31,Main,,0,0,0,,Nikdo jiný mi na tohle neodpoví.
Dialogue: 0,2:12:38.78,2:12:40.15,Main,,0,0,0,,Já
Dialogue: 0,2:12:41.72,2:12:43.48,Main,,0,0,0,,sama hledám odpověď.
Dialogue: 0,2:12:50.72,2:12:51.69,Main,,0,0,0,,Jo.
Dialogue: 0,2:12:58.27,2:13:00.30,Main,,0,0,0,,Musíš najít odpověď sama.
Dialogue: 0,2:13:07.31,2:13:08.18,Main,,0,0,0,,Vlastně,
Dialogue: 0,2:13:11.55,2:13:12.71,Main,,0,0,0,,mýlila jsem se.
Dialogue: 0,2:13:15.32,2:13:16.35,Main,,0,0,0,,Asou,
Dialogue: 0,2:13:18.32,2:13:19.92,Main,,0,0,0,,vůbec jsi se nezměnil.
Dialogue: 0,2:13:58.90,2:14:00.40,Main,,0,0,0,,{\i1}Ikeuchi Aya{\i}
Dialogue: 0,2:14:11.94,2:14:17.11,Main,,0,0,0,,Vámi zadané číslo neexistuje.
Dialogue: 0,2:14:17.11,2:14:21.52,Main,,0,0,0,,Prosím, zkontrolujte jej a zkuste to znovu.
Dialogue: 0,2:15:14.19,2:15:15.11,Main,,0,0,0,,Ahoj!
Dialogue: 0,2:15:15.73,2:15:16.86,Main,,0,0,0,,Vítej zpátky!
Dialogue: 0,2:15:18.20,2:15:19.65,Main,,0,0,0,,Tak jaký byl sbor?
Dialogue: 0,2:15:19.97,2:15:21.27,Main,,0,0,0,,Šlo to Rice?
Dialogue: 0,2:15:21.52,2:15:22.66,Main,,0,0,0,,Skvěle!
Dialogue: 0,2:15:22.94,2:15:24.34,Main,,0,0,0,,Opravdu vyrostla.
Dialogue: 0,2:15:24.78,2:15:26.47,Main,,0,0,0,,Určitě není jako ty!
Dialogue: 0,2:15:27.23,2:15:28.85,Main,,0,0,0,,Ach jo! Vždycky to tak přeháníš.
Dialogue: 0,2:15:28.85,2:15:29.81,Main,,0,0,0,,Co?
Dialogue: 0,2:15:32.85,2:15:34.03,Main,,0,0,0,,Něco se ti stalo?
Dialogue: 0,2:15:34.26,2:15:35.12,Main,,0,0,0,,Co?
Dialogue: 0,2:15:35.48,2:15:36.69,Main,,0,0,0,,Jsi uplakaná.
Dialogue: 0,2:15:38.59,2:15:39.59,Main,,0,0,0,,Asou
Dialogue: 0,2:15:40.48,2:15:42.01,Main,,0,0,0,,se nezměnil.
Dialogue: 0,2:15:44.34,2:15:46.21,Main,,0,0,0,,Bála jsem se zbytečně.
Dialogue: 0,2:15:51.42,2:15:52.24,Main,,0,0,0,,Hej!
Dialogue: 0,2:15:53.26,2:15:54.52,Main,,0,0,0,,Jdem se napít.
Dialogue: 0,2:15:55.62,2:15:56.90,Main,,0,0,0,,Půjdeme někam slavit.
Dialogue: 0,2:15:57.49,2:15:59.25,Main,,0,0,0,,Musím zítra ráno brzo vstávat.
Dialogue: 0,2:15:59.25,2:16:00.29,Main,,0,0,0,,Už jsem řekl.
Dialogue: 0,2:16:00.68,2:16:01.72,Main,,0,0,0,,Tak buď ticho.
Dialogue: 0,2:16:01.72,2:16:03.36,Main,,0,0,0,,{\i1}Slyšíš, Ayo?{\i}
Dialogue: 0,2:16:07.05,2:16:08.49,Main,,0,0,0,,{\i1}Ayo...{\i}
Dialogue: 0,2:16:09.24,2:16:11.63,Main,,0,0,0,,{\i1}Asou stále žije.{\i}
Dialogue: 0,2:16:12.90,2:16:14.05,Main,,0,0,0,,Jak vám je?
Dialogue: 0,2:16:14.83,2:16:17.70,Main,,0,0,0,,{\i1}My taky.{\i}
Dialogue: 0,2:16:19.25,2:16:21.62,Main,,0,0,0,,{\i1} Teď a navždy.{\i}
Dialogue: 0,2:16:29.10,2:16:30.24,Main,,0,0,0,,{\i1} Ayo,{\i}
Dialogue: 0,2:16:32.23,2:16:33.49,Main,,0,0,0,,{\i1} Cítíš to?{\i}
Dialogue: 0,2:16:50.53,2:16:51.63,Main,,0,0,0,,{\i1}Co myslíš Ayo?{\i0}
Dialogue: 0,2:16:52.14,2:16:53.44,Main,,0,0,0,,{\i1}Povedlo se mi to?{\i0}
Dialogue: 0,2:17:15.01,2:17:15.73,Main,,0,0,0,,{\i1}Mami.{\i0}
Dialogue: 0,2:17:19.78,2:17:21.87,Main,,0,0,0,,{\i1}V tom obrázku je něco,{\i0}
Dialogue: 0,2:17:23.45,2:17:26.78,Main,,0,0,0,,{\i1}co mě nutí{\i0}
Dialogue: 0,2:17:27.42,2:17:29.47,Main,,0,0,0,,{\i1}být veselá.{\i0}
Dialogue: 0,2:17:31.42,2:17:32.59,Main,,0,0,0,,{\i1}Aha.{\i0}
Dialogue: 0,2:17:35.10,2:17:36.55,Main,,0,0,0,,{\i1}Doufám,{\i0}
Dialogue: 0,2:17:37.19,2:17:38.83,Main,,0,0,0,,{\i1}že na mě nikdo{\i0}
Dialogue: 0,2:17:39.62,2:17:40.34,Main,,0,0,0,,{\i1}nezapomene.{\i0}
Dialogue: 0,2:17:45.22,2:17:46.34,Main,,0,0,0,,{\i1}Určitě ne.{\i0}
Dialogue: 0,2:17:47.69,2:17:48.98,Main,,0,0,0,,{\i1}Tvoje tvář,{\i0}
Dialogue: 0,2:17:49.64,2:17:50.62,Main,,0,0,0,,{\i1}tvůj hlas.{\i0}
Dialogue: 0,2:17:50.96,2:17:52.28,Main,,0,0,0,,{\i1}Na všechno tohle{\i0}
Dialogue: 0,2:17:52.61,2:17:54.53,Main,,0,0,0,,{\i1}budou všichni vzpomínat.{\i0}
Dialogue: 0,2:17:58.06,2:18:00.57,Main,,0,0,0,,{\i1}I když tu s nimi nebudu,{\i0}
Dialogue: 0,2:18:02.80,2:18:04.12,Main,,0,0,0,,{\i1}vzpomenou{\i0}
Dialogue: 0,2:18:05.31,2:18:07.62,Main,,0,0,0,,{\i1}si na mě?{\i0}
Dialogue: 0,2:18:13.84,2:18:15.95,Main,,0,0,0,,{\i1}Jak jsem se smála.{\i0}
Dialogue: 0,2:18:21.36,2:18:22.84,Main,,0,0,0,,{\i1}Byla jsem tu{\i0}
Dialogue: 0,2:18:24.32,2:18:26.46,Main,,0,0,0,,{\i1}s nimi.{\i0}
